        function iniciarSwipe(event, id, tipo) {
            touchStartX = event.touches[0].clientX;
            touchStartY = event.touches[0].clientY;
            swipeElement = event.currentTarget;
        }

        function moverSwipe(event) {
            if (!swipeElement) return;
            
            const touchX = event.touches[0].clientX;
            const touchY = event.touches[0].clientY;
            const diffX = touchStartX - touchX;
            const diffY = Math.abs(touchStartY - touchY);
            
            if (diffY < 30 && diffX > 0) {
                const translateX = Math.min(diffX, 80);
                swipeElement.style.transform = `translateX(-${translateX}px)`;
                
                const deleteBtn = swipeElement.querySelector('.swipe-delete');
                if (deleteBtn) {
                    deleteBtn.style.opacity = translateX / 80;
                }
            }
        }

        function finalizarSwipe(event, id, tipo) {
            if (!swipeElement) return;
            
            const touchX = event.changedTouches[0].clientX;
            const diffX = touchStartX - touchX;
            
            if (diffX > 80) {
                swipeElement.style.transform = 'translateX(-100%)';
                swipeElement.style.opacity = '0';
                
                setTimeout(() => {
                    if (tipo === 'gasto') eliminarGasto(id);
                    else if (tipo === 'ingreso') eliminarIngreso(id);
                }, 300);
            } else {
                swipeElement.style.transform = 'translateX(0)';
                const deleteBtn = swipeElement.querySelector('.swipe-delete');
                if (deleteBtn) deleteBtn.style.opacity = '0';
            }
            
            swipeElement = null;
        }

        function obtenerDatosGraficoPeriodo() {
            const { inicioPeriodo, finPeriodo } = obtenerPeriodoPagoActual();
            
            const gastosDelPeriodo = state.gastos.filter(g => {
                if (!g || !g.fecha) return false;
                const f = new Date(g.fecha);
                return f >= inicioPeriodo && f <= finPeriodo;
            });
            
            const gastosPorCategoria = {};
            gastosDelPeriodo.forEach(g => {
                const cat = g.categoria || 'Outros';
                gastosPorCategoria[cat] = (gastosPorCategoria[cat] || 0) + parseFloat(g.monto || 0);
            });
            
            return Object.entries(gastosPorCategoria).map(([nombre, valor]) => ({
                nombre,
                valor
            }));
        }

        function crearGraficoPastel() {
            const canvas = document.getElementById('pieChart');
            if (!canvas) return;
            
            const datos = obtenerDatosGraficoPeriodo();
            if (datos.length === 0) return;
            
            new Chart(canvas, {
                type: 'doughnut',
                data: {
                    labels: datos.map(d => d.nombre),
                    datasets: [{
                        data: datos.map(d => d.valor),
                        backgroundColor: datos.map(d => obtenerColorCategoria(d.nombre)),
                        borderWidth: 3,
                        borderColor: '#0f0f23'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                color: '#ffffff',
                                padding: 15,
                                font: { size: 12 }
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(ctx) {
                                    const total = ctx.dataset.data.reduce((a, b) => a + b, 0);
                                    const pct = ((ctx.parsed / total) * 100).toFixed(1);
                                    return `${ctx.label}: ${ctx.parsed.toFixed(2)}‚Ç¨ (${pct}%)`;
                                }
                            }
                        }
                    }
                }
            });
        }
