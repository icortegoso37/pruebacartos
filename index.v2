                                <div>
                                    <label class="block text-gray-400 text-sm mb-2">L√≠mite gasto diario (0 = sen l√≠mite)</label>
                                    <input 
                                        type="number"
                                        value="${state.modoAhorroExtremo.limiteGastoDiario}"
                                        onchange="state.modoAhorroExtremo.limiteGastoDiario = parseFloat(this.value); guardarEstado();"
                                        class="input-neon w-full px-4 py-3 rounded-xl text-white"
                                        step="0.01"
                                        min="0"
                                        inputmode="decimal"
                                    />
                                </div>
                                
                                <div>
                                    <label class="block text-gray-400 text-sm mb-2">Categor√≠as esenciais</label>
                                    <div class="space-y-2 mb-3">
                                        ${state.modoAhorroExtremo.categoriasEsenciales.map(cat => `
                                            <div class="bg-black/30 rounded-xl p-2 flex justify-between items-center">
                                                <span class="text-white">${cat}</span>
                                                <button onclick="eliminarCategoriaEsencial('${cat}')" class="text-red-500">√ó</button>
                                            </div>
                                        `).join('')}
                                    </div>
                                    
                                    <select 
                                        onchange="if(this.value) { agregarCategoriaEsencial(this.value); this.value = ''; }"
                                        class="input-neon w-full px-4 py-3 rounded-xl text-white"
                                    >
                                        <option value="">Engadir categor√≠a...</option>
                                        ${state.categorias.filter(c => !state.modoAhorroExtremo.categoriasEsenciales.includes(c)).map(cat => `
                                            <option value="${cat}">${cat}</option>
                                        `).join('')}
                                    </select>
                                </div>
                            ` : ''}
                        </div>
                    </div>

                    <!-- Simulador de Data -->
                    <div class="card-neon rounded-2xl p-6">
                        <h3 class="text-xl font-bold mb-4 text-white">üïê Simulador de Data</h3>
                        <p class="text-gray-400 text-sm mb-4">Proba escenarios futuros sen afectar os teus datos reais</p>
                        <div class="space-y-3">
                            <input 
                                type="date"
                                id="fecha-simulada"
                                value="${state.fechaSimulada || ''}"
                                class="input-neon w-full px-4 py-3 rounded-xl text-white"
                            />
                            
                            <button 
                                onclick="
                                    state.fechaSimulada = document.getElementById('fecha-simulada').value;
                                    guardarEstado();
                                    render();
                                    mostrarToast('üìÖ Data simulada aplicada', 'info');
                                "
                                class="btn-neon w-full bg-gradient-to-r from-blue-600 to-cyan-600 px-6 py-3 rounded-xl font-bold"
                            >
                                üöÄ Aplicar Simulaci√≥n
                            </button>
                            
                            ${state.fechaSimulada ? `
                                <button 
                                    onclick="
                                        state.fechaSimulada = null;
                                        document.getElementById('fecha-simulada').value = '';
                                        guardarEstado();
                                        render();
                                        mostrarToast('‚úÖ Data real restaurada', 'success');
                                    "
                                    class="btn-neon w-full bg-gradient-to-r from-gray-600 to-gray-700 px-6 py-3 rounded-xl font-bold"
                                >
                                    ‚ôªÔ∏è Restaurar Data Real
                                </button>
                            ` : ''}
                        </div>
                    </div>

                    <!-- Gesti√≥n de Categor√≠as -->
                    <div class="card-neon rounded-2xl p-6">
                        <h3 class="text-xl font-bold mb-4 text-white">üè∑Ô∏è Xestionar Categor√≠as</h3>
                        <div class="space-y-2 mb-4">
                            ${state.categorias.map(cat => `
                                <div class="bg-black/30 rounded-xl p-3 flex justify-between items-center">
                                    <span class="text-white">${cat}</span>
                                    <button onclick="eliminarCategoria('${cat}')" class="text-red-500 hover:text-red-400">üóëÔ∏è</button>
                                </div>
                            `).join('')}
                        </div>
                        
                        <div class="flex gap-2">
                            <input 
                                type="text"
                                id="nueva-categoria"
                                placeholder="Nova categor√≠a"
                                class="input-neon flex-1 px-4 py-3 rounded-xl text-white"
                            />
                            <button 
                                onclick="agregarCategoria()"
                                class="btn-neon bg-gradient-to-r from-purple-600 to-pink-600 px-6 py-3 rounded-xl font-bold"
                            >
                                ‚ûï
                            </button>
                        </div>
                    </div>

                    <!-- Gesti√≥n de Contas -->
                    <div class="card-neon rounded-2xl p-6">
                        <h3 class="text-xl font-bold mb-4 text-white">üè¶ Xestionar Contas</h3>
                        <div class="space-y-2 mb-4">
                            ${state.cuentas.map(cuenta => `
                                <div class="bg-black/30 rounded-xl p-3 flex justify-between items-center">
                                    <div>
                                        <p class="text-white font-semibold">${cuenta.nombre}</p>
                                        <p class="text-gray-400 text-sm capitalize">${cuenta.tipo}</p>
                                    </div>
                                    ${state.cuentas.length > 1 ? `
                                        <button onclick="eliminarCuenta(${cuenta.id})" class="text-red-500 hover:text-red-400">üóëÔ∏è</button>
                                    ` : ''}
                                </div>
                            `).join('')}
                        </div>
                        
                        <div class="space-y-3">
                            <input 
                                type="text"
                                id="cuenta-nombre"
                                placeholder="Nome da conta"
                                class="input-neon w-full px-4 py-3 rounded-xl text-white"
                            />
                            <select id="cuenta-tipo" class="input-neon w-full px-4 py-3 rounded-xl text-white">
                                <option value="banco">Banco</option>
                                <option value="efectivo">Efectivo</option>
                                <option value="tarjeta">Tarxeta</option>
                            </select>
                            <input 
                                type="number"
                                id="cuenta-saldo"
                                step="0.01"
                                placeholder="Saldo inicial"
                                class="input-neon w-full px-4 py-3 rounded-xl text-white"
                                inputmode="decimal"
                            />
                            <button 
                                onclick="agregarCuenta()"
                                class="btn-neon w-full bg-gradient-to-r from-purple-600 to-pink-600 px-6 py-3 rounded-xl font-bold"
                            >
                                ‚ûï Engadir Conta
                            </button>
                        </div>
                    </div>

                    <!-- Gesti√≥n de Gastos Recurrentes -->
                    <div class="card-neon rounded-2xl p-6">
                        <h3 class="text-xl font-bold mb-4 text-white">üîÑ Xestionar Gastos Recorrentes</h3>
                        <div class="space-y-3">
                            <input 
                                type="text"
                                id="gasto-rec-nombre"
                                placeholder="Nome (ej: Netflix)"
                                class="input-neon w-full px-4 py-3 rounded-xl text-white"
                            />
                            <input 
                                type="number"
                                id="gasto-rec-monto"
                                step="0.01"
                                placeholder="Monto"
                                class="input-neon w-full px-4 py-3 rounded-xl text-white"
                                inputmode="decimal"
                            />
                            <select id="gasto-rec-categoria" class="input-neon w-full px-4 py-3 rounded-xl text-white">
                                ${state.categorias.map(cat => `<option value="${cat}">${cat}</option>`).join('')}
                            </select>
                            <select id="gasto-rec-cuenta" class="input-neon w-full px-4 py-3 rounded-xl text-white">
                                ${state.cuentas.map(c => `<option value="${c.id}">${c.nombre}</option>`).join('')}
                            </select>
                            <button 
                                onclick="agregarGastoRecurrente()"
                                class="btn-neon w-full bg-gradient-to-r from-purple-600 to-pink-600 px-6 py-3 rounded-xl font-bold"
                            >
                                ‚ûï Engadir Gasto Recorrente
                            </button>
                        </div>
                    </div>
                </div>
            `;
        }
// ============================================
        // MODALES
        // ============================================
        function mostrarModalGasto() {
            const modal = document.createElement('div');
            modal.className = 'modal-overlay';
            modal.onclick = (e) => { if (e.target === modal) cerrarModal(); };
            
            modal.innerHTML = `
                <div class="modal-content p-6">
                    <div class="flex items-center justify-between mb-6">
                        <h2 class="text-2xl font-bold text-white">üí∏ Novo Gasto</h2>
                        <button onclick="cerrarModal()" class="text-gray-400 hover:text-white text-2xl">√ó</button>
                    </div>
                    
                    <div class="space-y-4">
                        <div>
                            <label class="block text-gray-400 text-sm mb-2">Texto r√°pido (ej: "30 mercadona")</label>
                            <input 
                                type="text"
                                id="gasto-texto"
                                class="input-neon w-full px-4 py-3 rounded-xl text-white"
                                placeholder="Mercadona 45.50"
                                autofocus
                            />
                        </div>
                        
                        <div class="text-center text-gray-500 text-sm">‚Äî ou ‚Äî</div>
                        
                        <input 
                            type="number"
                            id="gasto-monto"
                            step="0.01"
                            min="0"
                            class="input-neon w-full px-4 py-3 rounded-xl text-white"
                            placeholder="Monto en euros"
                            inputmode="decimal"
                        />
                        
                        <select id="gasto-categoria" class="input-neon w-full px-4 py-3 rounded-xl text-white">
                            ${state.categorias.map(cat => `<option value="${cat}">${cat}</option>`).join('')}
                        </select>
                        
                        <select id="gasto-cuenta" class="input-neon w-full px-4 py-3 rounded-xl text-white">
                            ${state.cuentas.map(c => `<option value="${c.id}">${c.nombre}</option>`).join('')}
                        </select>
                        
                        <button 
                            onclick="agregarGasto()"
                            class="btn-neon w-full bg-gradient-to-r from-red-600 to-pink-600 px-6 py-4 rounded-xl font-bold text-lg"
                        >
                            ‚úÖ Engadir Gasto
                        </button>
                    </div>
                </div>
            `;
            
            document.body.appendChild(modal);
            setTimeout(() => {
                const input = document.getElementById('gasto-texto');
                if (input) input.focus();
            }, 100);
        }

        function mostrarModalIngreso() {
            const modal = document.createElement('div');
            modal.className = 'modal-overlay';
            modal.onclick = (e) => { if (e.target === modal) cerrarModal(); };
            
            modal.innerHTML = `
                <div class="modal-content p-6">
                    <div class="flex items-center justify-between mb-6">
                        <h2 class="text-2xl font-bold text-white">üí∞ Novo Ingreso</h2>
                        <button onclick="cerrarModal()" class="text-gray-400 hover:text-white text-2xl">√ó</button>
                    </div>
                    
                    <div class="space-y-4">
                        <input 
                            type="text"
                            id="ingreso-descripcion"
                            class="input-neon w-full px-4 py-3 rounded-xl text-white"
                            placeholder="Descrici√≥n"
                            autofocus
                        />
                        
                        <input 
                            type="number"
                            id="ingreso-monto"
                            step="0.01"
                            min="0"
                            class="input-neon w-full px-4 py-3 rounded-xl text-white"
                            placeholder="Monto en euros"
                            inputmode="decimal"
                        />
                        
                        <select id="ingreso-cuenta" class="input-neon w-full px-4 py-3 rounded-xl text-white">
                            ${state.cuentas.map(c => `<option value="${c.id}">${c.nombre}</option>`).join('')}
                        </select>
                        
                        <button 
                            onclick="agregarIngreso()"
                            class="btn-neon w-full bg-gradient-to-r from-green-600 to-emerald-600 px-6 py-4 rounded-xl font-bold text-lg"
                        >
                            ‚úÖ Engadir Ingreso
                        </button>
                    </div>
                </div>
            `;
            
            document.body.appendChild(modal);
            setTimeout(() => {
                const input = document.getElementById('ingreso-descripcion');
                if (input) input.focus();
            }, 100);
        }

        // ============================================
        // INICIALIZACI√ìN
        // ============================================
        render();
    </script>
</body>
