            </div>
            <div class="nav-item" onclick="cambiarVista('axustes')" data-view="axustes">
                <div class="nav-icon">‚öôÔ∏è</div>
                <div class="nav-label">Axustes</div>
            </div>
        </div>
    </div>

    <script>
// Estado global
        let state = {
            sueldo: localStorage.getItem('sueldo') || '',
            diaCobro: localStorage.getItem('diaCobro') || '',
            gastosRecurrentes: JSON.parse(localStorage.getItem('gastosRecurrentes') || '[]'),
            gastos: JSON.parse(localStorage.getItem('gastos') || '[]'),
            ingresos: JSON.parse(localStorage.getItem('ingresos') || '[]'),
            ajustes: JSON.parse(localStorage.getItem('ajustes') || '[]'),
            objetivosAhorro: JSON.parse(localStorage.getItem('objetivosAhorro') || '[]'),
            categorias: JSON.parse(localStorage.getItem('categorias') || '["Alimentaci√≥n", "Transporte", "Entretenimiento", "Salud", "Hogar", "Ropa", "Outros"]'),
            cuentas: JSON.parse(localStorage.getItem('cuentas') || '[{"id": 1, "nombre": "Conta Principal", "tipo": "banco", "saldoInicial": 0, "saldo": 0}]'),
            alertasConfig: JSON.parse(localStorage.getItem('alertasConfig') || '{"diasParaCobro": 3, "porcentajeGastoMitadMes": 50, "alertaObjetivosEnRiesgo": true, "diasSinGastos": 7}'),
            vista: 'principal',
            alertasMostradas: [],
            ultimaActualizacionRecurrentes: localStorage.getItem('ultimaActualizacionRecurrentes') || '',
            editando: null,
            ultimoMesConfirmado: localStorage.getItem('ultimoMesConfirmado') || '',
            sueldoConfirmadoEsteMes: localStorage.getItem('sueldoConfirmadoEsteMes') === 'true',
            modoAhorroExtremo: JSON.parse(localStorage.getItem('modoAhorroExtremo') || '{"activo": false, "categoriasEsenciales": ["Alimentaci√≥n", "Salud", "Transporte", "Hogar"], "limiteGastoDiario": 0}'),
            recordatorios: JSON.parse(localStorage.getItem('recordatorios') || '[]'),
            fechaSimulada: localStorage.getItem('fechaSimulada') || null,
            notificacionesActivadas: localStorage.getItem('notificacionesActivadas') === 'true',
            backupConfig: JSON.parse(localStorage.getItem('backupConfig') || '{"activo": false, "frecuencia": "semanal", "ultimoBackup": null}'),
            eventosCalendario: JSON.parse(localStorage.getItem('eventosCalendario') || '[]')
        };

        let saveTimeout = null;
        let touchStartX = 0;
        let touchStartY = 0;
        let swipeElement = null;

        const palabrasClave = {
            'Alimentaci√≥n': ['supermercado', 'mercado', 'mercadona', 'carrefour', 'lidl', 'comida', 'cena', 'restaurante'],
            'Transporte': ['gasolina', 'diesel', 'bus', 'metro', 'taxi', 'uber', 'parking'],
            'Entretenimiento': ['cine', 'netflix', 'spotify', 'xogo', 'videoxogo'],
            'Salud': ['farmacia', 'm√©dico', 'hospital', 'medicamento', 'ximnasio'],
            'Hogar': ['aluguer', 'luz', 'auga', 'gas', 'internet', 'wifi'],
            'Ropa': ['zara', 'roupa', 'zapatos']
        };

        state.cuentas.forEach(cuenta => {
            if (cuenta.saldoInicial === undefined) {
                cuenta.saldoInicial = cuenta.saldo || 0;
            }
        });

        setTimeout(() => {
            recalcularSaldosCuentas();
            verificarConfirmacionSueldo();
            verificarAlertas();
            verificarRecordatorios();
            if (state.backupConfig.activo) verificarBackupAutomatico();
            registrarServiceWorker();
        }, 0);

        function registrarServiceWorker() {
            if ('serviceWorker' in navigator) {
                const swCode = `
                    self.addEventListener('install', (e) => {
                        e.waitUntil(caches.open('cartinos-v1').then(c => c.addAll(['/'])));
                    });
                    self.addEventListener('fetch', (e) => {
                        e.respondWith(caches.match(e.request).then(r => r || fetch(e.request)));
                    });
                `;
                const blob = new Blob([swCode], { type: 'application/javascript' });
                const swUrl = URL.createObjectURL(blob);
                navigator.serviceWorker.register(swUrl).catch(() => {});
            }
        }

        function guardarEstadoDebounce() {
            if (saveTimeout) clearTimeout(saveTimeout);
            saveTimeout = setTimeout(() => guardarEstado(), 1000);
        }

        function guardarEstado() {
            try {
                localStorage.setItem('sueldo', state.sueldo);
                localStorage.setItem('diaCobro', state.diaCobro);
                localStorage.setItem('gastosRecurrentes', JSON.stringify(state.gastosRecurrentes));
                localStorage.setItem('gastos', JSON.stringify(state.gastos));
                localStorage.setItem('ingresos', JSON.stringify(state.ingresos));
                localStorage.setItem('ajustes', JSON.stringify(state.ajustes));
                localStorage.setItem('objetivosAhorro', JSON.stringify(state.objetivosAhorro));
                localStorage.setItem('categorias', JSON.stringify(state.categorias));
                localStorage.setItem('cuentas', JSON.stringify(state.cuentas));
                localStorage.setItem('alertasConfig', JSON.stringify(state.alertasConfig));
                localStorage.setItem('ultimaActualizacionRecurrentes', state.ultimaActualizacionRecurrentes);
                localStorage.setItem('ultimoMesConfirmado', state.ultimoMesConfirmado);
                localStorage.setItem('sueldoConfirmadoEsteMes', state.sueldoConfirmadoEsteMes);
                localStorage.setItem('modoAhorroExtremo', JSON.stringify(state.modoAhorroExtremo));
                localStorage.setItem('recordatorios', JSON.stringify(state.recordatorios));
                localStorage.setItem('fechaSimulada', state.fechaSimulada);
                localStorage.setItem('notificacionesActivadas', state.notificacionesActivadas);
                localStorage.setItem('backupConfig', JSON.stringify(state.backupConfig));
                localStorage.setItem('eventosCalendario', JSON.stringify(state.eventosCalendario));
            } catch (e) {
                if (e.name === 'QuotaExceededError') {
                    mostrarToast('‚ö†Ô∏è Almacenamento cheo!', 'warning');
                }
            }
        }
// ============================================
        // FUNCIONES DE DATA E PER√çODO
        // ============================================
        function obtenerFechaActual() {
            return state.fechaSimulada ? new Date(state.fechaSimulada) : new Date();
        }

        function obtenerPeriodoPagoActual() {
            const hoy = obtenerFechaActual();
            const diaActual = hoy.getDate();
            const mesActual = hoy.getMonth();
            const a√±oActual = hoy.getFullYear();
            const diaCobro = parseInt(state.diaCobro || 1);
            
            let inicioPeriodo, finPeriodo;
            
            if (diaActual >= diaCobro) {
                inicioPeriodo = new Date(a√±oActual, mesActual, diaCobro);
                finPeriodo = new Date(a√±oActual, mesActual + 1, diaCobro - 1);
            } else {
                inicioPeriodo = new Date(a√±oActual, mesActual - 1, diaCobro);
                finPeriodo = new Date(a√±oActual, mesActual, diaCobro - 1);
            }
            
            return { inicioPeriodo, finPeriodo };
        }

        function obtenerIdentificadorPeriodo() {
            const { inicioPeriodo } = obtenerPeriodoPagoActual();
            return `${inicioPeriodo.getFullYear()}-${inicioPeriodo.getMonth()}-${inicioPeriodo.getDate()}`;
        }

        function formatearFecha(fecha) {
            const f = new Date(fecha);
            return f.toLocaleDateString('gl-ES', { day: '2-digit', month: '2-digit', year: 'numeric' });
        }

        // ============================================
        // CONFIRMACI√ìN DE SUELDO
        // ============================================
        function verificarConfirmacionSueldo() {
            if (!state.sueldo || !state.diaCobro) return;

            const periodoActualId = obtenerIdentificadorPeriodo();
            
            if (state.ultimoMesConfirmado !== periodoActualId) {
                state.sueldoConfirmadoEsteMes = false;
                state.ultimoMesConfirmado = periodoActualId;
                guardarEstado();
            }

            if (!state.sueldoConfirmadoEsteMes) {
                mostrarModalConfirmacionSueldo();
            }
        }

        function mostrarModalConfirmacionSueldo() {
            const modal = document.createElement('div');
            modal.className = 'modal-overlay';
            modal.onclick = (e) => { if (e.target === modal) cerrarModal(); };
            
            modal.innerHTML = `
                <div class="modal-content p-6">
                    <h2 class="text-3xl font-bold mb-4 text-center" style="background: linear-gradient(45deg, #FF006E, #8338EC, #3A86FF, #FFBE0B); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                        üí∞ Confirmar Soldo
                    </h2>
                    <p class="text-gray-300 text-center mb-6">
                        Novo per√≠odo de cobro! Confirmas o teu soldo?
                    </p>
                    
                    <div class="bg-black/30 rounded-xl p-6 mb-6 text-center">
                        <p class="text-gray-400 text-sm mb-2">Soldo configurado:</p>
                        <p class="text-4xl font-bold text-white">${parseFloat(state.sueldo).toFixed(2)}‚Ç¨</p>
                    </div>

                    <div class="space-y-3">
                        <button 
                            onclick="confirmarSueldo(${state.sueldo})"
                            class="btn-neon w-full bg-gradient-to-r from-green-600 to-emerald-600 px-6 py-4 rounded-xl font-bold text-lg"
                        >
                            ‚úÖ Si, confirmar ${parseFloat(state.sueldo).toFixed(2)}‚Ç¨
                        </button>
                        
                        <button 
                            onclick="editarYConfirmarSueldo()"
                            class="btn-neon w-full bg-gradient-to-r from-blue-600 to-cyan-600 px-6 py-4 rounded-xl font-bold"
                        >
                            ‚úèÔ∏è Editar monto
                        </button>
                        
                        <button 
                            onclick="cerrarModal()"
                            class="btn-neon w-full bg-gradient-to-r from-gray-600 to-gray-700 px-6 py-4 rounded-xl font-bold"
                        >
                            ‚è≠Ô∏è Recordar m√°is tarde
                        </button>
                    </div>
                </div>
            `;
            document.body.appendChild(modal);
        }

        function confirmarSueldo(monto) {
            const { inicioPeriodo } = obtenerPeriodoPagoActual();
            const cuentaPrincipal = state.cuentas.find(c => c.id === 1) || state.cuentas[0];
            
            state.ingresos.push({
                id: Date.now(),
                descripcion: 'üí∞ Soldo do per√≠odo',
                monto: parseFloat(monto),
                fecha: inicioPeriodo.toISOString().split('T')[0],
                cuentaId: cuentaPrincipal.id,
                confirmado: true
            });

            state.sueldoConfirmadoEsteMes = true;
            state.ultimoMesConfirmado = obtenerIdentificadorPeriodo();
            
            guardarEstado();
            recalcularSaldosCuentas();
            cerrarModal();
            render();
            mostrarToast('‚úÖ Soldo confirmado', 'success');
            
            if (state.notificacionesActivadas) {
                enviarNotificacion('Soldo confirmado', `${parseFloat(monto).toFixed(2)}‚Ç¨ engadido`);
            }
        }

        function editarYConfirmarSueldo() {
            cerrarModal();
            const nuevoMonto = prompt('Ingresa o monto real do teu soldo:', state.sueldo);
            if (nuevoMonto && !isNaN(nuevoMonto) && parseFloat(nuevoMonto) > 0) {
                state.sueldo = nuevoMonto;
                guardarEstado();
                confirmarSueldo(nuevoMonto);
            } else if (nuevoMonto !== null) {
                mostrarToast('‚ùå Monto inv√°lido', 'error');
                setTimeout(() => verificarConfirmacionSueldo(), 500);
            }
        }

        function cerrarModal() {
            document.querySelectorAll('.modal-overlay').forEach(m => m.remove());
        }

        // ============================================
        // MODO AHORRO EXTREMO
        // ============================================
        function validarGastoModoAhorroExtremo(categoria, monto) {
            if (!state.modoAhorroExtremo.activo) return { permitido: true };

            const esEsencial = state.modoAhorroExtremo.categoriasEsenciales.includes(categoria);
            const stats = calcularEstadisticas();
            const seHaPasado = stats.gastoPorDiaRestante <= 0;

            if (esEsencial) return { permitido: true };

            if (seHaPasado) {
                return {
                    permitido: false,
                    mensaje: 'üö´ MODO AHORRO EXTREMO: Non podes engadir gastos non esenciais.',
                    tipo: 'bloqueado'
                };
            }

            if (state.modoAhorroExtremo.limiteGastoDiario > 0) {
                const hoy = obtenerFechaActual();
                const gastosHoy = state.gastos.filter(g => {
                    if (!g || !g.fecha) return false;
                    return new Date(g.fecha).toDateString() === hoy.toDateString();
                });
                const totalGastadoHoy = gastosHoy.reduce((sum, g) => sum + parseFloat(g.monto || 0), 0);

                if (totalGastadoHoy + parseFloat(monto) > state.modoAhorroExtremo.limiteGastoDiario) {
                    return {
                        permitido: false,
                        mensaje: `üö´ Superar√≠as o l√≠mite diario de ${state.modoAhorroExtremo.limiteGastoDiario.toFixed(2)}‚Ç¨`,
                        tipo: 'bloqueado'
                    };
                }
            }

            return { permitido: true };
        }

        function toggleModoAhorroExtremo() {
            state.modoAhorroExtremo.activo = !state.modoAhorroExtremo.activo;
            guardarEstado();
            render();
            mostrarToast(state.modoAhorroExtremo.activo ? 'üî• MODO AHORRO EXTREMO ACTIVADO' : '‚úÖ Modo desactivado', 'warning');
        }

        function agregarCategoriaEsencial(categoria) {
            if (!state.modoAhorroExtremo.categoriasEsenciales.includes(categoria)) {
