        function importarDatos() {
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = '.json';
            
            input.onchange = (e) => {
                const file = e.target.files[0];
                if (!file) return;
                
                const reader = new FileReader();
                reader.onload = (event) => {
                    try {
                        const datos = JSON.parse(event.target.result);
                        
                        if (!datos.version || !datos.datos) {
                            throw new Error('Formato inv√°lido');
                        }
                        
                        if (confirm('ATENCI√ìN: Isto substituir√° todos os datos actuais. Seguro?')) {
                            Object.assign(state, datos.datos);
                            guardarEstado();
                            recalcularSaldosCuentas();
                            render();
                            mostrarToast('‚úÖ Datos importados correctamente', 'success');
                        }
                    } catch (error) {
                        mostrarToast('‚ùå Arquivo inv√°lido', 'error');
                    }
                };
                reader.readAsText(file);
            };
            
            input.click();
        }

        function verificarBackupAutomatico() {
            if (!state.backupConfig.activo) return;
            
            const ahora = new Date();
            const ultimo = state.backupConfig.ultimoBackup ? new Date(state.backupConfig.ultimoBackup) : null;
            
            let debeHacer = false;
            
            if (!ultimo) {
                debeHacer = true;
            } else {
                const dias = Math.floor((ahora - ultimo) / (1000 * 60 * 60 * 24));
                
                if (state.backupConfig.frecuencia === 'diario' && dias >= 1) debeHacer = true;
                else if (state.backupConfig.frecuencia === 'semanal' && dias >= 7) debeHacer = true;
                else if (state.backupConfig.frecuencia === 'mensual' && dias >= 30) debeHacer = true;
            }
            
            if (debeHacer) {
                exportarDatosJSON();
                state.backupConfig.ultimoBackup = ahora.toISOString();
                guardarEstado();
            }
        }

