    <script>
        // Estado global
        let state = {
            sueldo: localStorage.getItem('sueldo') || '',
            diaCobro: localStorage.getItem('diaCobro') || '',
            gastosRecurrentes: JSON.parse(localStorage.getItem('gastosRecurrentes') || '[]'),
            gastos: JSON.parse(localStorage.getItem('gastos') || '[]'),
            ingresos: JSON.parse(localStorage.getItem('ingresos') || '[]'),
            ajustes: JSON.parse(localStorage.getItem('ajustes') || '[]'),
            objetivosAhorro: JSON.parse(localStorage.getItem('objetivosAhorro') || '[]'),
            categorias: JSON.parse(localStorage.getItem('categorias') || '["Alimentaci√≥n", "Transporte", "Entretenimiento", "Salud", "Hogar", "Ropa", "Otros"]'),
            cuentas: JSON.parse(localStorage.getItem('cuentas') || '[{"id": 1, "nombre": "Cuenta Principal", "tipo": "banco", "saldoInicial": 0, "saldo": 0}]'),
            alertasConfig: JSON.parse(localStorage.getItem('alertasConfig') || '{"diasParaCobro": 3, "porcentajeGastoMitadMes": 50, "alertaObjetivosEnRiesgo": true}'),
            vista: 'principal',
            alertasMostradas: [],
            ultimaActualizacionRecurrentes: localStorage.getItem('ultimaActualizacionRecurrentes') || '',
            editando: null,
            ultimaInteraccion: localStorage.getItem('ultimaInteraccion') || new Date().toISOString(),
            patronesDetectados: JSON.parse(localStorage.getItem('patronesDetectados') || '[]'),
            gastosFrecuentes: JSON.parse(localStorage.getItem('gastosFrecuentes') || '[]'),
            buscador: '',
            mesCalendario: new Date()
        };

        let saveTimeout = null;
        let swipeStartX = 0;
        let swipeElement = null;
        let longPressTimer = null;
        let ptrStartY = 0;
        let ptrPulling = false;

        // Migraci√≥n
        state.cuentas.forEach(cuenta => {
            if (cuenta.saldoInicial === undefined) {
                cuenta.saldoInicial = cuenta.saldo || 0;
            }
        });

        // Palabras clave para detecci√≥n inteligente
        const palabrasClave = {
            'Alimentaci√≥n': ['supermercado', 'mercado', 'mercadona', 'carrefour', 'lidl', 'aldi', 'dia', 'comida', 'cena', 'desayuno', 'almuerzo', 'restaurante', 'bar', 'cafeter√≠a', 'caf√©', 'pizza', 'hamburgues', 'mcdonalds', 'burger', 'kfc', 'telepizza'],
            'Transporte': ['gasolina', 'diesel', 'combustible', 'bus', 'metro', 'taxi', 'uber', 'cabify', 'parking', 'aparcamiento', 'peaje', 'tren', 'renfe', 'avi√≥n', 'vueling', 'ryanair'],
            'Entretenimiento': ['cine', 'teatro', 'concierto', 'netflix', 'spotify', 'hbo', 'disney', 'prime', 'youtube', 'juego', 'videojuego', 'steam', 'playstation', 'xbox', 'ocio'],
            'Salud': ['farmacia', 'm√©dico', 'doctor', 'hospital', 'cl√≠nica', 'medicamento', 'medicina', 'seguro', 'gimnasio', 'deporte', 'fitness'],
            'Hogar': ['alquiler', 'hipoteca', 'luz', 'agua', 'gas', 'internet', 'wifi', 'm√≥vil', 'tel√©fono', 'ikea', 'leroy', 'bricolaje', 'ferreter√≠a', 'mueble'],
            'Ropa': ['zara', 'hm', 'primark', 'mango', 'ropa', 'zapatillas', 'zapatos', 'calzado', 'vestido', 'pantal√≥n', 'camisa', 'abrigo']
        };

        // Funci√≥n de debounce para guardar
        function guardarEstadoDebounce() {
            if (saveTimeout) clearTimeout(saveTimeout);
            saveTimeout = setTimeout(() => guardarEstado(), 1000);
        }

        // Guardar estado
        function guardarEstado() {
            localStorage.setItem('sueldo', state.sueldo);
            localStorage.setItem('diaCobro', state.diaCobro);
            localStorage.setItem('gastosRecurrentes', JSON.stringify(state.gastosRecurrentes));
            localStorage.setItem('gastos', JSON.stringify(state.gastos));
            localStorage.setItem('ingresos', JSON.stringify(state.ingresos));
            localStorage.setItem('ajustes', JSON.stringify(state.ajustes));
            localStorage.setItem('objetivosAhorro', JSON.stringify(state.objetivosAhorro));
            localStorage.setItem('categorias', JSON.stringify(state.categorias));
            localStorage.setItem('cuentas', JSON.stringify(state.cuentas));
            localStorage.setItem('alertasConfig', JSON.stringify(state.alertasConfig));
            localStorage.setItem('ultimaActualizacionRecurrentes', state.ultimaActualizacionRecurrentes);
            localStorage.setItem('ultimaInteraccion', state.ultimaInteraccion);
            localStorage.setItem('patronesDetectados', JSON.stringify(state.patronesDetectados));
            localStorage.setItem('gastosFrecuentes', JSON.stringify(state.gastosFrecuentes));
        }

        // Toast notification
        function mostrarToast(mensaje, tipo = 'success') {
            const toast = document.createElement('div');
            toast.className = `toast ${tipo}`;
            toast.textContent = mensaje;
            document.body.appendChild(toast);
            
            setTimeout(() => {
                toast.remove();
            }, 3000);
        }

        // Parser inteligente
        function parsearTextoInteligente(texto) {
            if (!texto) return null;
            
            texto = texto.toLowerCase().trim();
            const regexMonto = /(\d+(?:[.,]\d+)?)/g;
            const montos = texto.match(regexMonto);
            let monto = null;
            
            if (montos && montos.length > 0) {
                monto = parseFloat(montos[montos.length - 1].replace(',', '.'));
            }
            
            let categoriaDetectada = 'Otros';
            for (const [categoria, palabras] of Object.entries(palabrasClave)) {
                for (const palabra of palabras) {
                    if (texto.includes(palabra)) {
                        categoriaDetectada = categoria;
                        break;
                    }
                }
                if (categoriaDetectada !== 'Otros') break;
            }
            
            let descripcion = texto;
            if (monto && montos) {
                const ultimoMonto = montos[montos.length - 1];
                const index = descripcion.lastIndexOf(ultimoMonto);
                if (index !== -1) {
                    descripcion = descripcion.substring(0, index) + descripcion.substring(index + ultimoMonto.length);
                }
            }
            descripcion = descripcion.trim();
            
            return {
                descripcion: descripcion || 'Sin descripci√≥n',
                monto: monto,
                categoria: categoriaDetectada
            };
        }

        // Sugerir categor√≠a basada en historial - MEJORADO CHECKPOINT 2
        function sugerirCategoria(descripcion) {
            if (!descripcion) return state.categorias[0] || 'Otros';
            
            const desc = descripcion.toLowerCase().trim();
            
            // PASO 1: Buscar por palabras clave (m√°s espec√≠fico)
            for (const [categoria, palabras] of Object.entries(palabrasClave)) {
                for (const palabra of palabras) {
                    if (desc.includes(palabra)) {
                        return categoria;
                    }
                }
            }
            
            // PASO 2: Buscar en historial por descripci√≥n similar
            const similitudMinima = 0.6;
            let mejorCoincidencia = null;
            let mejorSimilitud = 0;
            
            state.gastos.forEach(g => {
                if (!g.descripcion || !g.categoria) return;
                
                const descGasto = g.descripcion.toLowerCase().trim();
                
                // Calcular similitud (algoritmo simple basado en palabras comunes)
                const palabrasDesc = desc.split(' ').filter(p => p.length > 2);
                const palabrasGasto = descGasto.split(' ').filter(p => p.length > 2);
                
                let palabrasComunes = 0;
                palabrasDesc.forEach(p => {
                    if (palabrasGasto.some(pg => pg.includes(p) || p.includes(pg))) {
                        palabrasComunes++;
                    }
                });
                
                const similitud = palabrasComunes / Math.max(palabrasDesc.length, palabrasGasto.length);
                
                if (similitud > mejorSimilitud && similitud >= similitudMinima) {
                    mejorSimilitud = similitud;
                    mejorCoincidencia = g.categoria;
                }
            });
            
            if (mejorCoincidencia) {
                return mejorCoincidencia;
            }
            
            // PASO 3: Buscar por categor√≠a m√°s usada con esa descripci√≥n exacta
            const categoriasUsadas = {};
            state.gastos.forEach(g => {
                if (g.descripcion && g.descripcion.toLowerCase().includes(desc)) {
                    categoriasUsadas[g.categoria] = (categoriasUsadas[g.categoria] || 0) + 1;
                }
            });
            
            if (Object.keys(categoriasUsadas).length > 0) {
                return Object.entries(categoriasUsadas)
                    .sort((a, b) => b[1] - a[1])[0][0];
            }
            
            // PASO 4: Categor√≠a por defecto
            return state.categorias[0] || 'Otros';
        }

        // Obtener per√≠odo de pago
        function obtenerPeriodoPagoActual() {
            const hoy = new Date();
            const diaActual = hoy.getDate();
            const mesActual = hoy.getMonth();
            const a√±oActual = hoy.getFullYear();
            const diaCobro = parseInt(state.diaCobro || 1);
            
            let inicioPeriodo, finPeriodo;
            
            if (diaActual >= diaCobro) {
                inicioPeriodo = new Date(a√±oActual, mesActual, diaCobro);
                finPeriodo = new Date(a√±oActual, mesActual + 1, diaCobro - 1);
            } else {
                inicioPeriodo = new Date(a√±oActual, mesActual - 1, diaCobro);
                finPeriodo = new Date(a√±oActual, mesActual, diaCobro - 1);
            }
            
            return { inicioPeriodo, finPeriodo };
        }

        // Calcular saldo de cuenta
        function calcularSaldoCuenta(cuentaId) {
            const cuenta = state.cuentas.find(c => c.id === cuentaId);
            if (!cuenta) return 0;
            
            let saldo = parseFloat(cuenta.saldoInicial || 0);
            
            state.ingresos.forEach(i => {
                if (i.cuentaId === cuentaId) saldo += parseFloat(i.monto);
            });
            
            state.gastos.forEach(g => {
                if (g.cuentaId === cuentaId) saldo -= parseFloat(g.monto);
            });
            
            state.ajustes.forEach(a => {
                if (a.cuentaId === cuentaId) {
                    const monto = parseFloat(a.monto);
                    saldo += (a.tipo === 'positivo' ? monto : -monto);
                }
            });
            
            return saldo;
        }

        // Recalcular saldos
        function recalcularSaldosCuentas() {
            state.cuentas.forEach(cuenta => {
                cuenta.saldo = calcularSaldoCuenta(cuenta.id);
            });
        }

        // Procesar gastos recurrentes
        function procesarGastosRecurrentes() {
            const { inicioPeriodo } = obtenerPeriodoPagoActual();
            const inicioPeriodoStr = inicioPeriodo.toISOString().split('T')[0];
            
            if (state.ultimaActualizacionRecurrentes === inicioPeriodoStr) return;
            
            state.gastosRecurrentes.forEach(gr => {
                state.gastos.push({
                    descripcion: `${gr.nombre} (Recurrente)`,
                    monto: gr.monto,
                    categoria: gr.categoria,
                    cuentaId: gr.cuentaId || state.cuentas[0]?.id || 1,
                    fecha: inicioPeriodo.toISOString(),
                    id: Date.now() + Math.random(),
                    esRecurrente: true
                });
            });
            
            state.ultimaActualizacionRecurrentes = inicioPeriodoStr;
            recalcularSaldosCuentas();
            guardarEstado();
        }

        // Calcular estad√≠sticas
        function calcularEstadisticas() {
            const hoy = new Date();
            const { inicioPeriodo, finPeriodo } = obtenerPeriodoPagoActual();
            
            const diasRestantes = Math.ceil((finPeriodo - hoy) / (1000 * 60 * 60 * 24)) + 1;
            const diasTotalesPeriodo = Math.ceil((finPeriodo - inicioPeriodo) / (1000 * 60 * 60 * 24)) + 1;
            const diasTranscurridos = diasTotalesPeriodo - diasRestantes;
            
            const totalGastosRecurrentes = state.gastosRecurrentes.reduce((sum, gasto) => sum + parseFloat(gasto.monto || 0), 0);
            
            const gastosDelPeriodo = state.gastos.filter(gasto => {
                const fechaGasto = new Date(gasto.fecha);
                return fechaGasto >= inicioPeriodo && fechaGasto <= finPeriodo;
            });
            
            const totalGastosVariables = gastosDelPeriodo.reduce((sum, gasto) => sum + parseFloat(gasto.monto || 0), 0);
            
            const ingresosDelPeriodo = state.ingresos.filter(ingreso => {
                const fechaIngreso = new Date(ingreso.fecha);
                return fechaIngreso >= inicioPeriodo && fechaIngreso <= finPeriodo;
            });
            const totalIngresos = ingresosDelPeriodo.reduce((sum, ingreso) => sum + parseFloat(ingreso.monto || 0), 0);
            
            const ajustesDelPeriodo = state.ajustes.filter(ajuste => {
                const fechaAjuste = new Date(ajuste.fecha);
                return fechaAjuste >= inicioPeriodo && fechaAjuste <= finPeriodo;
            });
            const totalAjustes = ajustesDelPeriodo.reduce((sum, ajuste) => {
                const monto = parseFloat(ajuste.monto || 0);
                return sum + (ajuste.tipo === 'positivo' ? monto : -monto);
            }, 0);
            
            let ahorroDiarioNecesario = 0;
            state.objetivosAhorro.forEach(objetivo => {
                if (objetivo.activo !== false) {
                    const fechaLimite = new Date(objetivo.fechaLimite);
                    const diasParaObjetivo = Math.ceil((fechaLimite - hoy) / (1000 * 60 * 60 * 24));
                    const montoRestante = parseFloat(objetivo.metaMonto) - parseFloat(objetivo.montoAhorrado || 0);
                    
                    if (diasParaObjetivo > 0 && montoRestante > 0) {
                        ahorroDiarioNecesario += montoRestante / diasParaObjetivo;
                    }
                }
            });
            
            // Disponible real = suma de saldos actuales de todas las cuentas
const disponibleTotal = state.cuentas.reduce((sum, c) => sum + (parseFloat(c.saldo) || 0), 0);
            const gastoPorDiaRestante = diasRestantes > 0 ? (disponibleTotal - (ahorroDiarioNecesario * diasRestantes)) / diasRestantes : 0;
            
            const totalGastos = totalGastosRecurrentes + totalGastosVariables;
            // Ingresos del per√≠odo = solo los ingresos registrados
const ingresoTotal = totalIngresos;
            const porcentajeGastado = ingresoTotal > 0 ? (totalGastos / ingresoTotal) * 100 : 0;
            
            return {
                diasRestantes,
                diasTotalesPeriodo,
                diasTranscurridos,
                totalGastosRecurrentes,
                totalGastosVariables,
                totalIngresos,
                totalAjustes,
                disponibleTotal,
                gastoPorDiaRestante: Math.max(0, gastoPorDiaRestante),
                ahorroDiarioNecesario,
                totalGastos,
                ingresoTotal,
                porcentajeGastado,
                inicioPeriodo,
                finPeriodo
            };
        }

        // Detectar patrones - MEJORADO CHECKPOINT 2
        function detectarPatrones() {
            if (state.gastos.length < 5) {
                state.patronesDetectados = [];
                return;
            }
            
            const patrones = [];
            const gastosPorDia = {};
            const gastosPorCategoria = {};
            const gastosPorDescripcion = {};
            
            // Analizar √∫ltimos 60 d√≠as
            const hace60Dias = new Date();
            hace60Dias.setDate(hace60Dias.getDate() - 60);
            
            const gastosRecientes = state.gastos.filter(g => new Date(g.fecha) >= hace60Dias);
            
            gastosRecientes.forEach(g => {
                const fecha = new Date(g.fecha);
                const diaSemana = fecha.toLocaleDateString('es-ES', { weekday: 'long' });
                const categoria = g.categoria || 'Otros';
                const desc = g.descripcion.toLowerCase();
                
                // Por d√≠a de semana
                if (!gastosPorDia[diaSemana]) gastosPorDia[diaSemana] = [];
                gastosPorDia[diaSemana].push(parseFloat(g.monto));
                
                // Por categor√≠a con detalle
                if (!gastosPorCategoria[categoria]) gastosPorCategoria[categoria] = {
                    total: 0,
                    gastos: [],
                    dias: {}
                };
                gastosPorCategoria[categoria].total += parseFloat(g.monto);
                gastosPorCategoria[categoria].gastos.push(g);
                
                if (!gastosPorCategoria[categoria].dias[diaSemana]) {
                    gastosPorCategoria[categoria].dias[diaSemana] = { count: 0, total: 0 };
                }
                gastosPorCategoria[categoria].dias[diaSemana].count++;
                gastosPorCategoria[categoria].dias[diaSemana].total += parseFloat(g.monto);
                
                // Por descripci√≥n (para detectar gastos repetidos)
                if (!gastosPorDescripcion[desc]) gastosPorDescripcion[desc] = [];
                gastosPorDescripcion[desc].push(g);
            });
            
            // PATR√ìN 1: D√≠a con m√°s gastos
            let diaMasGastos = null;
            let maxGastos = 0;
            let totalDiaMasGastos = 0;
            
            Object.entries(gastosPorDia).forEach(([dia, gastos]) => {
                if (gastos.length > maxGastos) {
                    maxGastos = gastos.length;
                    diaMasGastos = dia;
                    totalDiaMasGastos = gastos.reduce((a, b) => a + b, 0);
                }
            });
            
            if (diaMasGastos && maxGastos >= 3) {
                const promedio = totalDiaMasGastos / maxGastos;
                patrones.push({
                    tipo: 'dia-frecuente',
                    mensaje: `Los ${diaMasGastos} sueles gastar ${promedio.toFixed(2)}‚Ç¨ de media`,
                    icono: 'üìÖ'
                });
            }
            
            // PATR√ìN 2: Categor√≠a + D√≠a espec√≠fico (mejorado)
            Object.entries(gastosPorCategoria).forEach(([categoria, data]) => {
                const diasOrdenados = Object.entries(data.dias)
                    .filter(([_, info]) => info.count >= 2)
                    .sort((a, b) => b[1].count - a[1].count);
                
                if (diasOrdenados.length > 0) {
                    const [dia, info] = diasOrdenados[0];
                    const promedio = info.total / info.count;
                    patrones.push({
                        tipo: 'categoria-dia',
                        mensaje: `Los ${dia} gastas ${promedio.toFixed(0)}‚Ç¨ en ${categoria}`,
                        icono: 'üéØ'
                    });
                }
            });
            
            // PATR√ìN 3: Gasto recurrente detectado
            Object.entries(gastosPorDescripcion).forEach(([desc, gastos]) => {
                if (gastos.length >= 3 && desc !== 'gasto' && desc !== 'sin descripci√≥n') {
                    const promedioMonto = gastos.reduce((sum, g) => sum + parseFloat(g.monto), 0) / gastos.length;
                    const varianza = gastos.reduce((sum, g) => sum + Math.pow(parseFloat(g.monto) - promedioMonto, 2), 0) / gastos.length;
                    const desviacion = Math.sqrt(varianza);
                    
                    // Si la desviaci√≥n es baja, es un gasto muy regular
                    if (desviacion < promedioMonto * 0.2) {
                        patrones.push({
                            tipo: 'recurrente',
                            mensaje: `"${gastos[0].descripcion}" aparece ${gastos.length} veces (~${promedioMonto.toFixed(0)}‚Ç¨)`,
                            icono: 'üîÑ'
                        });
                    }
                }
            });
            
            // PATR√ìN 4: Categor√≠a dominante
            const categoriaDominante = Object.entries(gastosPorCategoria)
                .sort((a, b) => b[1].total - a[1].total)[0];
            
            if (categoriaDominante) {
                const [cat, data] = categoriaDominante;
                const totalGastos = Object.values(gastosPorCategoria).reduce((sum, c) => sum + c.total, 0);
                const porcentaje = (data.total / totalGastos) * 100;
                
                if (porcentaje > 40) {
                    patrones.push({
                        tipo: 'categoria-dominante',
                        mensaje: `${cat} representa el ${porcentaje.toFixed(0)}% de tus gastos (${data.total.toFixed(0)}‚Ç¨)`,
                        icono: 'üìä'
                    });
                }
            }
            
            // PATR√ìN 5: Tendencia creciente/decreciente
            if (gastosRecientes.length >= 10) {
                const hace30Dias = new Date();
                hace30Dias.setDate(hace30Dias.getDate() - 30);
                
                const gastosUltimos30 = gastosRecientes.filter(g => new Date(g.fecha) >= hace30Dias);
                const gastosAnteriores30 = gastosRecientes.filter(g => new Date(g.fecha) < hace30Dias);
                
                if (gastosAnteriores30.length > 0) {
                    const promedioUltimos = gastosUltimos30.reduce((sum, g) => sum + parseFloat(g.monto), 0) / gastosUltimos30.length;
                    const promedioAnteriores = gastosAnteriores30.reduce((sum, g) => sum + parseFloat(g.monto), 0) / gastosAnteriores30.length;
                    const cambio = ((promedioUltimos - promedioAnteriores) / promedioAnteriores) * 100;
                    
                    if (Math.abs(cambio) > 20) {
                        patrones.push({
                            tipo: 'tendencia',
                            mensaje: `Tus gastos ${cambio > 0 ? 'aumentaron' : 'bajaron'} ${Math.abs(cambio).toFixed(0)}% este mes`,
                            icono: cambio > 0 ? 'üìà' : 'üìâ'
                        });
                    }
                }
            }
            
            // Guardar solo los 5 patrones m√°s relevantes
            state.patronesDetectados = patrones.slice(0, 5);
            guardarEstado();
        }

        // Verificar recordatorios
        function verificarRecordatorios() {
            const recordatorios = [];
            const ultimaInteraccion = new Date(state.ultimaInteraccion);
            const ahora = new Date();
            const diasSinRegistrar = Math.floor((ahora - ultimaInteraccion) / (1000 * 60 * 60 * 24));
            
            if (diasSinRegistrar >= 2) {
                recordatorios.push({
                    mensaje: `Llevas ${diasSinRegistrar} d√≠as sin registrar gastos`,
                    icono: '‚è∞'
                });
            }
            
            // Detectar si es fin de semana y no hay compra
            const diaSemana = ahora.getDay();
            if ((diaSemana === 6 || diaSemana === 0) && diasSinRegistrar >= 1) {
                const hayCompraReciente = state.gastos.some(g => {
                    const fechaGasto = new Date(g.fecha);
                    const diasDif = Math.floor((ahora - fechaGasto) / (1000 * 60 * 60 * 24));
                    return diasDif <= 2 && (g.categoria === 'Alimentaci√≥n' || g.descripcion.toLowerCase().includes('supermercado'));
                });
                
                if (!hayCompraReciente) {
                    recordatorios.push({
                        mensaje: '¬øHiciste la compra este fin de semana?',
                        icono: 'üõí'
                    });
                }
            }
            
            return recordatorios;
        }

        // Actualizar gastos frecuentes
        function actualizarGastosFrecuentes() {
            const descripciones = {};
            state.gastos.forEach(g => {
                const desc = g.descripcion;
                if (desc && desc !== 'Gasto' && desc !== 'Sin descripci√≥n') {
                    descripciones[desc] = (descripciones[desc] || 0) + 1;
                }
            });
            
            state.gastosFrecuentes = Object.entries(descripciones)
                .sort((a, b) => b[1] - a[1])
                .slice(0, 5)
                .map(([desc]) => desc);
            
            guardarEstado();
        }

        // Funciones CRUD gastos
        function agregarGasto() {
            const textoInput = document.getElementById('gasto-texto');
            const texto = textoInput ? textoInput.value : '';
            const montoManual = document.getElementById('gasto-monto') ? document.getElementById('gasto-monto').value : '';
            const categoriaManual = document.getElementById('gasto-categoria') ? document.getElementById('gasto-categoria').value : '';
            const cuentaId = parseInt(document.getElementById('gasto-cuenta').value);
            
            let descripcion, monto, categoria;
            
            if (texto) {
                const parseado = parsearTextoInteligente(texto);
                descripcion = parseado.descripcion;
                monto = parseado.monto || (montoManual ? parseFloat(montoManual) : null);
                categoria = parseado.categoria;
                textoInput.value = '';
            } else {
                descripcion = 'Gasto';
                monto = montoManual ? parseFloat(montoManual) : null;
                categoria = categoriaManual;
            }
            
            if (monto && monto > 0) {
                const nuevoGasto = {
                    descripcion,
                    monto: monto,
                    categoria,
                    cuentaId,
                    fecha: new Date().toISOString(),
                    id: Date.now()
                };
                
                state.gastos.push(nuevoGasto);
                state.ultimaInteraccion = new Date().toISOString();
                recalcularSaldosCuentas();
                actualizarGastosFrecuentes();
                detectarPatrones();
                
                if (document.getElementById('gasto-monto')) {
                    document.getElementById('gasto-monto').value = '';
                }
                
                guardarEstado();
                mostrarToast('‚úÖ Gasto a√±adido');
                render();
            }
        }

        function eliminarGasto(id) {
            if (confirm('¬øEliminar este gasto?')) {
                state.gastos = state.gastos.filter(g => g.id !== id);
                recalcularSaldosCuentas();
                guardarEstado();
                mostrarToast('üóëÔ∏è Gasto eliminado');
                render();
            }
        }

        function editarGasto(id) {
            const gasto = state.gastos.find(g => g.id === id);
            if (gasto) {
                state.editando = { tipo: 'gasto', id: id, data: {...gasto} };
                render();
            }
        }

        function guardarEdicionGasto(id) {
            const gasto = state.gastos.find(g => g.id === id);
            
            gasto.descripcion = document.getElementById(`edit-desc-${id}`).value || 'Gasto';
            gasto.monto = parseFloat(document.getElementById(`edit-monto-${id}`).value);
            gasto.categoria = document.getElementById(`edit-cat-${id}`).value;
            gasto.cuentaId = parseInt(document.getElementById(`edit-cuenta-${id}`).value);
            
            recalcularSaldosCuentas();
            state.editando = null;
            guardarEstado();
            mostrarToast('üíæ Cambios guardados');
            render();
        }

        function cancelarEdicion() {
            state.editando = null;
            render();
        }

        // Modal agregar gasto r√°pido
        function mostrarModalAgregarGasto() {
            const modal = document.createElement('div');
            modal.className = 'modal-overlay';
            modal.innerHTML = `
                <div class="modal-content p-6 w-full max-w-md">
                    <h2 class="text-2xl font-bold mb-4 text-white">Agregar Gasto R√°pido</h2>
                    <input 
                        type="text"
                        id="modal-gasto-texto"
                        class="input-neon w-full px-4 py-3 rounded-xl text-white mb-4"
                        placeholder="ej: supermercado 45"
                        autofocus
                    />
                    <select id="modal-gasto-cuenta" class="input-neon w-full px-4 py-3 rounded-xl text-white mb-4">
                        ${state.cuentas.map(c => `<option value="${c.id}">${c.nombre}</option>`).join('')}
                    </select>
                    <div class="flex gap-3">
                        <button onclick="this.closest('.modal-overlay').remove()" class="flex-1 bg-gray-600 px-6 py-3 rounded-xl font-bold">
                            Cancelar
                        </button>
                        <button onclick="agregarGastoDesdeModal()" class="flex-1 bg-gradient-to-r from-pink-600 to-red-600 px-6 py-3 rounded-xl font-bold">
                            Agregar
                        </button>
                    </div>
                </div>
            `;
            document.body.appendChild(modal);
            modal.onclick = (e) => {
                if (e.target === modal) modal.remove();
            };
        }

        function agregarGastoDesdeModal() {
            const texto = document.getElementById('modal-gasto-texto').value;
            const cuentaId = parseInt(document.getElementById('modal-gasto-cuenta').value);
            
            if (texto) {
                const parseado = parsearTextoInteligente(texto);
                if (parseado.monto && parseado.monto > 0) {
                    state.gastos.push({
                        descripcion: parseado.descripcion,
                        monto: parseado.monto,
                        categoria: parseado.categoria,
                        cuentaId,
                        fecha: new Date().toISOString(),
                        id: Date.now()
                    });
                    
                    state.ultimaInteraccion = new Date().toISOString();
                    recalcularSaldosCuentas();
                    actualizarGastosFrecuentes();
                    guardarEstado();
                    mostrarToast('‚úÖ Gasto a√±adido');
                    document.querySelector('.modal-overlay').remove();
                    render();
                }
            }
        }

        // Modal gesti√≥n categor√≠as
        function mostrarModalCategorias() {
            const modal = document.createElement('div');
            modal.className = 'modal-overlay';
            modal.innerHTML = `
                <div class="modal-content p-6 w-full max-w-md">
                    <h2 class="text-2xl font-bold mb-4 text-white">Gesti√≥n de Categor√≠as</h2>
                    <div class="space-y-2 mb-4 max-h-60 overflow-y-auto">
                        ${state.categorias.map(cat => `
                            <div class="flex justify-between items-center bg-black/30 rounded-xl p-3">
                                <div class="flex items-center gap-3">
                                    <div class="w-4 h-4 rounded" style="background-color: ${obtenerColorCategoria(cat)}"></div>
                                    <span class="text-white">${cat}</span>
                                </div>
                                ${state.categorias.length > 1 ? `
                                    <button onclick="eliminarCategoria('${cat}'); document.querySelector('.modal-overlay').remove(); mostrarModalCategorias();" class="text-red-500">‚ùå</button>
                                ` : ''}
                            </div>
                        `).join('')}
                    </div>
                    <div class="flex gap-2">
                        <input 
                            type="text"
                            id="nueva-categoria-modal"
                            class="input-neon flex-1 px-4 py-3 rounded-xl text-white"
                            placeholder="Nueva categor√≠a"
                        />
                        <button onclick="agregarCategoriaDesdeModal()" class="bg-purple-600 px-6 py-3 rounded-xl font-bold">
                            ‚ûï
                        </button>
                    </div>
                    <button onclick="this.closest('.modal-overlay').remove()" class="w-full mt-4 bg-gray-600 px-6 py-3 rounded-xl font-bold">
                        Cerrar
                    </button>
                </div>
            `;
            document.body.appendChild(modal);
            modal.onclick = (e) => {
                if (e.target === modal) modal.remove();
            };
        }

        function agregarCategoriaDesdeModal() {
            const input = document.getElementById('nueva-categoria-modal');
            if (input.value && !state.categorias.includes(input.value)) {
                state.categorias.push(input.value);
                guardarEstado();
                mostrarToast('‚úÖ Categor√≠a a√±adida');
                document.querySelector('.modal-overlay').remove();
                mostrarModalCategorias();
            }
        }

        function eliminarCategoria(categoria) {
            if (state.categorias.length > 1) {
                state.categorias = state.categorias.filter(c => c !== categoria);
                guardarEstado();
                mostrarToast('üóëÔ∏è Categor√≠a eliminada');
            }
        }

        function obtenerColorCategoria(categoria) {
            const colores = {
                'Alimentaci√≥n': '#FF006E',
                'Transporte': '#8338EC',
                'Entretenimiento': '#FFBE0B',
                'Salud': '#FB5607',
                'Hogar': '#3A86FF',
                'Ropa': '#FF006E',
                'Otros': '#00F5FF'
            };
            return colores[categoria] || '#00F5FF';
        }

        // ===== CHECKPOINT 1 - NUEVAS FUNCIONALIDADES =====
        
        // 1. Edici√≥n inline de montos
        function editarMontoInline(id, tipo = 'gasto') {
            const item = tipo === 'gasto' ? state.gastos.find(g => g.id === id) : state.ingresos.find(i => i.id === id);
            if (!item) return;
            
            state.editando = { tipo, id, inline: true };
            render();
            
            // Focus en el input
            setTimeout(() => {
                const input = document.getElementById(`inline-edit-${id}`);
                if (input) {
                    input.focus();
                    input.select();
                }
            }, 50);
        }
        
        function guardarMontoInline(id, tipo = 'gasto') {
            const input = document.getElementById(`inline-edit-${id}`);
            if (!input) return;
            
            const nuevoMonto = parseFloat(input.value);
            if (isNaN(nuevoMonto) || nuevoMonto <= 0) {
                mostrarToast('‚ö†Ô∏è Monto inv√°lido', 'warning');
                state.editando = null;
                render();
                return;
            }
            
            if (tipo === 'gasto') {
                const gasto = state.gastos.find(g => g.id === id);
                if (gasto) gasto.monto = nuevoMonto;
            } else {
                const ingreso = state.ingresos.find(i => i.id === id);
                if (ingreso) ingreso.monto = nuevoMonto;
            }
            
            recalcularSaldosCuentas();
            state.editando = null;
            guardarEstado();
            mostrarToast('üíæ Monto actualizado');
            render();
        }
        
        function cancelarEdicionInline() {
            state.editando = null;
            render();
        }
        
        // 2. Filtrado por b√∫squeda
        function filtrarGastos() {
            const query = state.buscador.toLowerCase();
            if (!query) return state.gastos;
            
            return state.gastos.filter(g => {
                const desc = (g.descripcion || '').toLowerCase();
                const cat = (g.categoria || '').toLowerCase();
                const monto = g.monto.toString();
                const fecha = new Date(g.fecha).toLocaleDateString('es-ES');
                
                return desc.includes(query) || 
                       cat.includes(query) || 
                       monto.includes(query) ||
                       fecha.includes(query);
            });
        }
        
        function actualizarBuscador(valor) {
            state.buscador = valor;
            render();
        }
        
        // 3. Obtener movimientos del mes del calendario
        function obtenerMovimientosDelMes(fecha) {
            const a√±o = fecha.getFullYear();
            const mes = fecha.getMonth();
            
            const gastosMes = state.gastos.filter(g => {
                const fechaGasto = new Date(g.fecha);
                return fechaGasto.getFullYear() === a√±o && fechaGasto.getMonth() === mes;
            });
            
            const ingresosMes = state.ingresos.filter(i => {
                const fechaIngreso = new Date(i.fecha);
                return fechaIngreso.getFullYear() === a√±o && fechaIngreso.getMonth() === mes;
            });
            
            return { gastosMes, ingresosMes };
        }
        
        function cambiarMesCalendario(delta) {
            state.mesCalendario = new Date(
                state.mesCalendario.getFullYear(),
                state.mesCalendario.getMonth() + delta,
                1
            );
            render();
        }
        
        function irHoyCalendario() {
            state.mesCalendario = new Date();
            render();
        }
        
        function verDetallesDia(dia) {
            const fecha = new Date(
                state.mesCalendario.getFullYear(),
                state.mesCalendario.getMonth(),
                dia
            );
            
            const gastosDia = state.gastos.filter(g => {
                const fechaGasto = new Date(g.fecha);
                return fechaGasto.toDateString() === fecha.toDateString();
            });
            
            const ingresosDia = state.ingresos.filter(i => {
                const fechaIngreso = new Date(i.fecha);
                return fechaIngreso.toDateString() === fecha.toDateString();
            });
            
            if (gastosDia.length === 0 && ingresosDia.length === 0) {
                mostrarToast('No hay movimientos este d√≠a', 'warning');
                return;
            }
            
            const modal = document.createElement('div');
            modal.className = 'modal-overlay';
            modal.innerHTML = `
                <div class="modal-content p-6 w-full max-w-md">
                    <h2 class="text-2xl font-bold mb-4 text-white">
                        ${fecha.toLocaleDateString('es-ES', { weekday: 'long', day: 'numeric', month: 'long' })}
                    </h2>
                    
                    ${ingresosDia.length > 0 ? `
                        <div class="mb-4">
                            <h3 class="text-green-400 font-bold mb-2">üí∞ Ingresos</h3>
                            <div class="space-y-2">
                                ${ingresosDia.map(i => `
                                    <div class="bg-green-900/20 rounded-xl p-3 flex justify-between items-center">
                                        <span class="text-white">${i.descripcion}</span>
                                        <span class="text-green-400 font-bold">+${parseFloat(i.monto).toFixed(2)}‚Ç¨</span>
                                    </div>
                                `).join('')}
                            </div>
                        </div>
                    ` : ''}
                    
                    ${gastosDia.length > 0 ? `
                        <div>
                            <h3 class="text-red-400 font-bold mb-2">üí∏ Gastos</h3>
                            <div class="space-y-2">
                                ${gastosDia.map(g => {
                                    const cuenta = state.cuentas.find(c => c.id === g.cuentaId);
                                    return `
                                        <div class="bg-red-900/20 rounded-xl p-3">
                                            <div class="flex justify-between items-center">
                                                <div class="flex items-center gap-2">
                                                    <div class="w-3 h-3 rounded-full" style="background-color: ${obtenerColorCategoria(g.categoria)}"></div>
                                                    <span class="text-white">${g.descripcion}</span>
                                                </div>
                                                <span class="text-red-400 font-bold">-${parseFloat(g.monto).toFixed(2)}‚Ç¨</span>
                                            </div>
                                            <p class="text-xs text-gray-400 mt-1">${g.categoria} ‚Ä¢ ${cuenta ? cuenta.nombre : ''}</p>
                                        </div>
                                    `;
                                }).join('')}
                            </div>
                        </div>
                    ` : ''}
                    
                    <button onclick="this.closest('.modal-overlay').remove()" class="w-full mt-4 bg-gray-600 px-6 py-3 rounded-xl font-bold">
                        Cerrar
                    </button>
                </div>
            `;
            document.body.appendChild(modal);
            modal.onclick = (e) => {
                if (e.target === modal) modal.remove();
            };
        }
        // ===== FIN CHECKPOINT 1 =====

        // Cambiar vista
        function cambiarVista(nuevaVista) {
            state.vista = nuevaVista;
            
            // Actualizar tab bar
            document.querySelectorAll('.tab-item').forEach(tab => {
                tab.classList.remove('active');
                if (tab.dataset.vista === nuevaVista) {
                    tab.classList.add('active');
                }
            });
            
            render();
        }

        // Pull to refresh
        function setupPullToRefresh() {
            let startY = 0;
            let pulling = false;
            const indicator = document.getElementById('ptr-indicator');
            
            document.addEventListener('touchstart', (e) => {
                if (window.scrollY === 0) {
                    startY = e.touches[0].pageY;
                }
            });
            
            document.addEventListener('touchmove', (e) => {
                if (startY === 0) return;
                
                const currentY = e.touches[0].pageY;
                const diff = currentY - startY;
                
                if (diff > 0 && window.scrollY === 0) {
                    pulling = true;
                    indicator.style.display = 'flex';
                    indicator.style.top = `${Math.min(diff - 60, 0)}px`;
                    
                    if (diff > 80) {
                        indicator.classList.add('ptr-refreshing');
                    }
                }
            });
            
            document.addEventListener('touchend', (e) => {
                if (pulling) {
                    if (indicator.classList.contains('ptr-refreshing')) {
                        recalcularSaldosCuentas();
                        detectarPatrones();
                        mostrarToast('üîÑ Datos actualizados');
                        render();
                        
                        setTimeout(() => {
                            indicator.classList.remove('ptr-refreshing');
                            indicator.style.display = 'none';
                        }, 500);
                    } else {
                        indicator.style.display = 'none';
                    }
                    
                    pulling = false;
                    startY = 0;
                }
            });
        }

        // Swipe to delete
        function setupSwipeDelete() {
            document.addEventListener('touchstart', (e) => {
                const target = e.target.closest('.swipeable');
                if (!target) return;
                
                swipeStartX = e.touches[0].pageX;
                swipeElement = target;
                swipeElement.classList.add('swiping');
            });
            
            document.addEventListener('touchmove', (e) => {
                if (!swipeElement) return;
                
                const currentX = e.touches[0].pageX;
                const diff = currentX - swipeStartX;
                
                if (diff < 0) {
                    swipeElement.style.transform = `translateX(${Math.max(diff, -100)}px)`;
                }
            });
            
            document.addEventListener('touchend', (e) => {
                if (!swipeElement) return;
                
                const currentX = e.changedTouches[0].pageX;
                const diff = currentX - swipeStartX;
                
                if (diff < -60) {
                    swipeElement.style.transform = 'translateX(-100px)';
                } else {
                    swipeElement.style.transform = 'translateX(0)';
                }
                
                swipeElement.classList.remove('swiping');
                swipeElement = null;
            });
        }

        // Long press
        function setupLongPress() {
            document.addEventListener('touchstart', (e) => {
                const target = e.target.closest('[data-longpress]');
                if (!target) return;
                
                longPressTimer = setTimeout(() => {
                    const id = target.dataset.longpress;
                    mostrarMenuContextual(id, e.touches[0].pageX, e.touches[0].pageY);
                }, 500);
            });
            
            document.addEventListener('touchend', () => {
                if (longPressTimer) {
                    clearTimeout(longPressTimer);
                    longPressTimer = null;
                }
            });
            
            document.addEventListener('touchmove', () => {
                if (longPressTimer) {
                    clearTimeout(longPressTimer);
                    longPressTimer = null;
                }
            });
        }

        function mostrarMenuContextual(id, x, y) {
            // Implementar men√∫ contextual
            mostrarToast('üîß Men√∫ contextual (en desarrollo)');
        }

        // Render principal
        function render() {
            procesarGastosRecurrentes();
            recalcularSaldosCuentas();
            
            const app = document.getElementById('app');
            const stats = calcularEstadisticas();
            const recordatorios = verificarRecordatorios();
            
            let estadoColor = 'estado-bien';
            if (stats.gastoPorDiaRestante < 10) estadoColor = 'estado-mal';
            else if (stats.gastoPorDiaRestante < 30) estadoColor = 'estado-medio';
            
            let html = '';
            
            // VISTA PRINCIPAL
            if (state.vista === 'principal') {
                const porcentajeProgreso = Math.min((stats.diasTranscurridos / stats.diasTotalesPeriodo) * 100, 100);
                const porcentajeGastado = Math.min(stats.porcentajeGastado, 100);
                
                html += `
                    <div class="space-y-6 fade-in">
                        <!-- Widget Hero -->
                        <div class="widget-hero ${estadoColor} rounded-3xl p-8 text-center">
                            <div class="relative inline-block mb-4">
                                <svg width="160" height="160" class="circular-progress">
                                    <circle cx="80" cy="80" r="70" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="8"/>
                                    <circle cx="80" cy="80" r="70" fill="none" stroke="currentColor" stroke-width="8"
                                        stroke-dasharray="${2 * Math.PI * 70}"
                                        stroke-dashoffset="${2 * Math.PI * 70 * (1 - porcentajeProgreso / 100)}"
                                        stroke-linecap="round"
                                        style="color: ${estadoColor === 'estado-bien' ? '#10b981' : estadoColor === 'estado-medio' ? '#FFBE0B' : '#FF006E'}"/>
                                </svg>
                                <div class="absolute inset-0 flex flex-col items-center justify-center">
                                    <p class="text-6xl font-black">${stats.gastoPorDiaRestante.toFixed(0)}‚Ç¨</p>
                                    <p class="text-sm text-gray-400">por d√≠a</p>
                                </div>
                            </div>
                            <p class="text-xl font-bold text-white">Puedes gastar hoy</p>
                            <p class="text-gray-400 mt-2">Te quedan ${stats.diasRestantes} d√≠as (${porcentajeProgreso.toFixed(0)}% del per√≠odo)</p>
                        </div>

                        <!-- Recordatorios -->
                        ${recordatorios.length > 0 ? `
                            <div class="space-y-2">
                                ${recordatorios.map(r => `
                                    <div class="recordatorio-card">
                                        <p class="text-white"><span class="text-2xl mr-2">${r.icono}</span> ${r.mensaje}</p>
                                    </div>
                                `).join('')}
                            </div>
                        ` : ''}

                        <!-- Patrones detectados -->
                        ${state.patronesDetectados.length > 0 ? `
                            <div class="space-y-2">
                                ${state.patronesDetectados.slice(0, 2).map(p => `
                                    <div class="patron-card">
                                        <p class="text-white">
                                            <span class="text-2xl mr-2">${p.icono || 'üí°'}</span>
                                            ${p.mensaje}
                                        </p>
                                    </div>
                                `).join('')}
                            </div>
                        ` : ''}

                        <!-- Stats r√°pidas -->
                        <div class="grid grid-cols-2 gap-4">
                            <div class="card-neon rounded-xl p-4 text-center">
                                <p class="text-gray-400 text-sm">Gastado</p>
                                <p class="text-2xl font-bold text-red-400">${stats.totalGastos.toFixed(0)}‚Ç¨</p>
                                <p class="text-xs text-gray-500">${porcentajeGastado.toFixed(0)}%</p>
                            </div>
                            <div class="card-neon rounded-xl p-4 text-center">
                                <p class="text-gray-400 text-sm">Disponible</p>
                                <p class="text-2xl font-bold text-green-400">${stats.disponibleTotal.toFixed(0)}‚Ç¨</p>
                                <p class="text-xs text-gray-500">${(100 - porcentajeGastado).toFixed(0)}%</p>
                            </div>
                        </div>

                        <!-- Gastos frecuentes -->
                        ${state.gastosFrecuentes.length > 0 ? `
                            <div class="card-neon rounded-xl p-4">
                                <h3 class="text-white font-bold mb-3">‚ö° Gastos frecuentes</h3>
                                <div class="flex flex-wrap gap-2">
                                    ${state.gastosFrecuentes.map(desc => `
                                        <button onclick="usarGastoFrecuente('${desc}')" class="bg-purple-600/50 px-4 py-2 rounded-xl text-sm">
                                            ${desc}
                                        </button>
                                    `).join('')}
                                </div>
                            </div>
                        ` : ''}

                        <!-- Agregar gasto r√°pido -->
                        <div class="card-neon rounded-xl p-4">
                            <h3 class="text-white font-bold mb-3">üí∏ Agregar Gasto</h3>
                            <div class="space-y-3">
                                <input 
                                    type="text"
                                    id="gasto-texto"
                                    class="input-neon w-full px-4 py-3 rounded-xl text-white"
                                    placeholder="ej: supermercado 45"
                                    inputmode="text"
                                    oninput="autoSugerirCategoria()"
                                />
                                <input 
                                    type="number"
                                    id="gasto-monto"
                                    inputmode="decimal"
                                    class="input-neon w-full px-4 py-3 rounded-xl text-white"
                                    placeholder="Monto (opcional si lo pones en texto)"
                                />
                                <div class="grid grid-cols-2 gap-3">
                                    <select id="gasto-categoria" class="input-neon px-4 py-3 rounded-xl text-white">
                                        ${state.categorias.map(cat => `<option value="${cat}">${cat}</option>`).join('')}
                                    </select>
                                    <select id="gasto-cuenta" class="input-neon px-4 py-3 rounded-xl text-white">
                                        ${state.cuentas.map(c => `<option value="${c.id}">${c.nombre}</option>`).join('')}
                                    </select>
                                </div>
                                <button onclick="agregarGasto()" class="w-full bg-gradient-to-r from-pink-600 to-red-600 px-6 py-4 rounded-xl font-bold text-lg">
                                    ‚ûï Agregar Gasto
                                </button>
                            </div>
                        </div>

                        <!-- √öltimos movimientos con buscador -->
                        ${state.gastos.length > 0 ? `
                            <div class="card-neon rounded-xl p-4">
                                <div class="search-bar">
                                    <input 
                                        type="text"
                                        class="input-neon w-full px-4 py-3 rounded-xl text-white"
                                        placeholder="üîç Buscar gastos..."
                                        value="${state.buscador}"
                                        oninput="actualizarBuscador(this.value)"
                                        inputmode="text"
                                    />
                                </div>
                                <h3 class="text-white font-bold mb-3">üìù ${state.buscador ? 'Resultados de b√∫squeda' : '√öltimos gastos'}</h3>
                                <div class="space-y-2">
                                    ${(() => {
                                        const gastosMostrar = state.buscador ? filtrarGastos() : state.gastos.slice().reverse().slice(0, 10);
                                        if (gastosMostrar.length === 0) {
                                            return '<p class="text-gray-400 text-center py-4">No se encontraron resultados</p>';
                                        }
                                        return gastosMostrar.map(gasto => {
                                            const fecha = new Date(gasto.fecha);
                                            const cuenta = state.cuentas.find(c => c.id === gasto.cuentaId);
                                            const estaEditando = state.editando?.id === gasto.id && state.editando?.inline;
                                            
                                            return `
                                                <div class="swipeable flex justify-between items-center bg-black/30 rounded-xl p-3" data-longpress="${gasto.id}">
                                                    <div class="flex-1 min-w-0">
                                                        <div class="flex items-center gap-2">
                                                            <div class="w-3 h-3 rounded-full flex-shrink-0" style="background-color: ${obtenerColorCategoria(gasto.categoria)}"></div>
                                                            <span class="text-white text-sm font-semibold truncate">${gasto.descripcion}</span>
                                                        </div>
                                                        <p class="text-gray-400 text-xs mt-1">${fecha.toLocaleDateString('es-ES')} - ${cuenta ? cuenta.nombre : ''}</p>
                                                    </div>
                                                    ${estaEditando ? `
                                                        <div class="flex items-center gap-2">
                                                            <input 
                                                                type="number"
                                                                inputmode="decimal"
                                                                id="inline-edit-${gasto.id}"
                                                                class="inline-edit-input"
                                                                value="${gasto.monto}"
                                                                onkeydown="if(event.key==='Enter') guardarMontoInline(${gasto.id}, 'gasto'); if(event.key==='Escape') cancelarEdicionInline();"
                                                            />
                                                            <button onclick="guardarMontoInline(${gasto.id}, 'gasto')" class="text-green-400">‚úì</button>
                                                            <button onclick="cancelarEdicionInline()" class="text-red-400">‚úó</button>
                                                        </div>
                                                    ` : `
                                                        <span onclick="editarMontoInline(${gasto.id}, 'gasto')" class="monto-editable text-red-400 font-bold cursor-pointer">${parseFloat(gasto.monto).toFixed(2)}‚Ç¨</span>
                                                    `}
                                                    <div class="swipe-actions">
                                                        <button onclick="editarGasto(${gasto.id})" class="swipe-btn bg-blue-600">‚úèÔ∏è</button>
                                                        <button onclick="eliminarGasto(${gasto.id})" class="swipe-btn bg-red-600">üóëÔ∏è</button>
                                                    </div>
                                                </div>
                                            `;
                                        }).join('');
                                    })()}
                                </div>
                            </div>
                        ` : ''}
                    </div>
                `;
            }
            
            // VISTA DI√ëEIROS
            else if (state.vista === 'dinheiros') {
                html += `
                    <div class="space-y-6 fade-in">
                        <h2 class="text-3xl font-black text-white mb-4">üí∞ Di√±eiros</h2>
                        
                        <!-- Estad√≠sticas Completas -->
                        <div class="grid grid-cols-2 gap-4">
                            <div class="card-neon rounded-xl p-4 text-center">
                                <p class="text-gray-400 text-xs">Disponible Total</p>
                                <p class="text-2xl font-bold text-green-400">${stats.disponibleTotal.toFixed(2)}‚Ç¨</p>
                            </div>
                            <div class="card-neon rounded-xl p-4 text-center">
                                <p class="text-gray-400 text-xs">Gasto por D√≠a</p>
                                <p class="text-2xl font-bold text-yellow-400">${stats.gastoPorDiaRestante.toFixed(2)}‚Ç¨</p>
                            </div>
                            <div class="card-neon rounded-xl p-4 text-center">
                                <p class="text-gray-400 text-xs">D√≠as Restantes</p>
                                <p class="text-2xl font-bold text-blue-400">${stats.diasRestantes}</p>
                            </div>
                            <div class="card-neon rounded-xl p-4 text-center">
                                <p class="text-gray-400 text-xs">Gastos del Per√≠odo</p>
                                <p class="text-2xl font-bold text-red-400">${stats.totalGastos.toFixed(2)}‚Ç¨</p>
                            </div>
                        </div>

                        <!-- Ingresos y Gastos Recurrentes -->
                        <div class="grid grid-cols-2 gap-4">
                            <div class="card-neon rounded-xl p-4 text-center">
                                <p class="text-gray-400 text-xs">Ingresos Totales</p>
                                <p class="text-xl font-bold text-green-400">+${stats.ingresoTotal.toFixed(2)}‚Ç¨</p>
                                <p class="text-xs text-gray-500 mt-1">Sueldo: ${parseFloat(state.sueldo || 0).toFixed(0)}‚Ç¨</p>
                            </div>
                            <div class="card-neon rounded-xl p-4 text-center">
                                <p class="text-gray-400 text-xs">Gastos Recurrentes</p>
                                <p class="text-xl font-bold text-orange-400">-${stats.totalGastosRecurrentes.toFixed(2)}‚Ç¨</p>
                            </div>
                        </div>

                        <!-- Estado de Cuentas -->
                        <div class="card-neon rounded-xl p-6">
                            <div class="flex justify-between items-center mb-4">
                                <h3 class="text-xl font-bold text-white">üí≥ Estado de Cuentas</h3>
                                <button onclick="mostrarModalGestionCuentas()" class="text-purple-400 text-sm">‚úèÔ∏è Gestionar</button>
                            </div>
                            <div class="space-y-3">
                                ${state.cuentas.map(cuenta => `
                                    <div class="bg-black/30 rounded-xl p-4">
                                        <div class="flex justify-between items-center">
                                            <div>
                                                <p class="text-white font-semibold">${cuenta.nombre}</p>
                                                <p class="text-xs text-gray-400">${cuenta.tipo === 'banco' ? 'üè¶ Banco' : cuenta.tipo === 'efectivo' ? 'üíµ Efectivo' : 'üí≥ Tarjeta'}</p>
                                            </div>
                                            <p class="text-2xl font-black ${cuenta.saldo >= 0 ? 'text-green-400' : 'text-red-400'}">
                                                ${cuenta.saldo.toFixed(2)}‚Ç¨
                                            </p>
                                        </div>
                                    </div>
                                `).join('')}
                            </div>
                        </div>

                        <!-- Botones de gesti√≥n r√°pida -->
                        <div class="grid grid-cols-2 gap-4">
                            <button onclick="mostrarModalNuevoIngreso()" class="card-neon rounded-xl p-4 text-center hover:bg-green-600/20 transition">
                                <span class="text-3xl">üí∞</span>
                                <p class="text-white font-semibold mt-2">Agregar Ingreso</p>
                            </button>
                            <button onclick="mostrarModalNuevoAjuste()" class="card-neon rounded-xl p-4 text-center hover:bg-blue-600/20 transition">
                                <span class="text-3xl">‚öñÔ∏è</span>
                                <p class="text-white font-semibold mt-2">Ajustar Saldo</p>
                            </button>
                            <button onclick="mostrarModalGestionRecurrentes()" class="card-neon rounded-xl p-4 text-center hover:bg-orange-600/20 transition">
                                <span class="text-3xl">üîÑ</span>
                                <p class="text-white font-semibold mt-2">Gastos Recurrentes</p>
                            </button>
                            <button onclick="mostrarModalCategorias()" class="card-neon rounded-xl p-4 text-center hover:bg-purple-600/20 transition">
                                <span class="text-3xl">üìÅ</span>
                                <p class="text-white font-semibold mt-2">Categor√≠as</p>
                            </button>
                        </div>
                        
                        <!-- Lista de ingresos y ajustes recientes -->
                        ${(state.ingresos.length > 0 || state.ajustes.length > 0) ? `
                            <div class="card-neon rounded-xl p-4">
                                <h3 class="text-white font-bold mb-3">üìã Movimientos Recientes</h3>
                                <div class="space-y-2 max-h-60 overflow-y-auto">
                                    ${[...state.ingresos.slice(-5).reverse().map(i => ({...i, tipo: 'ingreso'})), 
                                       ...state.ajustes.slice(-5).reverse().map(a => ({...a, tipo: 'ajuste'}))]
                                        .sort((a, b) => new Date(b.fecha) - new Date(a.fecha))
                                        .slice(0, 10)
                                        .map(mov => {
                                            const fecha = new Date(mov.fecha);
                                            const cuenta = state.cuentas.find(c => c.id === mov.cuentaId);
                                            return `
                                                <div class="flex justify-between items-center bg-black/30 rounded-xl p-3">
                                                    <div>
                                                        <span class="text-white text-sm font-semibold">${mov.descripcion || mov.razon}</span>
                                                        <p class="text-gray-400 text-xs">${fecha.toLocaleDateString('es-ES')} - ${cuenta ? cuenta.nombre : ''}</p>
                                                    </div>
                                                    <div class="flex items-center gap-2">
                                                        <span class="text-${mov.tipo === 'ingreso' ? 'green' : 'blue'}-400 font-bold">
                                                            ${mov.tipo === 'ingreso' ? '+' : (mov.tipo === 'positivo' ? '+' : '-')}${parseFloat(mov.monto).toFixed(2)}‚Ç¨
                                                        </span>
                                                        ${mov.tipo === 'ingreso' ? `
                                                            <button onclick="eliminarIngreso(${mov.id})" class="text-red-400 text-xs">üóëÔ∏è</button>
                                                        ` : ''}
                                                    </div>
                                                </div>
                                            `;
                                        }).join('')}
                                </div>
                            </div>
                        ` : ''}
                        </button>
                    </div>
                `;
            }
            else if (state.vista === 'estadisticas') {
                // Preparar datos para gr√°fico de l√≠nea temporal (√∫ltimos 30 d√≠as)
                const hoy = new Date();
                const hace30Dias = new Date();
                hace30Dias.setDate(hace30Dias.getDate() - 30);
                
                const datos30Dias = [];
                const labels30Dias = [];
                
                for (let i = 29; i >= 0; i--) {
                    const fecha = new Date();
                    fecha.setDate(fecha.getDate() - i);
                    const fechaStr = fecha.toISOString().split('T')[0];
                    
                    const gastosDia = state.gastos.filter(g => 
                        g.fecha.split('T')[0] === fechaStr
                    ).reduce((sum, g) => sum + parseFloat(g.monto), 0);
                    
                    datos30Dias.push(gastosDia);
                    labels30Dias.push(fecha.toLocaleDateString('es-ES', { day: 'numeric', month: 'short' }));
                }
                
                // Comparativa mes actual vs anterior
                const mesActual = new Date().getMonth();
                const a√±oActual = new Date().getFullYear();
                
                const gastosEsteMes = state.gastos.filter(g => {
                    const fecha = new Date(g.fecha);
                    return fecha.getMonth() === mesActual && fecha.getFullYear() === a√±oActual;
                }).reduce((sum, g) => sum + parseFloat(g.monto), 0);
                
                const mesPasado = mesActual === 0 ? 11 : mesActual - 1;
                const a√±oMesPasado = mesActual === 0 ? a√±oActual - 1 : a√±oActual;
                
                const gastosMesPasado = state.gastos.filter(g => {
                    const fecha = new Date(g.fecha);
                    return fecha.getMonth() === mesPasado && fecha.getFullYear() === a√±oMesPasado;
                }).reduce((sum, g) => sum + parseFloat(g.monto), 0);
                
                const cambioMensual = gastosMesPasado > 0 
                    ? ((gastosEsteMes - gastosMesPasado) / gastosMesPasado * 100) 
                    : 0;
                
                // Top 5 categor√≠as
                const gastosPorCategoria = {};
                state.gastos.forEach(g => {
                    const cat = g.categoria || 'Otros';
                    gastosPorCategoria[cat] = (gastosPorCategoria[cat] || 0) + parseFloat(g.monto);
                });
                
                const topCategorias = Object.entries(gastosPorCategoria)
                    .sort((a, b) => b[1] - a[1])
                    .slice(0, 5);
                
                const totalGastos = Object.values(gastosPorCategoria).reduce((a, b) => a + b, 0);
                
                // Promedio diario √∫ltimos 30 d√≠as
                const promedioDiario = datos30Dias.reduce((a, b) => a + b, 0) / 30;
                
                // D√≠a con m√°s gasto en los √∫ltimos 30 d√≠as
                const maxGasto = Math.max(...datos30Dias);
                const diaMaxGasto = labels30Dias[datos30Dias.indexOf(maxGasto)];
                
                html += `
                    <div class="space-y-6 fade-in">
                        <h2 class="text-3xl font-black text-white mb-4">üìä Estad√≠sticas</h2>
                        
                        <!-- Comparativa mes actual vs anterior -->
                        <div class="card-neon rounded-xl p-6">
                            <h3 class="text-xl font-bold text-white mb-4">üìà Comparativa Mensual</h3>
                            <div class="grid grid-cols-2 gap-4">
                                <div class="bg-black/30 rounded-xl p-4 text-center">
                                    <p class="text-gray-400 text-sm">Este mes</p>
                                    <p class="text-3xl font-bold text-white">${gastosEsteMes.toFixed(0)}‚Ç¨</p>
                                </div>
                                <div class="bg-black/30 rounded-xl p-4 text-center">
                                    <p class="text-gray-400 text-sm">Mes pasado</p>
                                    <p class="text-3xl font-bold text-white">${gastosMesPasado.toFixed(0)}‚Ç¨</p>
                                </div>
                            </div>
                            <div class="mt-4 text-center">
                                <p class="text-lg ${cambioMensual > 0 ? 'text-red-400' : 'text-green-400'}">
                                    ${cambioMensual > 0 ? 'üìà' : 'üìâ'} 
                                    ${cambioMensual > 0 ? '+' : ''}${cambioMensual.toFixed(1)}%
                                    ${cambioMensual > 0 ? 'm√°s' : 'menos'} que el mes pasado
                                </p>
                            </div>
                        </div>
                        
                        <!-- Gr√°fico de l√≠nea temporal -->
                        <div class="card-neon rounded-xl p-6">
                            <h3 class="text-xl font-bold text-white mb-4">üìä Tendencia √∫ltimos 30 d√≠as</h3>
                            <canvas id="grafico-temporal" width="400" height="200"></canvas>
                            <div class="grid grid-cols-2 gap-4 mt-4">
                                <div class="bg-black/30 rounded-xl p-3 text-center">
                                    <p class="text-gray-400 text-xs">Promedio diario</p>
                                    <p class="text-xl font-bold text-blue-400">${promedioDiario.toFixed(2)}‚Ç¨</p>
                                </div>
                                <div class="bg-black/30 rounded-xl p-3 text-center">
                                    <p class="text-gray-400 text-xs">D√≠a con m√°s gasto</p>
                                    <p class="text-xl font-bold text-red-400">${maxGasto.toFixed(2)}‚Ç¨</p>
                                    <p class="text-xs text-gray-500">${diaMaxGasto}</p>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Top 5 Categor√≠as -->
                        <div class="card-neon rounded-xl p-6">
                            <h3 class="text-xl font-bold text-white mb-4">üèÜ Top 5 Categor√≠as</h3>
                            <div class="space-y-3">
                                ${topCategorias.map(([cat, monto], index) => {
                                    const porcentaje = (monto / totalGastos * 100).toFixed(1);
                                    return `
                                        <div class="bg-black/30 rounded-xl p-4">
                                            <div class="flex justify-between items-center mb-2">
                                                <div class="flex items-center gap-3">
                                                    <span class="text-2xl">${['ü•á', 'ü•à', 'ü•â', '4Ô∏è‚É£', '5Ô∏è‚É£'][index]}</span>
                                                    <div class="flex items-center gap-2">
                                                        <div class="w-4 h-4 rounded" style="background-color: ${obtenerColorCategoria(cat)}"></div>
                                                        <span class="text-white font-semibold">${cat}</span>
                                                    </div>
                                                </div>
                                                <div class="text-right">
                                                    <p class="text-white font-bold">${monto.toFixed(2)}‚Ç¨</p>
                                                    <p class="text-xs text-gray-400">${porcentaje}%</p>
                                                </div>
                                            </div>
                                            <div class="w-full bg-gray-700 rounded-full h-2">
                                                <div class="h-2 rounded-full" 
                                                     style="width: ${porcentaje}%; background-color: ${obtenerColorCategoria(cat)}">
                                                </div>
                                            </div>
                                        </div>
                                    `;
                                }).join('')}
                            </div>
                        </div>
                        
                        <!-- Patrones detectados -->
                        ${state.patronesDetectados.length > 0 ? `
                            <div class="card-neon rounded-xl p-6">
                                <h3 class="text-xl font-bold text-white mb-4">üí° Patrones Detectados</h3>
                                <div class="space-y-3">
                                    ${state.patronesDetectados.map(p => `
                                        <div class="patron-card">
                                            <p class="text-white">
                                                <span class="text-2xl mr-2">${p.icono}</span>
                                                ${p.mensaje}
                                            </p>
                                        </div>
                                    `).join('')}
                                </div>
                            </div>
                        ` : ''}
                    </div>
                `;
                
                // Renderizar gr√°fico despu√©s de que el DOM se actualice
                const labels30DiasData = labels30Dias;
                const datos30DiasData = datos30Dias;
                setTimeout(() => {
                    const canvas = document.getElementById('grafico-temporal');
                    if (canvas && typeof Chart !== 'undefined') {
                        const ctx = canvas.getContext('2d');
                        
                        // Destruir gr√°fico anterior si existe
                        if (window.graficoTemporal) {
                            window.graficoTemporal.destroy();
                        }
                        
                        window.graficoTemporal = new Chart(ctx, {
                            type: 'line',
                            data: {
                                labels: labels30DiasData,
                                datasets: [{
                                    label: 'Gastos diarios (‚Ç¨)',
                                    data: datos30DiasData,
                                    borderColor: '#8338EC',
                                    backgroundColor: 'rgba(131, 56, 236, 0.1)',
                                    borderWidth: 3,
                                    fill: true,
                                    tension: 0.4,
                                    pointRadius: 4,
                                    pointBackgroundColor: '#8338EC',
                                    pointBorderColor: '#fff',
                                    pointBorderWidth: 2,
                                    pointHoverRadius: 6
                                }]
                            },
                            options: {
                                responsive: true,
                                maintainAspectRatio: true,
                                plugins: {
                                    legend: {
                                        display: false
                                    },
                                    tooltip: {
                                        backgroundColor: 'rgba(15, 15, 35, 0.95)',
                                        borderColor: '#8338EC',
                                        borderWidth: 2,
                                        titleColor: '#fff',
                                        bodyColor: '#fff',
                                        padding: 12,
                                        displayColors: false,
                                        callbacks: {
                                            label: function(context) {
                                                return context.parsed.y.toFixed(2) + '‚Ç¨';
                                            }
                                        }
                                    }
                                },
                                scales: {
                                    y: {
                                        beginAtZero: true,
                                        ticks: {
                                            color: '#9CA3AF',
                                            callback: function(value) {
                                                return value + '‚Ç¨';
                                            }
                                        },
                                        grid: {
                                            color: 'rgba(156, 163, 175, 0.1)'
                                        }
                                    },
                                    x: {
                                        ticks: {
                                            color: '#9CA3AF',
                                            maxRotation: 45,
                                            minRotation: 45
                                        },
                                        grid: {
                                            display: false
                                        }
                                    }
                                }
                            }
                        });
                    }
                }, 100);
            }
            else if (state.vista === 'calendario') {
                const { gastosMes, ingresosMes } = obtenerMovimientosDelMes(state.mesCalendario);
                
                // Calcular d√≠as del mes
                const a√±o = state.mesCalendario.getFullYear();
                const mes = state.mesCalendario.getMonth();
                const primerDia = new Date(a√±o, mes, 1);
                const ultimoDia = new Date(a√±o, mes + 1, 0);
                const diasEnMes = ultimoDia.getDate();
                const primerDiaSemana = primerDia.getDay();
                const hoy = new Date();
                const esHoy = (dia) => {
                    const fecha = new Date(a√±o, mes, dia);
                    return fecha.toDateString() === hoy.toDateString();
                };
                
                // Agrupar movimientos por d√≠a
                const movimientosPorDia = {};
                gastosMes.forEach(g => {
                    const dia = new Date(g.fecha).getDate();
                    if (!movimientosPorDia[dia]) movimientosPorDia[dia] = { gastos: [], ingresos: [] };
                    movimientosPorDia[dia].gastos.push(g);
                });
                ingresosMes.forEach(i => {
                    const dia = new Date(i.fecha).getDate();
                    if (!movimientosPorDia[dia]) movimientosPorDia[dia] = { gastos: [], ingresos: [] };
                    movimientosPorDia[dia].ingresos.push(i);
                });
                
                const totalGastosMes = gastosMes.reduce((sum, g) => sum + parseFloat(g.monto), 0);
                const totalIngresosMes = ingresosMes.reduce((sum, i) => sum + parseFloat(i.monto), 0);
                
                html += `
                    <div class="space-y-6 fade-in">
                        <!-- Header del calendario -->
                        <div class="card-neon rounded-xl p-6">
                            <div class="flex justify-between items-center mb-4">
                                <button onclick="cambiarMesCalendario(-1)" class="text-3xl text-white">‚óÄ</button>
                                <div class="text-center">
                                    <h2 class="text-2xl font-bold text-white">
                                        ${state.mesCalendario.toLocaleDateString('es-ES', { month: 'long', year: 'numeric' })}
                                    </h2>
                                    <button onclick="irHoyCalendario()" class="text-sm text-purple-400 mt-1">Ir a hoy</button>
                                </div>
                                <button onclick="cambiarMesCalendario(1)" class="text-3xl text-white">‚ñ∂</button>
                            </div>
                            
                            <!-- Resumen del mes -->
                            <div class="grid grid-cols-2 gap-4 mt-4">
                                <div class="bg-red-900/20 rounded-xl p-3 text-center">
                                    <p class="text-xs text-gray-400">Gastos del mes</p>
                                    <p class="text-xl font-bold text-red-400">-${totalGastosMes.toFixed(2)}‚Ç¨</p>
                                </div>
                                <div class="bg-green-900/20 rounded-xl p-3 text-center">
                                    <p class="text-xs text-gray-400">Ingresos del mes</p>
                                    <p class="text-xl font-bold text-green-400">+${totalIngresosMes.toFixed(2)}‚Ç¨</p>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Grid del calendario -->
                        <div class="card-neon rounded-xl p-4">
                            <!-- D√≠as de la semana -->
                            <div class="calendar-grid mb-2">
                                ${['L', 'M', 'X', 'J', 'V', 'S', 'D'].map(dia => `
                                    <div class="text-center text-gray-400 text-xs font-bold py-2">${dia}</div>
                                `).join('')}
                            </div>
                            
                            <!-- D√≠as del mes -->
                            <div class="calendar-grid">
                                ${Array(primerDiaSemana === 0 ? 6 : primerDiaSemana - 1).fill('').map(() => 
                                    '<div class="calendar-day opacity-0"></div>'
                                ).join('')}
                                
                                ${Array.from({length: diasEnMes}, (_, i) => i + 1).map(dia => {
                                    const tieneMovimientos = movimientosPorDia[dia];
                                    const totalDia = tieneMovimientos 
                                        ? (tieneMovimientos.ingresos.reduce((s, i) => s + parseFloat(i.monto), 0) - 
                                           tieneMovimientos.gastos.reduce((s, g) => s + parseFloat(g.monto), 0))
                                        : 0;
                                    
                                    return `
                                        <div 
                                            class="calendar-day ${tieneMovimientos ? 'has-movement' : ''} ${esHoy(dia) ? 'today' : ''}"
                                            onclick="${tieneMovimientos ? `verDetallesDia(${dia})` : ''}"
                                        >
                                            <span class="text-white font-bold">${dia}</span>
                                            ${tieneMovimientos ? `
                                                <span class="text-xs ${totalDia >= 0 ? 'text-green-400' : 'text-red-400'}">
                                                    ${totalDia >= 0 ? '+' : ''}${totalDia.toFixed(0)}‚Ç¨
                                                </span>
                                            ` : ''}
                                        </div>
                                    `;
                                }).join('')}
                            </div>
                        </div>
                        
                        <!-- Lista de movimientos del mes -->
                        ${(gastosMes.length > 0 || ingresosMes.length > 0) ? `
                            <div class="card-neon rounded-xl p-4">
                                <h3 class="text-white font-bold mb-3">üìã Todos los movimientos</h3>
                                <div class="space-y-2 max-h-96 overflow-y-auto">
                                    ${[...ingresosMes.map(i => ({...i, tipo: 'ingreso'})), ...gastosMes.map(g => ({...g, tipo: 'gasto'}))]
                                        .sort((a, b) => new Date(b.fecha) - new Date(a.fecha))
                                        .map(mov => {
                                            const fecha = new Date(mov.fecha);
                                            const cuenta = state.cuentas.find(c => c.id === mov.cuentaId);
                                            const esIngreso = mov.tipo === 'ingreso';
                                            const estaEditando = state.editando?.id === mov.id && state.editando?.inline;
                                            
                                            return `
                                                <div class="flex justify-between items-center bg-black/30 rounded-xl p-3">
                                                    <div class="flex-1">
                                                        <div class="flex items-center gap-2">
                                                            ${!esIngreso ? `<div class="w-3 h-3 rounded-full" style="background-color: ${obtenerColorCategoria(mov.categoria)}"></div>` : ''}
                                                            <span class="text-white text-sm font-semibold">${mov.descripcion}</span>
                                                        </div>
                                                        <p class="text-gray-400 text-xs mt-1">
                                                            ${fecha.toLocaleDateString('es-ES', { day: 'numeric', month: 'short' })} - ${cuenta ? cuenta.nombre : ''}
                                                        </p>
                                                    </div>
                                                    ${estaEditando ? `
                                                        <div class="flex items-center gap-2">
                                                            <input 
                                                                type="number"
                                                                inputmode="decimal"
                                                                id="inline-edit-${mov.id}"
                                                                class="inline-edit-input"
                                                                value="${mov.monto}"
                                                                onkeydown="if(event.key==='Enter') guardarMontoInline(${mov.id}, '${mov.tipo}'); if(event.key==='Escape') cancelarEdicionInline();"
                                                            />
                                                            <button onclick="guardarMontoInline(${mov.id}, '${mov.tipo}')" class="text-green-400">‚úì</button>
                                                            <button onclick="cancelarEdicionInline()" class="text-red-400">‚úó</button>
                                                        </div>
                                                    ` : `
                                                        <span onclick="editarMontoInline(${mov.id}, '${mov.tipo}')" class="monto-editable ${esIngreso ? 'text-green-400' : 'text-red-400'} font-bold">
                                                            ${esIngreso ? '+' : '-'}${parseFloat(mov.monto).toFixed(2)}‚Ç¨
                                                        </span>
                                                    `}
                                                </div>
                                            `;
                                        }).join('')}
                                </div>
                            </div>
                        ` : ''}
                    </div>
                `;
            }
            else if (state.vista === 'configuracion') {
                html += `
                    <div class="space-y-6">
                        <div class="card-neon rounded-xl p-6">
                            <h2 class="text-2xl font-bold text-white mb-4">‚öôÔ∏è Configuraci√≥n</h2>
                            <div class="space-y-4">
                                <div>
                                    <label class="text-gray-300 block mb-2">Sueldo Mensual</label>
                                    <input 
                                        type="number"
                                        inputmode="decimal"
                                        class="input-neon w-full px-4 py-3 rounded-xl text-white"
                                        value="${state.sueldo}"
                                        oninput="state.sueldo = this.value; guardarEstadoDebounce();"
                                        onblur="guardarEstado(); render();"
                                    />
                                </div>
                                <div>
                                    <label class="text-gray-300 block mb-2">D√≠a de Cobro</label>
                                    <input 
                                        type="number"
                                        inputmode="numeric"
                                        min="1"
                                        max="31"
                                        class="input-neon w-full px-4 py-3 rounded-xl text-white"
                                        value="${state.diaCobro}"
                                        oninput="state.diaCobro = this.value; guardarEstadoDebounce();"
                                        onblur="guardarEstado(); render();"
                                    />
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            }
            
            app.innerHTML = html;
        }

        function usarGastoFrecuente(descripcion) {
            document.getElementById('gasto-texto').value = descripcion;
            document.getElementById('gasto-texto').focus();
            autoSugerirCategoria();
        }

        // Auto-sugerir categor√≠a - CHECKPOINT 2
        function autoSugerirCategoria() {
            const textoInput = document.getElementById('gasto-texto');
            const selectCategoria = document.getElementById('gasto-categoria');
            
            if (!textoInput || !selectCategoria) return;
            
            const texto = textoInput.value.trim();
            if (texto.length < 3) return; // M√≠nimo 3 caracteres para sugerir
            
            const categoriaSugerida = sugerirCategoria(texto);
            selectCategoria.value = categoriaSugerida;
            
            // Efecto visual breve para indicar que se auto-seleccion√≥
            selectCategoria.style.borderColor = '#10b981';
            setTimeout(() => {
                selectCategoria.style.borderColor = '';
            }, 300);
        }


        // ===== FUNCIONES PARA GESTI√ìN DE CUENTAS =====
        function mostrarModalGestionCuentas() {
            const modal = document.createElement('div');
            modal.className = 'modal-overlay';
            modal.innerHTML = `
                <div class="modal-content p-6 w-full max-w-md">
                    <h2 class="text-2xl font-bold mb-4 text-white">üí≥ Gesti√≥n de Cuentas</h2>
                    <div class="space-y-2 mb-4 max-h-60 overflow-y-auto">
                        ${state.cuentas.map(cuenta => `
                            <div class="bg-black/30 rounded-xl p-3">
                                <div class="flex justify-between items-center">
                                    <div>
                                        <p class="text-white font-semibold">${cuenta.nombre}</p>
                                        <p class="text-xs text-gray-400">${cuenta.tipo}</p>
                                    </div>
                                    <div class="flex gap-2">
                                        <button onclick="editarCuenta(${cuenta.id}); document.querySelector('.modal-overlay').remove();" class="text-blue-400">‚úèÔ∏è</button>
                                        ${state.cuentas.length > 1 ? `
                                            <button onclick="eliminarCuenta(${cuenta.id}); document.querySelector('.modal-overlay').remove(); mostrarModalGestionCuentas();" class="text-red-400">üóëÔ∏è</button>
                                        ` : ''}
                                    </div>
                                </div>
                            </div>
                        `).join('')}
                    </div>
                    <button onclick="mostrarModalNuevaCuenta(); document.querySelector('.modal-overlay').remove();" class="w-full bg-purple-600 px-6 py-3 rounded-xl font-bold mb-2">
                        ‚ûï Nueva Cuenta
                    </button>
                    <button onclick="this.closest('.modal-overlay').remove()" class="w-full bg-gray-600 px-6 py-3 rounded-xl font-bold">
                        Cerrar
                    </button>
                </div>
            `;
            document.body.appendChild(modal);
            modal.onclick = (e) => { if (e.target === modal) modal.remove(); };
        }

        function mostrarModalNuevaCuenta() {
            const modal = document.createElement('div');
            modal.className = 'modal-overlay';
            modal.innerHTML = `
                <div class="modal-content p-6 w-full max-w-md">
                    <h2 class="text-2xl font-bold mb-4 text-white">Nueva Cuenta</h2>
                    <input type="text" id="nueva-cuenta-nombre" class="input-neon w-full px-4 py-3 rounded-xl text-white mb-3" placeholder="Nombre de la cuenta">
                    <select id="nueva-cuenta-tipo" class="input-neon w-full px-4 py-3 rounded-xl text-white mb-3">
                        <option value="banco">üè¶ Banco</option>
                        <option value="efectivo">üíµ Efectivo</option>
                        <option value="tarjeta">üí≥ Tarjeta</option>
                    </select>
                    <input type="number" id="nueva-cuenta-saldo" inputmode="decimal" class="input-neon w-full px-4 py-3 rounded-xl text-white mb-3" placeholder="Saldo inicial">
                    <div class="flex gap-2">
                        <button onclick="this.closest('.modal-overlay').remove()" class="flex-1 bg-gray-600 px-6 py-3 rounded-xl font-bold">Cancelar</button>
                        <button onclick="crearCuenta()" class="flex-1 bg-green-600 px-6 py-3 rounded-xl font-bold">Crear</button>
                    </div>
                </div>
            `;
            document.body.appendChild(modal);
            modal.onclick = (e) => { if (e.target === modal) modal.remove(); };
        }

        function crearCuenta() {
            const nombre = document.getElementById('nueva-cuenta-nombre').value;
            const tipo = document.getElementById('nueva-cuenta-tipo').value;
            const saldo = parseFloat(document.getElementById('nueva-cuenta-saldo').value) || 0;
            
            if (!nombre) {
                mostrarToast('‚ö†Ô∏è Ingresa un nombre', 'warning');
                return;
            }
            
            const nuevaCuenta = {
                id: Date.now(),
                nombre,
                tipo,
                saldoInicial: saldo,
                saldo: saldo
            };
            
            state.cuentas.push(nuevaCuenta);
            guardarEstado();
            mostrarToast('‚úÖ Cuenta creada');
            document.querySelector('.modal-overlay').remove();
            render();
        }

        function eliminarCuenta(id) {
            if (state.cuentas.length === 1) {
                mostrarToast('‚ö†Ô∏è Debe haber al menos una cuenta', 'warning');
                return;
            }
            if (confirm('¬øEliminar esta cuenta?')) {
                state.cuentas = state.cuentas.filter(c => c.id !== id);
                guardarEstado();
                mostrarToast('üóëÔ∏è Cuenta eliminada');
                render();
            }
        }

        // ===== FUNCIONES PARA INGRESOS =====
        function mostrarModalNuevoIngreso() {
            const modal = document.createElement('div');
            modal.className = 'modal-overlay';
            modal.innerHTML = `
                <div class="modal-content p-6 w-full max-w-md">
                    <h2 class="text-2xl font-bold mb-4 text-white">üí∞ Nuevo Ingreso</h2>
                    <input type="text" id="nuevo-ingreso-desc" class="input-neon w-full px-4 py-3 rounded-xl text-white mb-3" placeholder="Descripci√≥n">
                    <input type="number" id="nuevo-ingreso-monto" inputmode="decimal" class="input-neon w-full px-4 py-3 rounded-xl text-white mb-3" placeholder="Monto">
                    <select id="nuevo-ingreso-cuenta" class="input-neon w-full px-4 py-3 rounded-xl text-white mb-3">
                        ${state.cuentas.map(c => `<option value="${c.id}">${c.nombre}</option>`).join('')}
                    </select>
                    <input type="date" id="nuevo-ingreso-fecha" class="input-neon w-full px-4 py-3 rounded-xl text-white mb-3" value="${new Date().toISOString().split('T')[0]}">
                    <div class="flex gap-2">
                        <button onclick="this.closest('.modal-overlay').remove()" class="flex-1 bg-gray-600 px-6 py-3 rounded-xl font-bold">Cancelar</button>
                        <button onclick="crearIngreso()" class="flex-1 bg-green-600 px-6 py-3 rounded-xl font-bold">Agregar</button>
                    </div>
                </div>
            `;
            document.body.appendChild(modal);
            modal.onclick = (e) => { if (e.target === modal) modal.remove(); };
        }

        function crearIngreso() {
            const descripcion = document.getElementById('nuevo-ingreso-desc').value || 'Ingreso';
            const monto = parseFloat(document.getElementById('nuevo-ingreso-monto').value);
            const cuentaId = parseInt(document.getElementById('nuevo-ingreso-cuenta').value);
            const fecha = document.getElementById('nuevo-ingreso-fecha').value;
            
            if (!monto || monto <= 0) {
                mostrarToast('‚ö†Ô∏è Ingresa un monto v√°lido', 'warning');
                return;
            }
            
            const nuevoIngreso = {
                id: Date.now(),
                descripcion,
                monto,
                cuentaId,
                fecha: new Date(fecha).toISOString()
            };
            
            state.ingresos.push(nuevoIngreso);
            recalcularSaldosCuentas();
            guardarEstado();
            mostrarToast('‚úÖ Ingreso agregado');
            document.querySelector('.modal-overlay').remove();
            render();
        }

        function eliminarIngreso(id) {
            if (confirm('¬øEliminar este ingreso?')) {
                state.ingresos = state.ingresos.filter(i => i.id !== id);
                recalcularSaldosCuentas();
                guardarEstado();
                mostrarToast('üóëÔ∏è Ingreso eliminado');
                render();
            }
        }

        // ===== FUNCIONES PARA AJUSTES =====
        function mostrarModalNuevoAjuste() {
            const modal = document.createElement('div');
            modal.className = 'modal-overlay';
            modal.innerHTML = `
                <div class="modal-content p-6 w-full max-w-md">
                    <h2 class="text-2xl font-bold mb-4 text-white">‚öñÔ∏è Ajustar Saldo</h2>
                    <select id="nuevo-ajuste-cuenta" class="input-neon w-full px-4 py-3 rounded-xl text-white mb-3">
                        ${state.cuentas.map(c => `<option value="${c.id}">${c.nombre} - ${c.saldo.toFixed(2)}‚Ç¨</option>`).join('')}
                    </select>
                    <input type="number" id="nuevo-ajuste-monto" inputmode="decimal" class="input-neon w-full px-4 py-3 rounded-xl text-white mb-3" placeholder="Monto del ajuste">
                    <select id="nuevo-ajuste-tipo" class="input-neon w-full px-4 py-3 rounded-xl text-white mb-3">
                        <option value="positivo">‚ûï Aumentar saldo</option>
                        <option value="negativo">‚ûñ Reducir saldo</option>
                    </select>
                    <input type="text" id="nuevo-ajuste-razon" class="input-neon w-full px-4 py-3 rounded-xl text-white mb-3" placeholder="Raz√≥n del ajuste (opcional)">
                    <div class="flex gap-2">
                        <button onclick="this.closest('.modal-overlay').remove()" class="flex-1 bg-gray-600 px-6 py-3 rounded-xl font-bold">Cancelar</button>
                        <button onclick="crearAjuste()" class="flex-1 bg-blue-600 px-6 py-3 rounded-xl font-bold">Ajustar</button>
                    </div>
                </div>
            `;
            document.body.appendChild(modal);
            modal.onclick = (e) => { if (e.target === modal) modal.remove(); };
        }

        function crearAjuste() {
            const cuentaId = parseInt(document.getElementById('nuevo-ajuste-cuenta').value);
            const monto = parseFloat(document.getElementById('nuevo-ajuste-monto').value);
            const tipo = document.getElementById('nuevo-ajuste-tipo').value;
            const razon = document.getElementById('nuevo-ajuste-razon').value || 'Ajuste manual';
            
            if (!monto || monto <= 0) {
                mostrarToast('‚ö†Ô∏è Ingresa un monto v√°lido', 'warning');
                return;
            }
            
            const nuevoAjuste = {
                id: Date.now(),
                cuentaId,
                monto,
                tipo,
                razon,
                fecha: new Date().toISOString()
            };
            
            state.ajustes.push(nuevoAjuste);
            recalcularSaldosCuentas();
            guardarEstado();
            mostrarToast('‚úÖ Ajuste realizado');
            document.querySelector('.modal-overlay').remove();
            render();
        }

        // ===== FUNCIONES PARA GASTOS RECURRENTES =====
        function mostrarModalGestionRecurrentes() {
            const modal = document.createElement('div');
            modal.className = 'modal-overlay';
            modal.innerHTML = `
                <div class="modal-content p-6 w-full max-w-md">
                    <h2 class="text-2xl font-bold mb-4 text-white">üîÑ Gastos Recurrentes</h2>
                    <div class="space-y-2 mb-4 max-h-60 overflow-y-auto">
                        ${state.gastosRecurrentes.length === 0 ? '<p class="text-gray-400 text-center py-4">No hay gastos recurrentes</p>' : ''}
                        ${state.gastosRecurrentes.map(gr => `
                            <div class="bg-black/30 rounded-xl p-3">
                                <div class="flex justify-between items-center">
                                    <div>
                                        <p class="text-white font-semibold">${gr.nombre}</p>
                                        <p class="text-xs text-gray-400">${gr.categoria} - ${parseFloat(gr.monto).toFixed(2)}‚Ç¨/mes</p>
                                    </div>
                                    <button onclick="eliminarRecurrente(${gr.id}); document.querySelector('.modal-overlay').remove(); mostrarModalGestionRecurrentes();" class="text-red-400">üóëÔ∏è</button>
                                </div>
                            </div>
                        `).join('')}
                    </div>
                    <button onclick="mostrarModalNuevoRecurrente(); document.querySelector('.modal-overlay').remove();" class="w-full bg-purple-600 px-6 py-3 rounded-xl font-bold mb-2">
                        ‚ûï Nuevo Gasto Recurrente
                    </button>
                    <button onclick="this.closest('.modal-overlay').remove()" class="w-full bg-gray-600 px-6 py-3 rounded-xl font-bold">
                        Cerrar
                    </button>
                </div>
            `;
            document.body.appendChild(modal);
            modal.onclick = (e) => { if (e.target === modal) modal.remove(); };
        }

        function mostrarModalNuevoRecurrente() {
            const modal = document.createElement('div');
            modal.className = 'modal-overlay';
            modal.innerHTML = `
                <div class="modal-content p-6 w-full max-w-md">
                    <h2 class="text-2xl font-bold mb-4 text-white">Nuevo Gasto Recurrente</h2>
                    <input type="text" id="nuevo-recurrente-nombre" class="input-neon w-full px-4 py-3 rounded-xl text-white mb-3" placeholder="Nombre (ej: Netflix)">
                    <input type="number" id="nuevo-recurrente-monto" inputmode="decimal" class="input-neon w-full px-4 py-3 rounded-xl text-white mb-3" placeholder="Monto mensual">
                    <select id="nuevo-recurrente-categoria" class="input-neon w-full px-4 py-3 rounded-xl text-white mb-3">
                        ${state.categorias.map(cat => `<option value="${cat}">${cat}</option>`).join('')}
                    </select>
                    <select id="nuevo-recurrente-cuenta" class="input-neon w-full px-4 py-3 rounded-xl text-white mb-3">
                        ${state.cuentas.map(c => `<option value="${c.id}">${c.nombre}</option>`).join('')}
                    </select>
                    <div class="flex gap-2">
                        <button onclick="this.closest('.modal-overlay').remove()" class="flex-1 bg-gray-600 px-6 py-3 rounded-xl font-bold">Cancelar</button>
                        <button onclick="crearRecurrente()" class="flex-1 bg-orange-600 px-6 py-3 rounded-xl font-bold">Crear</button>
                    </div>
                </div>
            `;
            document.body.appendChild(modal);
            modal.onclick = (e) => { if (e.target === modal) modal.remove(); };
        }

        function crearRecurrente() {
            const nombre = document.getElementById('nuevo-recurrente-nombre').value;
            const monto = parseFloat(document.getElementById('nuevo-recurrente-monto').value);
            const categoria = document.getElementById('nuevo-recurrente-categoria').value;
            const cuentaId = parseInt(document.getElementById('nuevo-recurrente-cuenta').value);
            
            if (!nombre) {
                mostrarToast('‚ö†Ô∏è Ingresa un nombre', 'warning');
                return;
            }
            
            if (!monto || monto <= 0) {
                mostrarToast('‚ö†Ô∏è Ingresa un monto v√°lido', 'warning');
                return;
            }
            
            const nuevoRecurrente = {
                id: Date.now(),
                nombre,
                monto,
                categoria,
                cuentaId
            };
            
            state.gastosRecurrentes.push(nuevoRecurrente);
            guardarEstado();
            mostrarToast('‚úÖ Gasto recurrente creado');
            document.querySelector('.modal-overlay').remove();
            mostrarModalGestionRecurrentes();
        }

        function eliminarRecurrente(id) {
            if (confirm('¬øEliminar este gasto recurrente?')) {
                state.gastosRecurrentes = state.gastosRecurrentes.filter(gr => gr.id !== id);
                guardarEstado();
                mostrarToast('üóëÔ∏è Gasto recurrente eliminado');
            }
        }

        // Inicializaci√≥n
        setupPullToRefresh();
        setupSwipeDelete();
        setupLongPress();
        detectarPatrones();
        render();
    </script>
</body>
</html>
