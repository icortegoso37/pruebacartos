                            </div>
                            
                            ${state.backupConfig.activo ? `
                                <div>
                                    <label class="text-gray-300 block mb-2">Frecuencia</label>
                                    <select 
                                        class="input-neon w-full px-4 py-3 rounded-xl text-white"
