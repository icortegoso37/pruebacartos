        // ============================================
        // GESTOS T√ÅCTILES (SWIPE TO DELETE)
        // ============================================
        function iniciarSwipe(event, id, tipo) {
            touchStartX = event.touches[0].clientX;
            touchStartY = event.touches[0].clientY;
            swipeElement = event.currentTarget;
        }

        function moverSwipe(event) {
            if (!swipeElement) return;
            
            const touchX = event.touches[0].clientX;
            const touchY = event.touches[0].clientY;
            const diffX = touchStartX - touchX;
            const diffY = Math.abs(touchStartY - touchY);
            
            // Solo swipe horizontal
            if (diffY < 30 && diffX > 0) {
                const translateX = Math.min(diffX, 80);
                swipeElement.style.transform = `translateX(-${translateX}px)`;
                
                const deleteBtn = swipeElement.querySelector('.swipe-delete');
                if (deleteBtn) {
                    deleteBtn.style.opacity = translateX / 80;
                }
            }
        }

        function finalizarSwipe(event, id, tipo) {
            if (!swipeElement) return;
            
            const touchX = event.changedTouches[0].clientX;
            const diffX = touchStartX - touchX;
            
            if (diffX > 80) {
                // Swipe completo - eliminar
                swipeElement.style.transform = 'translateX(-100%)';
                swipeElement.style.opacity = '0';
                
                setTimeout(() => {
                    if (tipo === 'gasto') {
                        eliminarGasto(id);
                    } else if (tipo === 'ingreso') {
                        eliminarIngreso(id);
                    }
                }, 300);
            } else {
                // Swipe incompleto - volver
                swipeElement.style.transform = 'translateX(0)';
                const deleteBtn = swipeElement.querySelector('.swipe-delete');
                if (deleteBtn) {
                    deleteBtn.style.opacity = '0';
                }
            }
            
            swipeElement = null;
        }

