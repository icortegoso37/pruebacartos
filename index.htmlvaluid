                            <div>
                                <label class="text-gray-300 block mb-2 font-semibold">Categor√≠as Esenciais</label>
                                <div class="space-y-2 mb-3">
                                    ${state.modoAhorroExtremo.categoriasEsenciales.map(cat => `
                                        <div class="flex items-center justify-between bg-black/30 rounded-lg p-3">
                                            <span class="text-white">‚úÖ ${obtenerIconoCategoria(cat)} ${cat}</span>
                                            <button 
