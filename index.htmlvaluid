        // ============================================
        // GESTI√ìN DE GASTOS
        // ============================================
        function agregarGasto() {
            try {
                const textoInput = document.getElementById('gasto-texto');
                const texto = textoInput ? textoInput.value : '';
                const montoManual = document.getElementById('gasto-monto') ? document.getElementById('gasto-monto').value : '';
                const categoriaManual = document.getElementById('gasto-categoria') ? document.getElementById('gasto-categoria').value : '';
                const cuentaId = parseInt(document.getElementById('gasto-cuenta').value);
                
                let descripcion, monto, categoria;
                
                if (texto) {
                    const parseado = parsearTextoInteligente(texto);
                    if (parseado && parseado.monto) {
                        descripcion = parseado.descripcion;
                        monto = parseado.monto;
                        categoria = parseado.categoria;
                        textoInput.value = '';
                    } else {
                        descripcion = parseado ? parseado.descripcion : 'Gasto';
                        monto = montoManual ? parseFloat(montoManual) : null;
                        categoria = parseado ? parseado.categoria : categoriaManual;
                    }
                } else {
                    descripcion = 'Gasto';
                    monto = montoManual ? parseFloat(montoManual) : null;
                    categoria = categoriaManual;
                }
                
                if (monto && monto > 0) {
                    // Validar modo ahorro extremo
                    const validacion = validarGastoModoAhorroExtremo(categoria, monto);
                    
                    if (!validacion.permitido) {
                        if (confirm(`${validacion.mensaje}\n\nQueres engadir este gasto igualmente?`)) {
                            // Usuario forz√≥ el gasto
                        } else {
                            return;
                        }
                    } else if (validacion.tipo === 'advertencia') {
                        mostrarToast(validacion.mensaje, 'warning');
                    }
                    
                    const nuevoGasto = {
                        descripcion,
                        monto: monto,
                        categoria,
                        cuentaId,
                        fecha: obtenerFechaActual().toISOString(),
                        id: Date.now()
                    };
                    
                    state.gastos.push(nuevoGasto);
                    recalcularSaldosCuentas();
                    
                    if (document.getElementById('gasto-monto')) {
                        document.getElementById('gasto-monto').value = '';
                    }
                    
                    guardarEstado();
                    verificarAlertas();
                    
                    cerrarModal();
                    render();
                    
                    mostrarToast(`‚úÖ Gasto engadido: ${monto.toFixed(2)}‚Ç¨`, 'success');
                }
            } catch (error) {
                console.error('Erro ao engadir gasto:', error);
                mostrarToast('‚ùå Erro ao engadir o gasto', 'error');
            }
        }

