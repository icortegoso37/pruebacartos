        // ============================================
        function obtenerDatosGraficoPeriodo() {
            const { inicioPeriodo, finPeriodo } = obtenerPeriodoPagoActual();
            
            const gastosDelPeriodo = state.gastos.filter(gasto => {
                if (!gasto || !gasto.fecha) return false;
                const fechaGasto = new Date(gasto.fecha);
                return fechaGasto >= inicioPeriodo && fechaGasto <= finPeriodo;
            });
            
            const gastosPorCategoria = {};
            gastosDelPeriodo.forEach(gasto => {
                const categoria = gasto.categoria || 'Outros';
                gastosPorCategoria[categoria] = (gastosPorCategoria[categoria] || 0) + parseFloat(gasto.monto || 0);
            });
            
            return Object.entries(gastosPorCategoria).map(([nombre, valor]) => ({
                nombre,
                valor
            }));
        }

        function crearGraficoPastel() {
            const canvas = document.getElementById('pieChart');
            if (!canvas) return;
            
            const datosGrafico = obtenerDatosGraficoPeriodo();
            if (datosGrafico.length === 0) return;
            
            new Chart(canvas, {
                type: 'doughnut',
                data: {
                    labels: datosGrafico.map(d => d.nombre),
                    datasets: [{
                        data: datosGrafico.map(d => d.valor),
                        backgroundColor: datosGrafico.map(d => obtenerColorCategoria(d.nombre)),
                        borderWidth: 3,
                        borderColor: '#0f0f23'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                color: '#ffffff',
                                padding: 15,
                                font: { size: 12 },
                                generateLabels: (chart) => {
                                    const data = chart.data;
                                    return data.labels.map((label, i) => ({
                                        text: `${obtenerIconoCategoria(label)} ${label}`,
                                        fillStyle: data.datasets[0].backgroundColor[i],
                                        hidden: false,
                                        index: i
                                    }));
                                }
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    const porcentaje = ((context.parsed / total) * 100).toFixed(1);
                                    return `${context.label}: ${context.parsed.toFixed(2)}‚Ç¨ (${porcentaje}%)`;
                                }
                            }
                        }
                    }
                }
            });
        }

        function crearGraficoLinea() {
            const canvas = document.getElementById('lineChart');
            if (!canvas) return;
            
            const stats = calcularEstadisticas();
            const gastosPorDia = stats.gastosPorDia;
            
            if (Object.keys(gastosPorDia).length === 0) return;
            
            // Crear array de fechas del per√≠odo
            const { inicioPeriodo, finPeriodo } = obtenerPeriodoPagoActual();
            const fechas = [];
            const valores = [];
            
            let fechaActual = new Date(inicioPeriodo);
            while (fechaActual <= finPeriodo) {
                const fechaStr = fechaActual.toISOString().split('T')[0];
                fechas.push(new Date(fechaActual).toLocaleDateString('gl-ES', { day: '2-digit', month: '2-digit' }));
                valores.push(gastosPorDia[fechaStr] || 0);
                fechaActual.setDate(fechaActual.getDate() + 1);
            }
            
            new Chart(canvas, {
                type: 'line',
                data: {
                    labels: fechas,
                    datasets: [{
                        label: 'Gastos diarios',
                        data: valores,
                        borderColor: '#8338EC',
                        backgroundColor: 'rgba(131, 56, 236, 0.1)',
                        tension: 0.4,
                        fill: true,
                        pointBackgroundColor: '#FF006E',
                        pointBorderColor: '#fff',
                        pointBorderWidth: 2,
                        pointRadius: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
