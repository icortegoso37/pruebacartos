        // ============================================
        function validarGastoModoAhorroExtremo(categoria, monto) {
            if (!state.modoAhorroExtremo.activo) {
                return { permitido: true };
            }

            const esEsencial = state.modoAhorroExtremo.categoriasEsenciales.includes(categoria);
            const stats = calcularEstadisticas();
            const seHaPasado = stats.gastoPorDiaRestante <= 0;

            if (esEsencial) {
                return { permitido: true, mensaje: 'Categor√≠a esencial permitida' };
            }

            if (seHaPasado) {
                return {
                    permitido: false,
                    mensaje: 'üö´ MODO AHORRO EXTREMO: Non podes engadir gastos en categor√≠as non esenciais. Xa superaches o teu presuposto diario.',
                    tipo: 'bloqueado'
                };
            }

            if (state.modoAhorroExtremo.limiteGastoDiario > 0) {
                const hoy = obtenerFechaActual();
                const gastosHoy = state.gastos.filter(g => {
                    if (!g || !g.fecha) return false;
                    const fechaGasto = new Date(g.fecha);
                    return fechaGasto.toDateString() === hoy.toDateString();
                });
                const totalGastadoHoy = gastosHoy.reduce((sum, g) => sum + parseFloat(g.monto || 0), 0);

                if (totalGastadoHoy + parseFloat(monto) > state.modoAhorroExtremo.limiteGastoDiario) {
                    return {
                        permitido: false,
                        mensaje: `üö´ MODO AHORRO EXTREMO: Superar√≠as o teu l√≠mite diario de ${state.modoAhorroExtremo.limiteGastoDiario.toFixed(2)}‚Ç¨. Hoxe gastaches ${totalGastadoHoy.toFixed(2)}‚Ç¨.`,
                        tipo: 'bloqueado'
                    };
                }
            }

            return {
                permitido: true,
                mensaje: `‚ö†Ô∏è MODO AHORRO EXTREMO: Est√°s a engadir un gasto non esencial. Quedan ${stats.gastoPorDiaRestante.toFixed(2)}‚Ç¨ para hoxe.`,
                tipo: 'advertencia'
            };
        }

