    <script>
        // ============================================
        // ESTADO GLOBAL
        // ============================================
        let state = {
            sueldo: localStorage.getItem('sueldo') || '',
            diaCobro: localStorage.getItem('diaCobro') || '',
            gastosRecurrentes: JSON.parse(localStorage.getItem('gastosRecurrentes') || '[]'),
            gastos: JSON.parse(localStorage.getItem('gastos') || '[]'),
            ingresos: JSON.parse(localStorage.getItem('ingresos') || '[]'),
            ajustes: JSON.parse(localStorage.getItem('ajustes') || '[]'),
            objetivosAhorro: JSON.parse(localStorage.getItem('objetivosAhorro') || '[]'),
            categorias: JSON.parse(localStorage.getItem('categorias') || '["Alimentaci√≥n", "Transporte", "Entretenimiento", "Salud", "Hogar", "Ropa", "Outros"]'),
            cuentas: JSON.parse(localStorage.getItem('cuentas') || '[{"id": 1, "nombre": "Conta Principal", "tipo": "banco", "saldoInicial": 0, "saldo": 0}]'),
            alertasConfig: JSON.parse(localStorage.getItem('alertasConfig') || '{"diasParaCobro": 3, "porcentajeGastoMitadMes": 50, "alertaObjetivosEnRiesgo": true, "diasSinGastos": 7}'),
            vista: 'cartinos',
            alertasMostradas: [],
            ultimaActualizacionRecurrentes: localStorage.getItem('ultimaActualizacionRecurrentes') || '',
            editando: null,
            ultimoMesConfirmado: localStorage.getItem('ultimoMesConfirmado') || '',
            sueldoConfirmadoEsteMes: localStorage.getItem('sueldoConfirmadoEsteMes') === 'true',
            modoAhorroExtremo: JSON.parse(localStorage.getItem('modoAhorroExtremo') || '{"activo": false, "categoriasEsenciales": ["Alimentaci√≥n", "Salud", "Transporte", "Hogar"], "limiteGastoDiario": 0}'),
            recordatorios: JSON.parse(localStorage.getItem('recordatorios') || '[]'),
            dashboardConfig: JSON.parse(localStorage.getItem('dashboardConfig') || '{"widgets": ["disponibleHoy", "gastosRecurrentes", "objetivos", "ultimosGastos"]}'),
            fechaSimulada: localStorage.getItem('fechaSimulada') || null,
            notificacionesActivadas: localStorage.getItem('notificacionesActivadas') === 'true',
            backupConfig: JSON.parse(localStorage.getItem('backupConfig') || '{"activo": false, "frecuencia": "semanal", "ultimoBackup": null}'),
            widgetVisible: localStorage.getItem('widgetVisible') === 'true'
        };

        let saveTimeout = null;
        let touchStartX = 0;
        let touchStartY = 0;
        let swipeElement = null;

        // Iconos por categor√≠a
        const iconosCategorias = {
            'Alimentaci√≥n': 'üçΩÔ∏è',
            'Transporte': 'üöó',
            'Entretenimiento': 'üéÆ',
            'Salud': 'üíä',
            'Hogar': 'üè†',
            'Ropa': 'üëï',
            'Outros': 'üì¶'
        };

        // Palabras clave para detecci√≥n inteligente
        const palabrasClave = {
            'Alimentaci√≥n': ['supermercado', 'mercado', 'mercadona', 'carrefour', 'lidl', 'aldi', 'dia', 'comida', 'cena', 'desayuno', 'almuerzo', 'restaurante', 'bar', 'cafeter√≠a', 'caf√©', 'pizza', 'hamburgues', 'mcdonalds', 'burger', 'kfc', 'telepizza'],
            'Transporte': ['gasolina', 'diesel', 'combustible', 'bus', 'metro', 'taxi', 'uber', 'cabify', 'parking', 'aparcamiento', 'peaxe', 'tren', 'renfe', 'avi√≥n', 'vueling', 'ryanair'],
            'Entretenimiento': ['cine', 'teatro', 'concierto', 'netflix', 'spotify', 'hbo', 'disney', 'prime', 'youtube', 'xogo', 'videoxogo', 'steam', 'playstation', 'xbox', 'ocio'],
            'Salud': ['farmacia', 'm√©dico', 'doutor', 'hospital', 'cl√≠nica', 'medicamento', 'medicina', 'seguro', 'ximnasio', 'deporte', 'fitness'],
            'Hogar': ['aluguer', 'hipoteca', 'luz', 'auga', 'gas', 'internet', 'wifi', 'm√≥bil', 'tel√©fono', 'ikea', 'leroy', 'bricolaxe', 'ferreter√≠a', 'moble'],
            'Ropa': ['zara', 'hm', 'primark', 'mango', 'roupa', 'zapatillas', 'zapatos', 'calzado', 'vestido', 'pantal√≥n', 'camisa', 'abrigo']
        };

        // Migraci√≥n de datos
        state.cuentas.forEach(cuenta => {
            if (cuenta.saldoInicial === undefined) {
                cuenta.saldoInicial = cuenta.saldo || 0;
            }
        });

        // Inicializaci√≥n
        setTimeout(() => {
            recalcularSaldosCuentas();
            verificarConfirmacionSueldo();
            verificarAlertas();
            verificarRecordatorios();
            if (state.backupConfig.activo) {
                verificarBackupAutomatico();
            }
            registrarServiceWorker();
        }, 0);

        // ============================================
        // SERVICE WORKER (PWA)
        // ============================================
        function registrarServiceWorker() {
            if ('serviceWorker' in navigator) {
                const swCode = `
                    self.addEventListener('install', (event) => {
                        event.waitUntil(
                            caches.open('cartinos-v1').then((cache) => {
                                return cache.addAll([
                                    '/',
                                    '/index.html'
                                ]);
                            })
                        );
                    });

                    self.addEventListener('fetch', (event) => {
                        event.respondWith(
                            caches.match(event.request).then((response) => {
                                return response || fetch(event.request);
                            })
                        );
                    });

                    self.addEventListener('push', (event) => {
                        const data = event.data.json();
                        self.registration.showNotification(data.title, {
                            body: data.body,
                            icon: 'data:image/svg+xml,%3Csvg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"%3E%3Ctext y=".9em" font-size="90"%3Eüí∞%3C/text%3E%3C/svg%3E'
                        });
                    });
                `;
                
                const blob = new Blob([swCode], { type: 'application/javascript' });
                const swUrl = URL.createObjectURL(blob);
                
                navigator.serviceWorker.register(swUrl).then(() => {
                    console.log('‚úÖ Service Worker rexistrado');
                }).catch((error) => {
                    console.log('‚ùå Erro ao rexistrar Service Worker:', error);
                });
            }
        }

        // ============================================
        // FUNCI√ìNS DE PERSISTENCIA
        // ============================================
        function guardarEstadoDebounce() {
            if (saveTimeout) clearTimeout(saveTimeout);
            saveTimeout = setTimeout(() => {
                guardarEstado();
            }, 1000);
        }

        function guardarEstado() {
            try {
                localStorage.setItem('sueldo', state.sueldo);
                localStorage.setItem('diaCobro', state.diaCobro);
                localStorage.setItem('gastosRecurrentes', JSON.stringify(state.gastosRecurrentes));
                localStorage.setItem('gastos', JSON.stringify(state.gastos));
                localStorage.setItem('ingresos', JSON.stringify(state.ingresos));
                localStorage.setItem('ajustes', JSON.stringify(state.ajustes));
                localStorage.setItem('objetivosAhorro', JSON.stringify(state.objetivosAhorro));
                localStorage.setItem('categorias', JSON.stringify(state.categorias));
                localStorage.setItem('cuentas', JSON.stringify(state.cuentas));
                localStorage.setItem('alertasConfig', JSON.stringify(state.alertasConfig));
                localStorage.setItem('ultimaActualizacionRecurrentes', state.ultimaActualizacionRecurrentes);
                localStorage.setItem('ultimoMesConfirmado', state.ultimoMesConfirmado);
                localStorage.setItem('sueldoConfirmadoEsteMes', state.sueldoConfirmadoEsteMes);
                localStorage.setItem('modoAhorroExtremo', JSON.stringify(state.modoAhorroExtremo));
                localStorage.setItem('recordatorios', JSON.stringify(state.recordatorios));
                localStorage.setItem('dashboardConfig', JSON.stringify(state.dashboardConfig));
                localStorage.setItem('fechaSimulada', state.fechaSimulada);
                localStorage.setItem('notificacionesActivadas', state.notificacionesActivadas);
                localStorage.setItem('backupConfig', JSON.stringify(state.backupConfig));
                localStorage.setItem('widgetVisible', state.widgetVisible);
            } catch (e) {
                if (e.name === 'QuotaExceededError') {
                    mostrarToast('‚ö†Ô∏è Almacenamento cheo! Exporta e limpa datos antigos.', 'warning');
                }
            }
        }
        // ============================================
        // FUNCI√ìNS DE DATA E PER√çODO
        // ============================================
        function obtenerFechaActual() {
            if (state.fechaSimulada) {
                return new Date(state.fechaSimulada);
            }
            return new Date();
        }

        function obtenerPeriodoPagoActual() {
            const hoy = obtenerFechaActual();
            const diaActual = hoy.getDate();
            const mesActual = hoy.getMonth();
            const a√±oActual = hoy.getFullYear();
            const diaCobro = parseInt(state.diaCobro || 1);
            
            let inicioPeriodo, finPeriodo;
            
            if (diaActual >= diaCobro) {
                inicioPeriodo = new Date(a√±oActual, mesActual, diaCobro);
                finPeriodo = new Date(a√±oActual, mesActual + 1, diaCobro - 1);
            } else {
                inicioPeriodo = new Date(a√±oActual, mesActual - 1, diaCobro);
                finPeriodo = new Date(a√±oActual, mesActual, diaCobro - 1);
            }
            
            return { inicioPeriodo, finPeriodo };
        }

        function obtenerIdentificadorPeriodo() {
            const { inicioPeriodo } = obtenerPeriodoPagoActual();
            return `${inicioPeriodo.getFullYear()}-${inicioPeriodo.getMonth()}-${inicioPeriodo.getDate()}`;
        }

        function formatearFecha(fecha) {
            const f = new Date(fecha);
            return f.toLocaleDateString('gl-ES', { day: '2-digit', month: '2-digit', year: 'numeric' });
        }

        function formatearFechaHora(fecha) {
            const f = new Date(fecha);
            return f.toLocaleDateString('gl-ES', { 
                day: '2-digit', 
                month: '2-digit', 
                year: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });
        }

        // ============================================
        // CONFIRMACI√ìN DE SUELDO
        // ============================================
        function verificarConfirmacionSueldo() {
            if (!state.sueldo || !state.diaCobro) {
                return;
            }

            const periodoActualId = obtenerIdentificadorPeriodo();
            
            if (state.ultimoMesConfirmado !== periodoActualId) {
                state.sueldoConfirmadoEsteMes = false;
