        function aplicarFiltros() {
            const texto = document.getElementById('busqueda-texto')?.value.toLowerCase() || '';
            const categoria = document.getElementById('busqueda-categoria')?.value || '';
            const cuentaId = document.getElementById('busqueda-cuenta')?.value || '';
            const desde = document.getElementById('busqueda-desde')?.value || '';
            const hasta = document.getElementById('busqueda-hasta')?.value || '';
            
            let resultados = [];
            
            // Buscar en gastos
            state.gastos.forEach(g => {
                let coincide = true;
                
                if (texto && !g.descripcion.toLowerCase().includes(texto)) {
                    coincide = false;
                }
                
                if (categoria && g.categoria !== categoria) {
                    coincide = false;
                }
                
                if (cuentaId && g.cuentaId !== parseInt(cuentaId)) {
                    coincide = false;
                }
                
                if (desde && new Date(g.fecha) < new Date(desde)) {
                    coincide = false;
                }
                
                if (hasta && new Date(g.fecha) > new Date(hasta)) {
                    coincide = false;
                }
                
                if (coincide) {
                    resultados.push({ tipo: 'gasto', data: g });
                }
            });
            
            // Buscar en ingresos
            state.ingresos.forEach(i => {
                let coincide = true;
                
                if (texto && !i.descripcion.toLowerCase().includes(texto)) {
                    coincide = false;
                }
                
                if (cuentaId && i.cuentaId !== parseInt(cuentaId)) {
                    coincide = false;
                }
                
                if (desde && new Date(i.fecha) < new Date(desde)) {
                    coincide = false;
                }
                
                if (hasta && new Date(i.fecha) > new Date(hasta)) {
                    coincide = false;
                }
                
                if (coincide) {
                    resultados.push({ tipo: 'ingreso', data: i });
                }
            });
            
            // Ordenar por fecha (m√°s reciente primero)
            resultados.sort((a, b) => new Date(b.data.fecha) - new Date(a.data.fecha));
            
            mostrarResultadosBusqueda(resultados);
        }

        function mostrarResultadosBusqueda(resultados) {
            const container = document.getElementById('resultados-busqueda');
            if (!container) return;
            
            if (resultados.length === 0) {
