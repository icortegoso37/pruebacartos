    <script>
      // Estado global
       let state = {
    diaCobro: localStorage.getItem('diaCobro') || '',
    gastosRecurrentes: JSON.parse(localStorage.getItem('gastosRecurrentes') || '[]'),
    gastos: JSON.parse(localStorage.getItem('gastos') || '[]'),
    ingresos: JSON.parse(localStorage.getItem('ingresos') || '[]'),
    ajustes: JSON.parse(localStorage.getItem('ajustes') || '[]'),
    transferencias: JSON.parse(localStorage.getItem('transferencias') || '[]'),
    objetivosAhorro: JSON.parse(localStorage.getItem('objetivosAhorro') || '[]'),
    categorias: JSON.parse(localStorage.getItem('categorias') || '["Alimentaci√≥n", "Transporte", "Entretenimiento", "Salud", "Hogar", "Ropa", "Outros"]'),
    cuentas: JSON.parse(localStorage.getItem('cuentas') || '[{"id": 1, "nombre": "Conta Principal", "tipo": "banco", "saldoInicial": 0, "saldo": 0}]'),
    alertasConfig: JSON.parse(localStorage.getItem('alertasConfig') || '{"diasParaCobro": 3, "porcentajeGastoMitadMes": 50, "alertaObjetivosEnRiesgo": true}'),
    sueldoConfirmadoPeriodoActual: localStorage.getItem('sueldoConfirmadoPeriodoActual') || '',
    historialAcciones: [],
    maxHistorial: 10,
    vista: 'principal',
            alertasMostradas: [],
            ultimaActualizacionRecurrentes: localStorage.getItem('ultimaActualizacionRecurrentes') || '',
            editando: null,
            eventosCalendario: JSON.parse(localStorage.getItem('eventosCalendario') || '[]')
        };

        let saveTimeout = null;

        // Migraci√≥n
        state.cuentas.forEach(cuenta => {
            if (cuenta.saldoInicial === undefined) {
                cuenta.saldoInicial = cuenta.saldo || 0;
            }
        });

        setTimeout(() => {
            recalcularSaldosCuentas();
            registrarServiceWorker();
        }, 0);

        // Service Worker para PWA
        function registrarServiceWorker() {
            if ('serviceWorker' in navigator) {
                const swCode = `
                    self.addEventListener('install', (e) => {
                        e.waitUntil(caches.open('cartinos-v1').then(c => c.addAll(['/'])));
                    });
                    self.addEventListener('fetch', (e) => {
                        e.respondWith(caches.match(e.request).then(r => r || fetch(e.request)));
                    });
                `;
                const blob = new Blob([swCode], { type: 'application/javascript' });
                const swUrl = URL.createObjectURL(blob);
                navigator.serviceWorker.register(swUrl).catch(() => {});
            }
        }

        // Palabras clave para detecci√≥n inteligente
        const palabrasClave = {
            'Alimentaci√≥n': ['supermercado', 'mercado', 'mercadona', 'carrefour', 'lidl', 'aldi', 'dia', 'comida', 'cena', 'desayuno', 'almuerzo', 'restaurante', 'bar', 'cafeter√≠a', 'caf√©', 'pizza', 'hamburgues', 'mcdonalds', 'burger', 'kfc', 'telepizza'],
            'Transporte': ['gasolina', 'diesel', 'combustible', 'bus', 'metro', 'taxi', 'uber', 'cabify', 'parking', 'aparcamiento', 'peaje', 'tren', 'renfe', 'avi√≥n', 'vueling', 'ryanair'],
            'Entretenimiento': ['cine', 'teatro', 'concierto', 'netflix', 'spotify', 'hbo', 'disney', 'prime', 'youtube', 'juego', 'videojuego', 'steam', 'playstation', 'xbox', 'ocio'],
            'Salud': ['farmacia', 'm√©dico', 'doctor', 'hospital', 'cl√≠nica', 'medicamento', 'medicina', 'seguro', 'gimnasio', 'deporte', 'fitness'],
            'Hogar': ['alquiler', 'hipoteca', 'luz', 'agua', 'gas', 'internet', 'wifi', 'm√≥vil', 'tel√©fono', 'ikea', 'leroy', 'bricolaje', 'ferreter√≠a', 'mueble'],
            'Ropa': ['zara', 'hm', 'primark', 'mango', 'ropa', 'zapatillas', 'zapatos', 'calzado', 'vestido', 'pantal√≥n', 'camisa', 'abrigo']
        };

        function guardarEstadoDebounce() {
            if (saveTimeout) clearTimeout(saveTimeout);
            saveTimeout = setTimeout(() => guardarEstado(), 1000);
        }

        function guardarEstado() {
            localStorage.setItem('diaCobro', state.diaCobro);
            localStorage.setItem('gastosRecurrentes', JSON.stringify(state.gastosRecurrentes));
            localStorage.setItem('gastos', JSON.stringify(state.gastos));
            localStorage.setItem('ingresos', JSON.stringify(state.ingresos));
            localStorage.setItem('ajustes', JSON.stringify(state.ajustes));
            localStorage.setItem('transferencias', JSON.stringify(state.transferencias));
            localStorage.setItem('objetivosAhorro', JSON.stringify(state.objetivosAhorro));
            localStorage.setItem('categorias', JSON.stringify(state.categorias));
            localStorage.setItem('cuentas', JSON.stringify(state.cuentas));
            localStorage.setItem('alertasConfig', JSON.stringify(state.alertasConfig));
            localStorage.setItem('ultimaActualizacionRecurrentes', state.ultimaActualizacionRecurrentes);
            localStorage.setItem('sueldoConfirmadoPeriodoActual', state.sueldoConfirmadoPeriodoActual);
            localStorage.setItem('eventosCalendario', JSON.stringify(state.eventosCalendario));
        }

        function parsearTextoInteligente(texto) {
            if (!texto) return null;
            
            texto = texto.toLowerCase().trim();
            
            const regexMonto = /(\d+(?:[.,]\d+)?)/g;
            const montos = texto.match(regexMonto);
            let monto = null;
            
            if (montos && montos.length > 0) {
                monto = parseFloat(montos[montos.length - 1].replace(',', '.'));
            }
            
            let categoriaDetectada = 'Outros';
            for (const [categoria, palabras] of Object.entries(palabrasClave)) {
                for (const palabra of palabras) {
                    if (texto.includes(palabra)) {
                        categoriaDetectada = categoria;
                        break;
                    }
                }
                if (categoriaDetectada !== 'Outros') break;
            }
            
            let descripcion = texto;
            if (monto && montos) {
                const ultimoMonto = montos[montos.length - 1];
                const index = descripcion.lastIndexOf(ultimoMonto);
                if (index !== -1) {
                    descripcion = descripcion.substring(0, index) + descripcion.substring(index + ultimoMonto.length);
                }
            }
            descripcion = descripcion.trim();
            
            return {
                descripcion: descripcion || 'Sen descrici√≥n',
                monto: monto,
                categoria: categoriaDetectada
            };
        }

        function obtenerColorCategoria(categoria) {
            const coloresPredefinidos = {
                'Alimentaci√≥n': '#FF006E',
                'Transporte': '#8338EC',
                'Entretenimiento': '#FFBE0B',
                'Salud': '#FB5607',
                'Hogar': '#3A86FF',
                'Ropa': '#FF006E',
                'Outros': '#00F5FF'
            };
            
            if (coloresPredefinidos[categoria]) return coloresPredefinidos[categoria];
            
            let hash = 0;
            for (let i = 0; i < categoria.length; i++) {
                hash = categoria.charCodeAt(i) + ((hash << 5) - hash);
            }
            const colores = ['#FF006E', '#8338EC', '#FFBE0B', '#FB5607', '#3A86FF', '#00F5FF', '#10b981', '#f59e0b'];
            return colores[Math.abs(hash) % colores.length];
        }

        function obtenerPeriodoPagoActual() {
            const hoy = new Date();
            const diaActual = hoy.getDate();
            const mesActual = hoy.getMonth();
            const a√±oActual = hoy.getFullYear();
            const diaCobro = parseInt(state.diaCobro || 1);
            
            let inicioPeriodo, finPeriodo;
            
            if (diaActual >= diaCobro) {
                inicioPeriodo = new Date(a√±oActual, mesActual, diaCobro);
                finPeriodo = new Date(a√±oActual, mesActual + 1, diaCobro - 1);
            } else {
                inicioPeriodo = new Date(a√±oActual, mesActual - 1, diaCobro);
                finPeriodo = new Date(a√±oActual, mesActual, diaCobro - 1);
            }
            
            return { inicioPeriodo, finPeriodo };
        }

       function calcularSaldoCuenta(cuentaId) {
            const cuenta = state.cuentas.find(c => c.id === cuentaId);
            if (!cuenta) return 0;
            
            let saldo = parseFloat(cuenta.saldoInicial || 0);
            
            state.ingresos.forEach(i => {
                if (i.cuentaId === cuentaId) saldo += parseFloat(i.monto);
            });
            
            state.gastos.forEach(g => {
                if (g.cuentaId === cuentaId) saldo -= parseFloat(g.monto);
            });
            
            state.ajustes.forEach(a => {
                if (a.cuentaId === cuentaId) {
                    const monto = parseFloat(a.monto);
                    saldo += (a.tipo === 'positivo' ? monto : -monto);
                }
            });
            
            if (state.transferencias) {
                state.transferencias.forEach(t => {
                    if (t.origenId === cuentaId) {
                        saldo -= parseFloat(t.monto);
                    }
                    if (t.destinoId === cuentaId) {
                        saldo += parseFloat(t.monto);
                    }
                });
            }
            
            return saldo;
        }

        function recalcularSaldosCuentas() {
            state.cuentas.forEach(cuenta => {
                cuenta.saldo = calcularSaldoCuenta(cuenta.id);
            });
        }

        function procesarGastosRecurrentes() {
            const { inicioPeriodo } = obtenerPeriodoPagoActual();
            const inicioPeriodoStr = inicioPeriodo.toISOString().split('T')[0];
            
            if (state.ultimaActualizacionRecurrentes === inicioPeriodoStr) return;
            
            state.gastosRecurrentes.forEach(gr => {
                state.gastos.push({
                    descripcion: `${gr.nombre} (Recorrente)`,
                    monto: gr.monto,
                    categoria: gr.categoria,
                    cuentaId: gr.cuentaId || state.cuentas[0]?.id || 1,
                    fecha: inicioPeriodo.toISOString(),
                    id: Date.now() + Math.random(),
                    esRecurrente: true
                });
            });
            
            state.ultimaActualizacionRecurrentes = inicioPeriodoStr;
            recalcularSaldosCuentas();
            guardarEstado();
            
            if (!state.sueldoConfirmadoPeriodoActual) {
                state.sueldoConfirmadoPeriodoActual = inicioPeriodoStr;
            }
            
            if (state.sueldoConfirmadoPeriodoActual !== inicioPeriodoStr) {
                state.sueldoConfirmadoPeriodoActual = inicioPeriodoStr;
                
                setTimeout(() => {
                    const sueldo = prompt('üíµ Canto cobraches este mes?');
                    if (sueldo && parseFloat(sueldo) > 0) {
                        const cuentaPrincipal = state.cuentas[0]?.id || 1;
                        state.ingresos.push({
                            descripcion: 'Sueldo do mes',
                            monto: parseFloat(sueldo),
                            cuentaId: cuentaPrincipal,
                            fecha: new Date().toISOString(),
                            id: Date.now()
                        });
                        recalcularSaldosCuentas();
                        guardarEstado();
                        render();
                    }
                }, 500);
            }
        }

        function calcularEstadisticas() {
            const hoy = new Date();
            const { inicioPeriodo, finPeriodo } = obtenerPeriodoPagoActual();
            
            const diasRestantes = Math.ceil((finPeriodo - hoy) / (1000 * 60 * 60 * 24)) + 1;
            const diasTotalesPeriodo = Math.ceil((finPeriodo - inicioPeriodo) / (1000 * 60 * 60 * 24)) + 1;
            const diasTranscurridos = diasTotalesPeriodo - diasRestantes;
            
            const totalGastosRecurrentes = state.gastosRecurrentes.reduce((sum, gasto) => sum + parseFloat(gasto.monto || 0), 0);
            
            const gastosDelPeriodo = state.gastos.filter(gasto => {
                const fechaGasto = new Date(gasto.fecha);
                return fechaGasto >= inicioPeriodo && fechaGasto <= finPeriodo;
            });
            
            const totalGastosVariables = gastosDelPeriodo.reduce((sum, gasto) => sum + parseFloat(gasto.monto || 0), 0);
            
            const ingresosDelPeriodo = state.ingresos.filter(ingreso => {
                const fechaIngreso = new Date(ingreso.fecha);
                return fechaIngreso >= inicioPeriodo && fechaIngreso <= finPeriodo;
            });
            const totalIngresos = ingresosDelPeriodo.reduce((sum, ingreso) => sum + parseFloat(ingreso.monto || 0), 0);
            
            const ajustesDelPeriodo = state.ajustes.filter(ajuste => {
                const fechaAjuste = new Date(ajuste.fecha);
                return fechaAjuste >= inicioPeriodo && fechaAjuste <= finPeriodo;
            });
            const totalAjustes = ajustesDelPeriodo.reduce((sum, ajuste) => {
                const monto = parseFloat(ajuste.monto || 0);
                return sum + (ajuste.tipo === 'positivo' ? monto : -monto);
            }, 0);
            
            let ahorroDiarioNecesario = 0;
            state.objetivosAhorro.forEach(objetivo => {
                if (objetivo.activo !== false) {
                    const fechaLimite = new Date(objetivo.fechaLimite);
                    const diasParaObjetivo = Math.ceil((fechaLimite - hoy) / (1000 * 60 * 60 * 24));
                    const montoRestante = parseFloat(objetivo.metaMonto) - parseFloat(objetivo.montoAhorrado || 0);
                    
                    if (diasParaObjetivo > 0 && montoRestante > 0) {
                        ahorroDiarioNecesario += montoRestante / diasParaObjetivo;
                    }
                }
            });
            
            const disponibleTotal = state.cuentas.reduce((sum, c) => sum + c.saldo, 0);
            const saldoTotalContas = state.cuentas.reduce((sum, c) => sum + c.saldo, 0);
            const disponibleParaGastar = saldoTotalContas - (ahorroDiarioNecesario * diasRestantes);
            const gastoPorDiaRestante = diasRestantes > 0 ? Math.max(0, disponibleParaGastar / diasRestantes) : 0;   
            const gastoPorDiaSinObjetivos = diasRestantes > 0 ? Math.max(0, saldoTotalContas / diasRestantes) : 0;
            const totalGastos = totalGastosRecurrentes + totalGastosVariables;
            const ingresoTotal = totalIngresos;
            const porcentajeGastado = ingresoTotal > 0 ? (totalGastos / ingresoTotal) * 100 : 0;
            
            return {
                diasRestantes,
                diasTotalesPeriodo,
                diasTranscurridos,
                totalGastosRecurrentes,
                totalGastosVariables,
                totalIngresos,
                totalAjustes,
                disponibleTotal,
                gastoPorDiaRestante: Math.max(0, gastoPorDiaRestante),
                gastoPorDiaSinObjetivos, 
                ahorroDiarioNecesario,
                totalGastos,
                ingresoTotal,
                porcentajeGastado,
                inicioPeriodo,
                finPeriodo
            };
        }

        function calcularProyecciones() {
            const stats = calcularEstadisticas();
            const ahorroMensualActual = stats.disponibleTotal;
            const proyeccion3Meses = ahorroMensualActual * 3;
            
            const { inicioPeriodo, finPeriodo } = obtenerPeriodoPagoActual();
            const gastosDelPeriodo = state.gastos.filter(g => {
                const fecha = new Date(g.fecha);
                return fecha >= inicioPeriodo && fecha <= finPeriodo;
            });
            
            const gastosPorCategoria = {};
            gastosDelPeriodo.forEach(g => {
                const cat = g.categoria || 'Outros';
                gastosPorCategoria[cat] = (gastosPorCategoria[cat] || 0) + parseFloat(g.monto);
            });
            
            let categor√≠aMayorGasto = null;
            let mayorGasto = 0;
            Object.entries(gastosPorCategoria).forEach(([cat, monto]) => {
                if (monto > mayorGasto) {
                    mayorGasto = monto;
                    categor√≠aMayorGasto = cat;
                }
            });
            
            let recomendacion = null;
            if (categor√≠aMayorGasto && mayorGasto > 0) {
                const ahorroPotencial = mayorGasto * 0.1;
                const diasParaObjetivo = state.objetivosAhorro
                    .filter(o => o.activo !== false)
                    .map(o => {
                        const fechaLimite = new Date(o.fechaLimite);
                        const montoRestante = parseFloat(o.metaMonto) - parseFloat(o.montoAhorrado || 0);
                        const diasActuales = Math.ceil((fechaLimite - new Date()) / (1000 * 60 * 60 * 24));
                        if (montoRestante > 0 && diasActuales > 0) {
                            const diasMejor = Math.floor(montoRestante / (stats.disponibleTotal + ahorroPotencial) * 30);
                            return { nombre: o.nombre, diasActuales, diasMejor };
                        }
                        return null;
                    })
                    .filter(o => o !== null)[0];
                
                recomendacion = {
                    categoria: categor√≠aMayorGasto,
                    ahorroPotencial: ahorroPotencial,
                    objetivo: diasParaObjetivo
                };
            }
            
            return {
                proyeccion3Meses,
                ahorroMensualActual,
                recomendacion
            };
        }

        function verificarAlertas() {
            const nuevasAlertas = [];
            const stats = calcularEstadisticas();

            if (state.alertasConfig.diasParaCobro > 0 && stats.diasRestantes <= state.alertasConfig.diasParaCobro) {
                nuevasAlertas.push({
                    tipo: 'info',
                    mensaje: `‚è∞ Quedan ${stats.diasRestantes} d√≠as para cobrar`,
                    id: 'dias-cobro'
                });
            }

            const mitadPeriodo = Math.floor(stats.diasTotalesPeriodo / 2);
            if (stats.diasTranscurridos < mitadPeriodo && stats.porcentajeGastado > state.alertasConfig.porcentajeGastoMitadMes) {
                nuevasAlertas.push({
                    tipo: 'warning',
                    mensaje: `‚ö†Ô∏è Gastaches o ${stats.porcentajeGastado.toFixed(1)}% antes da metade do per√≠odo`,
                    id: 'gasto-mitad'
                });
            }

            if (state.alertasConfig.alertaObjetivosEnRiesgo) {
                state.objetivosAhorro.forEach(objetivo => {
                    if (objetivo.activo !== false) {
                        const fechaLimite = new Date(objetivo.fechaLimite);
                        const diasRestantes = Math.ceil((fechaLimite - new Date()) / (1000 * 60 * 60 * 24));
                        const montoRestante = parseFloat(objetivo.metaMonto) - parseFloat(objetivo.montoAhorrado || 0);
                        const ahorroDiarioNecesario = diasRestantes > 0 ? montoRestante / diasRestantes : 0;
                        
                        if (ahorroDiarioNecesario > stats.gastoPorDiaRestante && diasRestantes > 0) {
                            nuevasAlertas.push({
                                tipo: 'danger',
                                mensaje: `üéØ O teu obxectivo "${objetivo.nombre}" est√° en risco. Necesitas aforrar ${ahorroDiarioNecesario.toFixed(2)}‚Ç¨/d√≠a`,
                                id: `objetivo-riesgo-${objetivo.id}`
                            });
                        }
                    }
                });
            }

            state.cuentas.forEach(cuenta => {
                if (cuenta.saldo < 0) {
                    nuevasAlertas.push({
                        tipo: 'danger',
                        mensaje: `üí≥ A t√∫a conta "${cuenta.nombre}" ten saldo negativo: ${cuenta.saldo.toFixed(2)}‚Ç¨`,
                        id: `cuenta-negativa-${cuenta.id}`
                    });
                }
            });

            const hoy = new Date();
            const diaHoy = hoy.getDate();
            
            state.gastosRecurrentes.forEach(gasto => {
                if (gasto.diaPago) {
                    const diasHastaPago = gasto.diaPago - diaHoy;
                    
                    if (diasHastaPago >= 0 && diasHastaPago <= 3) {
                        nuevasAlertas.push({
                            tipo: 'info',
                            mensaje: `üìÖ ${gasto.nombre} p√°gate ${diasHastaPago === 0 ? 'HOXE' : 'en ' + diasHastaPago + ' d√≠as'} (${gasto.monto.toFixed(2)}‚Ç¨)`,
                            id: `pago-${gasto.id}`
                        });
                    }
                }
            });

        if (!window.alertasCerradas) window.alertasCerradas = [];
        state.alertasMostradas = nuevasAlertas.filter(a => !window.alertasCerradas.includes(a.id));        
        }

        function obtenerDiasDelMes(mes, a√±o) {
            return new Date(a√±o, mes + 1, 0).getDate();
        }

        function obtenerPrimerDiaDelMes(mes, a√±o) {
            return new Date(a√±o, mes, 1).getDay();
        }

        function agregarEventoCalendario(fecha, descripcion, tipo = 'evento', monto = null) {
            state.eventosCalendario.push({
                id: Date.now(),
                fecha: fecha,
                descripcion: descripcion,
                tipo: tipo,
                monto: monto
            });
            guardarEstado();
            render();
        }

        function eliminarEventoCalendario(id) {
            state.eventosCalendario = state.eventosCalendario.filter(e => e.id !== id);
            guardarEstado();
            render();
        }

        function obtenerEventosPorFecha(fecha) {
            const fechaStr = new Date(fecha).toISOString().split('T')[0];
            return state.eventosCalendario.filter(e => {
                const eventoFecha = new Date(e.fecha).toISOString().split('T')[0];
                return eventoFecha === fechaStr;
            });
        }

        function mostrarModalEventoCalendario(fecha) {
            const fechaStr = new Date(fecha).toISOString().split('T')[0];
            const eventos = obtenerEventosPorFecha(fecha);
            
            const modal = document.createElement('div');
            modal.className = 'modal-overlay';
            modal.onclick = (e) => { if (e.target === modal) cerrarModal(); };
            
            modal.innerHTML = `
                <div class="modal-content p-6">
                    <div class="flex items-center justify-between mb-6">
                        <h2 class="text-2xl font-bold text-white">${new Date(fecha).toLocaleDateString('gl-ES')}</h2>
                        <button onclick="cerrarModal()" class="text-gray-400 hover:text-white text-2xl">√ó</button>
                    </div>
                    
                    ${eventos.length > 0 ? `
                        <div class="space-y-2 mb-6">
                            <h3 class="text-lg font-semibold text-white mb-3">Eventos neste d√≠a</h3>
                            ${eventos.map(e => `
                                <div class="bg-black/30 rounded-xl p-3 flex justify-between items-center">
                                    <div>
                                        <p class="text-white font-semibold">${e.descripcion}</p>
                                        ${e.monto ? `<p class="text-gray-400 text-sm">${e.monto}‚Ç¨</p>` : ''}
                                    </div>
                                    <button 
                                        onclick="eliminarEventoCalendario(${e.id})"
                                        class="text-red-500 hover:text-red-400"
                                    >
                                        üóëÔ∏è
                                    </button>
                                </div>
                            `).join('')}
                        </div>
                    ` : ''}
                    
                    <h3 class="text-lg font-semibold text-white mb-3">Engadir evento</h3>
                    <div class="space-y-4">
                        <input 
                            type="text"
                            id="evento-desc"
                            class="input-neon w-full px-4 py-3 rounded-xl text-white"
                            placeholder="Descrici√≥n do evento"
                        />
                        
                        <select id="evento-tipo" class="input-neon w-full px-4 py-3 rounded-xl text-white">
                            <option value="evento">üìå Evento</option>
                            <option value="recordatorio">üîî Recordatorio</option>
                            <option value="gasto">üí∏ Gasto programado</option>
                            <option value="ingreso">üí∞ Ingreso esperado</option>
                        </select>
                        
                        <input 
                            type="number"
                            id="evento-monto"
                            step="0.01"
                            min="0"
                            class="input-neon w-full px-4 py-3 rounded-xl text-white"
                            placeholder="Monto (opcional)"
                        />
                        
                        <button 
                            onclick="
                                const desc = document.getElementById('evento-desc').value;
                                const tipo = document.getElementById('evento-tipo').value;
                                const monto = document.getElementById('evento-monto').value;
                                if (desc) {
                                    agregarEventoCalendario('${fechaStr}', desc, tipo, monto ? parseFloat(monto) : null);
                                    cerrarModal();
                                }
                            "
                            class="btn-neon w-full bg-gradient-to-r from-purple-600 to-pink-600 px-6 py-3 rounded-xl font-bold"
                        >
                            ‚úÖ Engadir Evento
                        </button>
                    </div>
                </div>
            `;
            
            document.body.appendChild(modal);
        }

        function cerrarModal() {
            document.querySelectorAll('.modal-overlay').forEach(m => m.remove());
        }

       function agregarGastoRecurrente() {
            const nombre = document.getElementById('gasto-rec-nombre').value;
            const monto = document.getElementById('gasto-rec-monto').value;
            const categoria = document.getElementById('gasto-rec-categoria').value;
            const cuentaId = parseInt(document.getElementById('gasto-rec-cuenta').value);
            const diaPago = parseInt(document.getElementById('gasto-rec-dia').value);
            
            if (nombre && monto && parseFloat(monto) > 0 && diaPago >= 1 && diaPago <= 31) {
                state.gastosRecurrentes.push({
                    nombre,
                    monto: parseFloat(monto),
                    categoria,
                    cuentaId,
                    diaPago: diaPago,
                    id: Date.now()
                });
                
                document.getElementById('gasto-rec-nombre').value = '';
                document.getElementById('gasto-rec-monto').value = '';
                document.getElementById('gasto-rec-dia').value = '';
                
                guardarEstado();
                render();
            }
        }

        function eliminarGastoRecurrente(id) {
            state.gastosRecurrentes = state.gastosRecurrentes.filter(g => g.id !== id);
            guardarEstado();
            render();
        }

        function agregarGasto() {
            const textoInput = document.getElementById('gasto-texto');
            const texto = textoInput ? textoInput.value : '';
            const montoManual = document.getElementById('gasto-monto') ? document.getElementById('gasto-monto').value : '';
            const categoriaManual = document.getElementById('gasto-categoria') ? document.getElementById('gasto-categoria').value : '';
            const cuentaId = parseInt(document.getElementById('gasto-cuenta').value);
            
            let descripcion, monto, categoria;
            
            if (texto) {
                const parseado = parsearTextoInteligente(texto);
                descripcion = parseado.descripcion;
                monto = parseado.monto || (montoManual ? parseFloat(montoManual) : null);
                categoria = parseado.categoria;
                textoInput.value = '';
            } else {
                descripcion = 'Gasto';
                monto = montoManual ? parseFloat(montoManual) : null;
                categoria = categoriaManual;
            }
            
            if (monto && monto > 0) {
                const validacion = validarGastoModoAhorroExtremo(categoria, monto);
                
                if (!validacion.permitido) {
                    if (!confirm(`${validacion.mensaje}\n\nQueres engadilo igualmente?`)) {
                        return;
                    }
                }
                
                const nuevoGasto = {
                    descripcion,
                    monto: monto,
                    categoria,
                    cuentaId,
                    fecha: new Date().toISOString(),
                    id: Date.now()
                };
                
              state.gastos.push(nuevoGasto);
                guardarAccion('agregarGasto', nuevoGasto);
                recalcularSaldosCuentas();
                
                if (document.getElementById('gasto-monto')) {
                    document.getElementById('gasto-monto').value = '';
                }
                
                guardarEstado();
                verificarAlertas();
                
                mostrarToast(`‚úÖ Gasto de ${monto.toFixed(2)}‚Ç¨ engadido`, 'success');
                
                const stats = calcularEstadisticas();
                if (stats.gastoPorDiaRestante > 0 && state.objetivosAhorro.length > 0) {
                    mostrarDialogoAhorroObjetivo();
                }
                
                render();
            } else {
                mostrarToast('‚ùå Introduce un monto v√°lido', 'error');
            }
        }

      function eliminarGasto(id) {
            const gasto = state.gastos.find(g => g.id === id);
            if (gasto && confirm(`üóëÔ∏è Seguro que queres eliminar o gasto de ${gasto.monto.toFixed(2)}‚Ç¨ (${gasto.descripcion})?`)) {
                guardarAccion('eliminarGasto', gasto);
                state.gastos = state.gastos.filter(g => g.id !== id);
                recalcularSaldosCuentas();
                guardarEstado();
                mostrarToast('‚úÖ Gasto eliminado', 'success');
                render();
            }
        }

        function editarGasto(id) {
            const gasto = state.gastos.find(g => g.id === id);
            if (gasto) {
                state.editando = { tipo: 'gasto', id: id, data: {...gasto} };
                render();
            }
        }

     function guardarEdicionGasto(id) {
    const gasto = state.gastos.find(g => g.id === id);
    if (gasto) {
        guardarAccion('editarGasto', {
            id: id,
            estadoAnterior: {...gasto}
        });
        
        gasto.descripcion = document.getElementById(`edit-desc-${id}`).value;
        gasto.monto = parseFloat(document.getElementById(`edit-monto-${id}`).value);
        gasto.categoria = document.getElementById(`edit-cat-${id}`).value;
        gasto.cuentaId = parseInt(document.getElementById(`edit-cuenta-${id}`).value);
        
        const fechaInput = document.getElementById(`edit-fecha-${id}`);
        if (fechaInput) {
            gasto.fecha = new Date(fechaInput.value).toISOString();
        }
        
        state.editando = null;
        recalcularSaldosCuentas();
        guardarEstado();
        mostrarToast('‚úÖ Gasto actualizado', 'success');
        render();
    }
}

        function cancelarEdicion() {
            state.editando = null;
            render();
        }

      function agregarIngreso() {
    const descripcion = document.getElementById('ingreso-descripcion').value || 'Ingreso';
    const monto = document.getElementById('ingreso-monto').value;
    const cuentaId = parseInt(document.getElementById('ingreso-cuenta').value);
    
    if (monto && parseFloat(monto) > 0) {
        state.ingresos.push({
            descripcion,
            monto: parseFloat(monto),
            cuentaId,
            fecha: new Date().toISOString(),
            id: Date.now()            
        });
        guardarAccion('agregarIngreso', state.ingresos[state.ingresos.length - 1]);
     
        recalcularSaldosCuentas();
        
        document.getElementById('ingreso-descripcion').value = '';
        document.getElementById('ingreso-monto').value = '';
        
        guardarEstado();
        mostrarToast(`‚úÖ Ingreso de ${parseFloat(monto).toFixed(2)}‚Ç¨ engadido`, 'success');
        render();
    } else {
        mostrarToast('‚ùå Introduce un monto v√°lido', 'error');
    }
}
      function eliminarIngreso(id) {
            const ingreso = state.ingresos.find(i => i.id === id);
            if (ingreso && confirm(`üóëÔ∏è Seguro que queres eliminar o ingreso de ${ingreso.monto.toFixed(2)}‚Ç¨ (${ingreso.descripcion})?`)) {
                state.ingresos = state.ingresos.filter(i => i.id !== id);
                guardarAccion('eliminarIngreso', ingreso);
                recalcularSaldosCuentas();
                guardarEstado();
                mostrarToast('‚úÖ Ingreso eliminado', 'success');
                render();
            }
        }

        function editarIngreso(id) {
            const ingreso = state.ingresos.find(i => i.id === id);
            if (ingreso) {
                state.editando = { tipo: 'ingreso', id: id, data: {...ingreso} };
                render();
            }
        }

    function guardarEdicionIngreso(id) {
    const ingreso = state.ingresos.find(i => i.id === id);
    if (ingreso) {
        guardarAccion('editarIngreso', {
            id: id,
            estadoAnterior: {...ingreso}
        });
        
        ingreso.descripcion = document.getElementById(`edit-desc-${id}`).value;
        ingreso.monto = parseFloat(document.getElementById(`edit-monto-${id}`).value);
        ingreso.cuentaId = parseInt(document.getElementById(`edit-cuenta-${id}`).value);
        
        const fechaInput = document.getElementById(`edit-fecha-${id}`);
        if (fechaInput) {
            ingreso.fecha = new Date(fechaInput.value).toISOString();
        }
        
        state.editando = null;
        recalcularSaldosCuentas();
        guardarEstado();
        mostrarToast('‚úÖ Ingreso actualizado', 'success');
        render();
    }
}
        function editarGastoRecurrente(id) {
            const gasto = state.gastosRecurrentes.find(g => g.id === id);
            if (gasto) {
                state.editando = { tipo: 'gastoRecurrente', id: id, data: {...gasto} };
                render();
            }
        }

       function guardarEdicionGastoRecurrente(id) {
            const gasto = state.gastosRecurrentes.find(g => g.id === id);
            if (gasto) {
                gasto.nombre = document.getElementById(`edit-nombre-${id}`).value;
                gasto.monto = parseFloat(document.getElementById(`edit-monto-${id}`).value);
                gasto.categoria = document.getElementById(`edit-cat-${id}`).value;
                gasto.cuentaId = parseInt(document.getElementById(`edit-cuenta-${id}`).value);
                const diaInput = document.getElementById(`edit-dia-${id}`);
                if (diaInput && diaInput.value) {
                    gasto.diaPago = parseInt(diaInput.value);
                }
                
                state.editando = null;
                guardarEstado();
                render();
            }
        }

        function agregarObjetivo() {
            const nombre = document.getElementById('objetivo-nombre').value;
            const metaMonto = document.getElementById('objetivo-meta').value;
            const fechaLimite = document.getElementById('objetivo-fecha').value;
            
            if (nombre && metaMonto && parseFloat(metaMonto) > 0 && fechaLimite) {
                state.objetivosAhorro.push({
                    nombre,
                    metaMonto: parseFloat(metaMonto),
                    fechaLimite,
                    montoAhorrado: 0,
                    id: Date.now(),
                    activo: true
                });
                
                document.getElementById('objetivo-nombre').value = '';
                document.getElementById('objetivo-meta').value = '';
                document.getElementById('objetivo-fecha').value = '';
                
                guardarEstado();
                render();
            }
        }

        function eliminarObjetivo(id) {
            state.objetivosAhorro = state.objetivosAhorro.filter(o => o.id !== id);
            guardarEstado();
            render();
        }

        function anadirAhorroObjetivo(objetivoId, monto) {
            const objetivo = state.objetivosAhorro.find(o => o.id === objetivoId);
            if (objetivo && monto > 0) {
                objetivo.montoAhorrado = parseFloat(objetivo.montoAhorrado || 0) + parseFloat(monto);
                guardarEstado();
                render();
            }
        }

        function agregarCategoria() {
            const nuevaCategoria = document.getElementById('nueva-categoria').value;
            if (nuevaCategoria && !state.categorias.includes(nuevaCategoria)) {
                state.categorias.push(nuevaCategoria);
                document.getElementById('nueva-categoria').value = '';
                guardarEstado();
                render();
            }
        }

        function eliminarCategoria(categoria) {
            if (state.categorias.length > 1) {
                state.categorias = state.categorias.filter(c => c !== categoria);
                guardarEstado();
                render();
            }
        }

        function agregarCuenta() {
            const nombre = document.getElementById('cuenta-nombre').value;
            const tipo = document.getElementById('cuenta-tipo').value;
            const saldoInicial = document.getElementById('cuenta-saldo').value;
            
            if (nombre) {
                const nuevoId = Math.max(...state.cuentas.map(c => c.id), 0) + 1;
                state.cuentas.push({
                    id: nuevoId,
                    nombre,
                    tipo,
                    saldoInicial: parseFloat(saldoInicial || 0),
                    saldo: parseFloat(saldoInicial || 0)
                });
                
                document.getElementById('cuenta-nombre').value = '';
                document.getElementById('cuenta-saldo').value = '';
                
                recalcularSaldosCuentas();
                guardarEstado();
                render();
            }
        }
function realizarTransferencia() {
            const origenId = parseInt(document.getElementById('trans-origen').value);
            const destinoId = parseInt(document.getElementById('trans-destino').value);
            const monto = parseFloat(document.getElementById('trans-monto').value);
            const descripcion = document.getElementById('trans-descripcion').value;
            
            if (!origenId || !destinoId || !monto || monto <= 0) {
                alert('‚ùå Completa todos os campos obrigatorios');
                return;
            }
            
            if (origenId === destinoId) {
                alert('‚ùå Orixe e destino non poden ser a mesma conta');
                return;
            }
            
            const cuentaOrigen = state.cuentas.find(c => c.id === origenId);
            if (cuentaOrigen.saldo < monto) {
                if (!confirm(`‚ö†Ô∏è A conta ${cuentaOrigen.nombre} ten ${cuentaOrigen.saldo.toFixed(2)}‚Ç¨. Queres continuar igualmente?`)) {
                    return;
                }
            }
            
            if (!state.transferencias) state.transferencias = [];
            
            state.transferencias.push({
                origenId,
                destinoId,
                monto,
                descripcion: descripcion || '',
                fecha: new Date().toISOString(),
                id: Date.now()
            });
    guardarAccion('agregarTransferencia', state.transferencias[state.transferencias.length - 1]);
            
            document.getElementById('trans-origen').value = '';
            document.getElementById('trans-destino').value = '';
            document.getElementById('trans-monto').value = '';
            document.getElementById('trans-descripcion').value = '';
            
            recalcularSaldosCuentas();
            guardarEstado();
            mostrarToast(`‚úÖ Transferencia de ${monto.toFixed(2)}‚Ç¨ realizada`, 'success');
            render();
        }
        function editarCuenta(id) {
            state.editando = { tipo: 'cuenta', id: id };
            render();
        }

    function guardarEdicionCuenta(id) {
            const cuenta = state.cuentas.find(c => c.id === id);
            if (cuenta) {
                const nuevoNombre = document.getElementById(`edit-cuenta-nombre-${id}`).value;
                const nuevoTipo = document.getElementById(`edit-cuenta-tipo-${id}`).value;
                const nuevoSaldoActual = parseFloat(document.getElementById(`edit-cuenta-saldo-${id}`).value);
                
                if (nuevoNombre) {
                    const saldoAnterior = cuenta.saldo;
                    const diferencia = nuevoSaldoActual - saldoAnterior;
                    
                    cuenta.nombre = nuevoNombre;
                    cuenta.tipo = nuevoTipo;
                    
                    if (diferencia !== 0) {
                        if (!state.ajustes) state.ajustes = [];
                        state.ajustes.push({
                            descripcion: `Correcci√≥n de saldo de ${cuenta.nombre}`,
                            monto: Math.abs(diferencia),
                            tipo: diferencia > 0 ? 'positivo' : 'negativo',
                            cuentaId: cuenta.id,
                            fecha: new Date().toISOString(),
                            id: Date.now()
                        });
                    }
                    
                    state.editando = null;
                    recalcularSaldosCuentas();
                    guardarEstado();
                    render();
                }
            }
        }
        function eliminarCuenta(id) {
            if (state.cuentas.length > 1) {
                state.cuentas = state.cuentas.filter(c => c.id !== id);
                guardarEstado();
                render();
            }
        }

        function mostrarDialogoAhorroObjetivo() {
            // Placeholder para futura implementaci√≥n
        }

        // MODO AHORRO EXTREMO
        if (!state.modoAhorroExtremo) {
            state.modoAhorroExtremo = {
                activo: false,
                categoriasEsenciales: ['Alimentaci√≥n', 'Salud', 'Transporte', 'Hogar'],
                limiteGastoDiario: 0
            };
        }

        function validarGastoModoAhorroExtremo(categoria, monto) {
            if (!state.modoAhorroExtremo.activo) return { permitido: true };

            const esEsencial = state.modoAhorroExtremo.categoriasEsenciales.includes(categoria);
            const stats = calcularEstadisticas();
            const seHaPasado = stats.gastoPorDiaRestante <= 0;

            if (esEsencial) return { permitido: true };

            if (seHaPasado) {
                return {
                    permitido: false,
                    mensaje: 'üö´ MODO AFORRO EXTREMO: Non podes engadir gastos non esenciais.'
                };
            }

            if (state.modoAhorroExtremo.limiteGastoDiario > 0) {
                const hoy = new Date();
                const gastosHoy = state.gastos.filter(g => {
                    if (!g || !g.fecha) return false;
                    return new Date(g.fecha).toDateString() === hoy.toDateString();
                });
                const totalGastadoHoy = gastosHoy.reduce((sum, g) => sum + parseFloat(g.monto || 0), 0);

                if (totalGastadoHoy + parseFloat(monto) > state.modoAhorroExtremo.limiteGastoDiario) {
                    return {
                        permitido: false,
                        mensaje: `üö´ Superar√≠as o l√≠mite diario de ${state.modoAhorroExtremo.limiteGastoDiario.toFixed(2)}‚Ç¨`
                    };
                }
            }

            return { permitido: true };
        }

        function toggleModoAhorroExtremo() {
            state.modoAhorroExtremo.activo = !state.modoAhorroExtremo.activo;
            guardarEstado();
            render();
        }

        function agregarCategoriaEsencial(categoria) {
            if (!state.modoAhorroExtremo.categoriasEsenciales.includes(categoria)) {
                state.modoAhorroExtremo.categoriasEsenciales.push(categoria);
                guardarEstado();
                render();
            }
        }

        function eliminarCategoriaEsencial(categoria) {
            state.modoAhorroExtremo.categoriasEsenciales = state.modoAhorroExtremo.categoriasEsenciales.filter(c => c !== categoria);
            guardarEstado();
            render();
        }

        // NOTIFICACIONES PUSH
        if (!state.notificacionesActivadas) {
            state.notificacionesActivadas = false;
        }

        function solicitarPermisosNotificacion() {
            if ('Notification' in window && Notification.permission === 'default') {
                Notification.requestPermission().then(permission => {
                    if (permission === 'granted') {
                        state.notificacionesActivadas = true;
                        guardarEstado();
                        render();
                    }
                });
            }
        }

        function enviarNotificacion(titulo, mensaje) {
            if ('Notification' in window && Notification.permission === 'granted') {
                new Notification(titulo, {
                    body: mensaje,
                    icon: 'data:image/svg+xml,%3Csvg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"%3E%3Ctext y=".9em" font-size="90"%3Eüí∞%3C/text%3E%3C/svg%3E'
                });
            }
        }

        // RECORDATORIOS DE PAGOS
        if (!state.recordatorios) {
            state.recordatorios = [];
        }

        function verificarRecordatorios() {
            const hoy = new Date();
            
            state.recordatorios.forEach(rec => {
                if (!rec.activo) return;
                
                const fechaRec = new Date(rec.fecha);
                
                if (fechaRec.toDateString() === hoy.toDateString() && !rec.notificado) {
                    if (state.notificacionesActivadas) {
                        enviarNotificacion('Recordatorio de pago', rec.descripcion);
                    }
                    
                    rec.notificado = true;
                    guardarEstado();
                }
                
                if (fechaRec.toDateString() !== hoy.toDateString()) {
                    rec.notificado = false;
                }
            });
        }

        function agregarRecordatorio(descripcion, fecha) {
            state.recordatorios.push({
                id: Date.now(),
                descripcion,
                fecha: fecha,
                activo: true,
                notificado: false
            });
            guardarEstado();
            render();
        }

        function eliminarRecordatorio(id) {
            state.recordatorios = state.recordatorios.filter(r => r.id !== id);
            guardarEstado();
            render();
        }

        // BACKUP AUTOM√ÅTICO
        if (!state.backupConfig) {
            state.backupConfig = {
                activo: false,
                frecuencia: 'semanal',
                ultimoBackup: null
            };
        }

        function exportarDatosCSV() {
            try {
                let csv = 'Tipo,Descrici√≥n,Monto,Categor√≠a,Conta,Fecha\n';
                
                state.gastos.forEach(g => {
                    const cuenta = state.cuentas.find(c => c.id === g.cuentaId);
                    csv += `Gasto,"${g.descripcion}",${g.monto},"${g.categoria || ''}","${cuenta?.nombre || ''}",${g.fecha}\n`;
                });
                
                state.ingresos.forEach(i => {
                    const cuenta = state.cuentas.find(c => c.id === i.cuentaId);
                    csv += `Ingreso,"${i.descripcion}",${i.monto},,"${cuenta?.nombre || ''}",${i.fecha}\n`;
                });
                
                const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
                const link = document.createElement('a');
                const url = URL.createObjectURL(blob);
                const fecha = new Date().toISOString().split('T')[0];
                
                link.setAttribute('href', url);
                link.setAttribute('download', `cartinos_${fecha}.csv`);
                link.style.visibility = 'hidden';
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
                
                alert('‚úÖ Datos exportados a CSV');
            } catch (error) {
                alert('‚ùå Erro ao exportar');
            }
        }

        function exportarDatosJSON() {
            try {
                const datos = {
                    version: '1.0',
                    fecha_exportacion: new Date().toISOString(),
                    datos: {
                        sueldo: state.sueldo,
                        diaCobro: state.diaCobro,
                        gastosRecurrentes: state.gastosRecurrentes,
                        gastos: state.gastos,
                        ingresos: state.ingresos,
                        ajustes: state.ajustes,
                        objetivosAhorro: state.objetivosAhorro,
                        categorias: state.categorias,
                        cuentas: state.cuentas,
                        alertasConfig: state.alertasConfig,
                        modoAhorroExtremo: state.modoAhorroExtremo,
                        recordatorios: state.recordatorios,
                        eventosCalendario: state.eventosCalendario
                    }
                };
                
                const json = JSON.stringify(datos, null, 2);
                const blob = new Blob([json], { type: 'application/json' });
                const link = document.createElement('a');
                const url = URL.createObjectURL(blob);
                const fecha = new Date().toISOString().split('T')[0];
                
                link.setAttribute('href', url);
                link.setAttribute('download', `cartinos_backup_${fecha}.json`);
                link.style.visibility = 'hidden';
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
                
                alert('‚úÖ Backup completo creado');
            } catch (error) {
                alert('‚ùå Erro ao crear backup');
            }
        }

        function importarDatos() {
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = '.json';
            
            input.onchange = (e) => {
                const file = e.target.files[0];
                if (!file) return;
                
                const reader = new FileReader();
                reader.onload = (event) => {
                    try {
                        const datos = JSON.parse(event.target.result);
                        
                        if (!datos.version || !datos.datos) {
                            throw new Error('Formato inv√°lido');
                        }
                        
                        if (confirm('ATENCI√ìN: Isto substituir√° todos os datos actuais. Seguro?')) {
                            Object.assign(state, datos.datos);
                            guardarEstado();
                            recalcularSaldosCuentas();
                            render();
                            alert('‚úÖ Datos importados correctamente');
                        }
                    } catch (error) {
                        alert('‚ùå Arquivo inv√°lido');
                    }
                };
                reader.readAsText(file);
            };
            
            input.click();
        }

        function verificarBackupAutomatico() {
            if (!state.backupConfig.activo) return;
            
            const ahora = new Date();
            const ultimo = state.backupConfig.ultimoBackup ? new Date(state.backupConfig.ultimoBackup) : null;
            
            let debeHacer = false;
            
            if (!ultimo) {
                debeHacer = true;
            } else {
                const dias = Math.floor((ahora - ultimo) / (1000 * 60 * 60 * 24));
                
                if (state.backupConfig.frecuencia === 'diario' && dias >= 1) debeHacer = true;
                else if (state.backupConfig.frecuencia === 'semanal' && dias >= 7) debeHacer = true;
                else if (state.backupConfig.frecuencia === 'mensual' && dias >= 30) debeHacer = true;
            }
            
            if (debeHacer) {
                exportarDatosJSON();
                state.backupConfig.ultimoBackup = ahora.toISOString();
                guardarEstado();
            }
        }

        // AN√ÅLISE DE TENDENCIAS IA
        function analizarTendencias() {
            const { inicioPeriodo, finPeriodo } = obtenerPeriodoPagoActual();
            const gastosDelPeriodo = state.gastos.filter(g => {
                const f = new Date(g.fecha);
                return f >= inicioPeriodo && f <= finPeriodo;
            });

            if (gastosDelPeriodo.length === 0) {
                return { insights: [], recomendaciones: [] };
            }

            const gastosPorDia = {};
            gastosDelPeriodo.forEach(g => {
                const dia = new Date(g.fecha).getDay();
                gastosPorDia[dia] = (gastosPorDia[dia] || 0) + parseFloat(g.monto);
            });
            
            const diasSemana = ['Domingo', 'Luns', 'Martes', 'M√©rcores', 'Xoves', 'Venres', 'S√°bado'];
            let diaMayorGasto = 0;
            let mayorGastoDia = 0;
            Object.entries(gastosPorDia).forEach(([dia, monto]) => {
                if (monto > mayorGastoDia) {
                    mayorGastoDia = monto;
                    diaMayorGasto = parseInt(dia);
                }
            });

            const gastosPorCategoria = {};
            gastosDelPeriodo.forEach(g => {
                const cat = g.categoria || 'Outros';
                gastosPorCategoria[cat] = (gastosPorCategoria[cat] || 0) + parseFloat(g.monto);
            });
            
            let categoriaDominante = null;
            let mayorGastoCat = 0;
            Object.entries(gastosPorCategoria).forEach(([cat, monto]) => {
                if (monto > mayorGastoCat) {
                    mayorGastoCat = monto;
                    categoriaDominante = cat;
                }
            });

            const insights = [
                `üìÖ Os ${diasSemana[diaMayorGasto]} gastas m√°is: ${mayorGastoDia.toFixed(2)}‚Ç¨`,
                `üìä A t√∫a categor√≠a dominante √© ${categoriaDominante}: ${mayorGastoCat.toFixed(2)}‚Ç¨`,
                `üí∞ Media diaria: ${(gastosDelPeriodo.reduce((s, g) => s + parseFloat(g.monto), 0) / gastosDelPeriodo.length).toFixed(2)}‚Ç¨`
            ];

            const recomendaciones = [
                `Reduce un 10% en ${categoriaDominante} para aforrar ${(mayorGastoCat * 0.1).toFixed(2)}‚Ç¨`,
                `Evita os ${diasSemana[diaMayorGasto]} para gastos non esenciais`
            ];

            return { insights, recomendaciones };
        }

        // AN√ÅLISE INTELIXENTE AVANZADA
        function detectarGastosRecurrentesPotenciales() {
            const gastosPorDescripcion = {};
            const umbralSimilitud = 0.8;
            
            state.gastos.forEach(gasto => {
                if (gasto.esRecurrente) return;
                
                const desc = gasto.descripcion.toLowerCase().trim();
                const monto = parseFloat(gasto.monto);
                
                let encontrado = false;
                for (const [key, datos] of Object.entries(gastosPorDescripcion)) {
                    const similitud = calcularSimilitud(desc, key);
                    if (similitud >= umbralSimilitud && Math.abs(datos.montoPromedio - monto) < 5) {
                        datos.gastos.push(gasto);
                        datos.montoPromedio = datos.gastos.reduce((s, g) => s + parseFloat(g.monto), 0) / datos.gastos.length;
                        encontrado = true;
                        break;
                    }
                }
                
                if (!encontrado) {
                    gastosPorDescripcion[desc] = {
                        gastos: [gasto],
                        montoPromedio: monto
                    };
                }
            });
            
            const potenciales = [];
            for (const [desc, datos] of Object.entries(gastosPorDescripcion)) {
                if (datos.gastos.length >= 2) {
                    const fechas = datos.gastos.map(g => new Date(g.fecha)).sort((a, b) => a - b);
                    const intervalos = [];
                    for (let i = 1; i < fechas.length; i++) {
                        const dias = Math.round((fechas[i] - fechas[i-1]) / (1000 * 60 * 60 * 24));
                        intervalos.push(dias);
                    }
                    
                    const intervaloPromedio = intervalos.reduce((s, i) => s + i, 0) / intervalos.length;
                    
                    if (intervaloPromedio >= 25 && intervaloPromedio <= 35) {
                        potenciales.push({
                            descripcion: desc,
                            monto: datos.montoPromedio,
                            frecuencia: 'mensual',
                            veces: datos.gastos.length,
                            categoria: datos.gastos[0].categoria,
                            cuentaId: datos.gastos[0].cuentaId
                        });
                    }
                }
            }
            
            return potenciales;
        }

        function calcularSimilitud(str1, str2) {
            const len1 = str1.length;
            const len2 = str2.length;
            const maxLen = Math.max(len1, len2);
            if (maxLen === 0) return 1.0;
            
            let coincidencias = 0;
            for (let i = 0; i < Math.min(len1, len2); i++) {
                if (str1[i] === str2[i]) coincidencias++;
            }
            
            return coincidencias / maxLen;
        }

        function analizarTendenciasAvanzado() {
            const { inicioPeriodo, finPeriodo } = obtenerPeriodoPagoActual();
            const gastosDelPeriodo = state.gastos.filter(g => {
                const f = new Date(g.fecha);
                return f >= inicioPeriodo && f <= finPeriodo;
            });

            if (gastosDelPeriodo.length === 0) {
                return { 
                    insights: ['üìä A√≠nda non hai datos suficientes para analizar tendencias'], 
                    recomendaciones: [],
                    gastosPorDia: {}
                };
            }

            const gastosPorDia = {
                0: { nombre: 'Domingo', total: 0, count: 0 },
                1: { nombre: 'Luns', total: 0, count: 0 },
                2: { nombre: 'Martes', total: 0, count: 0 },
                3: { nombre: 'M√©rcores', total: 0, count: 0 },
                4: { nombre: 'Xoves', total: 0, count: 0 },
                5: { nombre: 'Venres', total: 0, count: 0 },
                6: { nombre: 'S√°bado', total: 0, count: 0 }
            };
            
            gastosDelPeriodo.forEach(g => {
                const dia = new Date(g.fecha).getDay();
                gastosPorDia[dia].total += parseFloat(g.monto);
                gastosPorDia[dia].count++;
            });
            
            let diaMayorGasto = null;
            let mayorGastoDia = 0;
            Object.entries(gastosPorDia).forEach(([dia, datos]) => {
                if (datos.total > mayorGastoDia) {
                    mayorGastoDia = datos.total;
                    diaMayorGasto = parseInt(dia);
                }
            });

            const gastosPorCategoria = {};
            gastosDelPeriodo.forEach(g => {
                const cat = g.categoria || 'Outros';
                gastosPorCategoria[cat] = (gastosPorCategoria[cat] || 0) + parseFloat(g.monto);
            });
            
            let categoriaDominante = null;
            let mayorGastoCat = 0;
            Object.entries(gastosPorCategoria).forEach(([cat, monto]) => {
                if (monto > mayorGastoCat) {
                    mayorGastoCat = monto;
                    categoriaDominante = cat;
                }
            });

            const totalGastado = gastosDelPeriodo.reduce((s, g) => s + parseFloat(g.monto), 0);
            const mediaDiaria = totalGastado / gastosDelPeriodo.length;

            const insights = [];
            if (diaMayorGasto !== null) {
                insights.push(`üìÖ Os ${gastosPorDia[diaMayorGasto].nombre} gastas m√°is: ${mayorGastoDia.toFixed(2)}‚Ç¨`);
            }
            if (categoriaDominante) {
                insights.push(`üìä A t√∫a categor√≠a dominante √© "${categoriaDominante}": ${mayorGastoCat.toFixed(2)}‚Ç¨`);
            }
            insights.push(`üí∞ Media por gasto: ${mediaDiaria.toFixed(2)}‚Ç¨`);

            const recomendaciones = [];
            if (categoriaDominante && mayorGastoCat > 0) {
                const ahorroPotencial = mayorGastoCat * 0.1;
                recomendaciones.push(`üí° Reducindo un 10% en ${categoriaDominante} aforrar√≠as ${ahorroPotencial.toFixed(2)}‚Ç¨`);
            }
            if (diaMayorGasto !== null && gastosPorDia[diaMayorGasto].count > 2) {
                recomendaciones.push(`‚ö†Ô∏è Evita gastos non esenciais os ${gastosPorDia[diaMayorGasto].nombre}`);
            }
            
            const stats = calcularEstadisticas();
            if (stats.diasTranscurridos > 0) {
                const ritmoActual = totalGastado / stats.diasTranscurridos;
                const proyeccionFinMes = ritmoActual * stats.diasTotalesPeriodo;
                
                if (proyeccionFinMes > stats.ingresoTotal && stats.ingresoTotal > 0) {
                    recomendaciones.push(`üö® Ao ritmo actual, gastar√°s ${proyeccionFinMes.toFixed(2)}‚Ç¨ este mes (Ë∂Ö do orzamento)`);
                } else if (stats.ingresoTotal > 0) {
                    const aforroEstimado = stats.ingresoTotal - proyeccionFinMes;
                    if (aforroEstimado > 0) {
                        recomendaciones.push(`‚úÖ Ao ritmo actual, aforrar√°s ${aforroEstimado.toFixed(2)}‚Ç¨ este mes`);
                    }
                }
            }

            return { insights, recomendaciones, gastosPorDia };
        }

        function mostrarDialogoRecurrentesSugeridos() {
            const potenciales = detectarGastosRecurrentesPotenciales();
            
            if (potenciales.length === 0) {
                mostrarToast('‚ú® Non detectamos gastos recorrentes novos', 'info');
                return;
            }
            
            const modal = document.createElement('div');
            modal.className = 'modal-overlay';
            modal.onclick = (e) => { if (e.target === modal) modal.remove(); };
            
            modal.innerHTML = `
                <div class="modal-content p-6">
                    <div class="flex items-center justify-between mb-6">
                        <h2 class="text-2xl font-bold text-white">üîç Gastos Recorrentes Detectados</h2>
                        <button onclick="this.closest('.modal-overlay').remove()" class="text-gray-400 hover:text-white text-2xl">√ó</button>
                    </div>
                    
                    <p class="text-gray-400 mb-4">Detectamos estes gastos que se repiten regularmente:</p>
                    
                    <div class="space-y-3 mb-6">
                        ${potenciales.map((p, index) => `
                            <div class="bg-black/30 rounded-xl p-4">
                                <div class="flex justify-between items-start mb-2">
                                    <div class="flex-1">
                                        <p class="text-white font-semibold">${p.descripcion}</p>
                                        <p class="text-gray-400 text-sm">${p.categoria} - Aparece ${p.veces} veces</p>
                                    </div>
                                    <p class="text-yellow-400 font-bold text-lg">${p.monto.toFixed(2)}‚Ç¨</p>
                                </div>
                                <button 
                                    onclick="
                                        const nombre = '${p.descripcion.replace(/'/g, "\\'")}';
                                        state.gastosRecurrentes.push({
                                            nombre: nombre,
                                            monto: ${p.monto},
                                            categoria: '${p.categoria}',
                                            cuentaId: ${p.cuentaId},
                                            diaPago: null,
                                            id: Date.now() + ${index}
                                        });
                                        guardarEstado();
                                        mostrarToast('‚úÖ Engadido como recorrente', 'success');
                                        this.closest('.modal-overlay').remove();
                                        render();
                                    "
                                    class="btn-neon bg-gradient-to-r from-green-600 to-emerald-600 px-4 py-2 rounded-xl font-bold w-full mt-2"
                                >
                                    ‚ûï Engadir como Recorrente
                                </button>
                            </div>
                        `).join('')}
                    </div>
                    
                    <button 
                        onclick="this.closest('.modal-overlay').remove()"
                        class="btn-neon bg-gradient-to-r from-gray-600 to-gray-700 px-6 py-3 rounded-xl font-bold w-full"
                    >
                        ‚ùå Pechar
                    </button>
                </div>
            `;
            
            document.body.appendChild(modal);
        }

// ============================================
// GRUPO 6 - PLANIFICACI√ìN LARGA
// ============================================

function proyectarALargoPlazo(meses, escenario = {}) {
    const stats = calcularEstadisticas();
    const proyeccion = {
        meses: [],
        totalAhorrado: 0,
        objetivosAlcanzados: []
    };
    
    const ingresoMensual = escenario.ingresoMensual || stats.ingresoTotal || 0;
    const gastoRecurrenteMensual = escenario.gastoRecurrente || stats.totalGastosRecurrentes || 0;
    const gastoVariableMensual = escenario.gastoVariable || stats.totalGastosVariables || 0;
    const ahorroMensualObjetivos = escenario.ahorroObjetivos || stats.ahorroDiarioNecesario * 30 || 0;
    
    let saldoAcumulado = stats.disponibleTotal;
    
    for (let i = 1; i <= meses; i++) {
        const ingresoMes = ingresoMensual;
        const gastoMes = gastoRecurrenteMensual + gastoVariableMensual;
        const ahorroMes = Math.min(ahorroMensualObjetivos, ingresoMes - gastoMes);
        const disponibleFinMes = saldoAcumulado + ingresoMes - gastoMes - ahorroMes;
        
        saldoAcumulado = disponibleFinMes;
        proyeccion.totalAhorrado += ahorroMes;
        
        proyeccion.meses.push({
            mes: i,
            ingreso: ingresoMes,
            gastos: gastoMes,
            ahorro: ahorroMes,
            disponible: disponibleFinMes,
            ahorroAcumulado: proyeccion.totalAhorrado
        });
    }
    
    state.objetivosAhorro.forEach(obj => {
        const montoRestante = parseFloat(obj.metaMonto) - parseFloat(obj.montoAhorrado || 0);
        const mesesNecesarios = ahorroMensualObjetivos > 0 ? Math.ceil(montoRestante / ahorroMensualObjetivos) : Infinity;
        
        if (mesesNecesarios <= meses) {
            proyeccion.objetivosAlcanzados.push({
                nombre: obj.nombre,
                mesesNecesarios: mesesNecesarios,
                monto: obj.metaMonto
            });
        }
    });
    
    return proyeccion;
}

function simularEscenario(cambios) {
    const stats = calcularEstadisticas();
    
    const escenario = {
        ingresoMensual: cambios.ingresoMensual || stats.ingresoTotal,
        gastoRecurrente: cambios.gastoRecurrente || stats.totalGastosRecurrentes,
        gastoVariable: cambios.gastoVariable || stats.totalGastosVariables,
        ahorroObjetivos: cambios.ahorroObjetivos || (stats.ahorroDiarioNecesario * 30)
    };
    
    const meses = cambios.meses || 12;
    return proyectarALargoPlazo(meses, escenario);
}

function calcularPlanVital(a√±os) {
    const meses = a√±os * 12;
    const proyeccion = proyectarALargoPlazo(meses);
    
    const hitos = [];
    
    for (let a√±o = 1; a√±o <= a√±os; a√±o++) {
        const mesIndex = (a√±o * 12) - 1;
        if (proyeccion.meses[mesIndex]) {
            hitos.push({
                a√±o: a√±o,
                ahorroAcumulado: proyeccion.meses[mesIndex].ahorroAcumulado,
                disponible: proyeccion.meses[mesIndex].disponible
            });
        }
    }
    
    return {
        proyeccion: proyeccion,
        hitos: hitos,
        objetivosAlcanzables: proyeccion.objetivosAlcanzados
    };
}

