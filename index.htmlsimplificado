function ejecutarSimulacion() {
    const ingreso = parseFloat(document.getElementById('sim-ingreso').value) || 0;
    const recurrente = parseFloat(document.getElementById('sim-recurrente').value) || 0;
    const variable = parseFloat(document.getElementById('sim-variable').value) || 0;
    const ahorro = parseFloat(document.getElementById('sim-ahorro').value) || 0;
    const meses = parseInt(document.getElementById('sim-meses').value) || 12;
    
    const resultado = simularEscenario({
        ingresoMensual: ingreso,
        gastoRecurrente: recurrente,
        gastoVariable: variable,
        ahorroObjetivos: ahorro,
        meses: meses
    });
    
    const mesInicial = resultado.meses[0];
    const mesFinal = resultado.meses[resultado.meses.length - 1];
    const a√±os = Math.floor(meses / 12);
    const mesesRestantes = meses % 12;
    
    let html = `
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
            <div class="bg-gradient-to-br from-green-900/30 to-emerald-900/30 rounded-xl p-4 border border-green-500/30">
                <p class="text-gray-400 text-sm mb-1">üí∞ Dispo√±ible Final</p>
                <p class="text-3xl font-black text-green-400">${mesFinal.disponible.toFixed(2)}‚Ç¨</p>
            </div>
            
            <div class="bg-gradient-to-br from-blue-900/30 to-cyan-900/30 rounded-xl p-4 border border-blue-500/30">
                <p class="text-gray-400 text-sm mb-1">üéØ Aforro Acumulado</p>
                <p class="text-3xl font-black text-blue-400">${resultado.totalAhorrado.toFixed(2)}‚Ç¨</p>
            </div>
            
            <div class="bg-gradient-to-br from-purple-900/30 to-pink-900/30 rounded-xl p-4 border border-purple-500/30">
                <p class="text-gray-400 text-sm mb-1">üìà Aforro Mensual Medio</p>
                <p class="text-3xl font-black text-purple-400">${(resultado.totalAhorrado / meses).toFixed(2)}‚Ç¨</p>
            </div>
        </div>
        
        ${resultado.objetivosAlcanzados.length > 0 ? `
            <div class="bg-gradient-to-r from-yellow-900/20 to-orange-900/20 rounded-xl p-4 border border-yellow-500/30 mb-4">
                <h4 class="text-lg font-bold text-white mb-3">üéâ Obxectivos Alcanzables</h4>
                <div class="space-y-2">
                    ${resultado.objetivosAlcanzados.map(obj => `
                        <div class="flex justify-between items-center">
                            <span class="text-white">‚úÖ ${obj.nombre}</span>
                            <span class="text-yellow-400 font-bold">En ${obj.mesesNecesarios} meses</span>
                        </div>
                    `).join('')}
                </div>
            </div>
        ` : `
            <div class="bg-red-900/20 rounded-xl p-4 border border-red-500/30 mb-4">
                <p class="text-red-400">‚ö†Ô∏è Con este escenario non alcanzar√≠as ning√∫n obxectivo no prazo simulado</p>
            </div>
        `}
        
        <div class="bg-black/30 rounded-xl p-4">
            <h4 class="text-lg font-bold text-white mb-3">üìÖ Hitos Principais</h4>
            <div class="space-y-2 max-h-60 overflow-y-auto">
                ${resultado.meses.filter((m, i) => i % Math.ceil(meses / 10) === 0 || i === meses - 1).map(mes => `
                    <div class="flex justify-between items-center text-sm">
                        <span class="text-gray-400">Mes ${mes.mes}:</span>
                        <div class="flex gap-4">
                            <span class="text-blue-400">Aforro: ${mes.ahorroAcumulado.toFixed(0)}‚Ç¨</span>
                            <span class="text-green-400">Dispo√±ible: ${mes.disponible.toFixed(0)}‚Ç¨</span>
                        </div>
                    </div>
                `).join('')}
            </div>
        </div>
    `;
    
    document.getElementById('datos-simulacion').innerHTML = html;
    document.getElementById('resultados-simulacion').classList.remove('hidden');
}

function mostrarPlanVital() {
    const modal = document.createElement('div');
    modal.className = 'modal-overlay';
    modal.onclick = (e) => { if (e.target === modal) modal.remove(); };
    
    modal.innerHTML = `
        <div class="modal-content p-6" style="max-width: 900px;">
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-2xl font-bold text-white">üåü Plan Vital - Visi√≥n a Longo Prazo</h2>
                <button onclick="this.closest('.modal-overlay').remove()" class="text-gray-400 hover:text-white text-2xl">√ó</button>
            </div>
            
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
                ${[1, 2, 5, 10].map(a√±os => {
                    const plan = calcularPlanVital(a√±os);
                    const hitoFinal = plan.hitos[plan.hitos.length - 1];
                    
                    return `
                        <div class="card-neon rounded-xl p-4 text-center cursor-pointer hover:scale-105 transition-transform" onclick="mostrarDetallePlanVital(${a√±os})">
                            <p class="text-4xl mb-2">üìÖ</p>
                            <p class="text-white font-bold text-lg mb-2">${a√±os} ${a√±os === 1 ? 'Ano' : 'Anos'}</p>
                            <p class="text-gray-400 text-sm mb-1">Aforro Total:</p>
                            <p class="text-2xl font-black text-green-400">${hitoFinal ? hitoFinal.ahorroAcumulado.toFixed(0) : '0'}‚Ç¨</p>
                        </div>
                    `;
                }).join('')}
            </div>
            
            <div id="detalle-plan-vital"></div>
        </div>
    `;
    
    document.body.appendChild(modal);
}

function mostrarDetallePlanVital(a√±os) {
    const plan = calcularPlanVital(a√±os);
    
    let html = `
        <div class="card-neon rounded-2xl p-6">
            <h3 class="text-xl font-bold text-white mb-4">üìä Proxecci√≥n a ${a√±os} ${a√±os === 1 ? 'Ano' : 'Anos'}</h3>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
                <div class="bg-green-900/30 rounded-xl p-4">
                    <p class="text-gray-400 text-sm mb-1">üí∞ Aforro Total</p>
                    <p class="text-3xl font-black text-green-400">${plan.hitos[plan.hitos.length - 1].ahorroAcumulado.toFixed(2)}‚Ç¨</p>
                </div>
                
                <div class="bg-blue-900/30 rounded-xl p-4">
                    <p class="text-gray-400 text-sm mb-1">üìà Dispo√±ible Final</p>
                    <p class="text-3xl font-black text-blue-400">${plan.hitos[plan.hitos.length - 1].disponible.toFixed(2)}‚Ç¨</p>
                </div>
                
                <div class="bg-purple-900/30 rounded-xl p-4">
                    <p class="text-gray-400 text-sm mb-1">üéØ Obxectivos</p>
                    <p class="text-3xl font-black text-purple-400">${plan.objetivosAlcanzables.length}</p>
                </div>
            </div>
            
            <div class="bg-black/30 rounded-xl p-4">
                <h4 class="text-white font-bold mb-3">üìÖ Hitos Anuais</h4>
                <div class="space-y-3">
                    ${plan.hitos.map(hito => `
                        <div class="flex justify-between items-center p-3 bg-black/30 rounded-xl">
                            <span class="text-white font-semibold">Ano ${hito.a√±o}</span>
                            <div class="flex gap-6 text-sm">
                                <span class="text-green-400">Aforro: ${hito.ahorroAcumulado.toFixed(0)}‚Ç¨</span>
                                <span class="text-blue-400">Dispo√±ible: ${hito.disponible.toFixed(0)}‚Ç¨</span>
                            </div>
                        </div>
                    `).join('')}
                </div>
            </div>
            
            ${plan.objetivosAlcanzables.length > 0 ? `
                <div class="bg-yellow-900/20 rounded-xl p-4 border border-yellow-500/30 mt-4">
                    <h4 class="text-white font-bold mb-3">üéâ Obxectivos que Alcanzar√≠as</h4>
                    <div class="space-y-2">
                        ${plan.objetivosAlcanzables.map(obj => `
                            <div class="flex justify-between items-center">
                                <span class="text-white">‚úÖ ${obj.nombre}</span>
                                <span class="text-yellow-400">En ${obj.mesesNecesarios} meses</span>
                            </div>
                        `).join('')}
                    </div>
                </div>
            ` : ''}
        </div>
    `;
    
    document.getElementById('detalle-plan-vital').innerHTML = html;
}

        function cambiarVista(nuevaVista) {
            document.querySelectorAll('.nav-item').forEach(item => {
                item.classList.remove('active');
                if (item.dataset.view === nuevaVista) {
                    item.classList.add('active');
                }
            });
            
            state.vista = nuevaVista;
            render();
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

function mostrarToast(mensaje, tipo = 'success') {
            document.querySelectorAll('.toast').forEach(t => t.remove());
            
            const toast = document.createElement('div');
            toast.className = `toast ${tipo}`;
            toast.textContent = mensaje;
            document.body.appendChild(toast);
            
            setTimeout(() => toast.classList.add('show'), 10);
            
            setTimeout(() => {
                toast.classList.remove('show');
                setTimeout(() => toast.remove(), 300);
            }, 2500);
        }

        function guardarAccion(tipo, datos) {
    const accion = {
        tipo: tipo,
        datos: JSON.parse(JSON.stringify(datos)),
        timestamp: Date.now()
    };
    
    state.historialAcciones.push(accion);
    
    if (state.historialAcciones.length > state.maxHistorial) {
        state.historialAcciones.shift();
    }
}

function deshacer() {
    if (state.historialAcciones.length === 0) {
        mostrarToast('‚ùå Non hai acci√≥ns para desfacer', 'warning');
        return;
    }
    
    const accion = state.historialAcciones.pop();
    
    switch(accion.tipo) {
        case 'agregarGasto':
            state.gastos = state.gastos.filter(g => g.id !== accion.datos.id);
            mostrarToast('‚Ü©Ô∏è Gasto desfeito', 'success');
            break;
            
        case 'eliminarGasto':
            state.gastos.push(accion.datos);
            mostrarToast('‚Ü©Ô∏è Gasto restaurado', 'success');
            break;
            
        case 'agregarIngreso':
            state.ingresos = state.ingresos.filter(i => i.id !== accion.datos.id);
            mostrarToast('‚Ü©Ô∏è Ingreso desfeito', 'success');
            break;
            
        case 'eliminarIngreso':
            state.ingresos.push(accion.datos);
            mostrarToast('‚Ü©Ô∏è Ingreso restaurado', 'success');
            break;
            
        case 'agregarTransferencia':
            state.transferencias = state.transferencias.filter(t => t.id !== accion.datos.id);
            mostrarToast('‚Ü©Ô∏è Transferencia desfeita', 'success');
            break;
            
        case 'eliminarTransferencia':
            state.transferencias.push(accion.datos);
            mostrarToast('‚Ü©Ô∏è Transferencia restaurada', 'success');
            break;
            
        case 'editarGasto':
            const gastoOriginal = state.gastos.find(g => g.id === accion.datos.id);
            if (gastoOriginal) {
                Object.assign(gastoOriginal, accion.datos.estadoAnterior);
            }
            mostrarToast('‚Ü©Ô∏è Edici√≥n desfeita', 'success');
            break;
            
        case 'editarIngreso':
            const ingresoOriginal = state.ingresos.find(i => i.id === accion.datos.id);
            if (ingresoOriginal) {
                Object.assign(ingresoOriginal, accion.datos.estadoAnterior);
            }
            mostrarToast('‚Ü©Ô∏è Edici√≥n desfeita', 'success');
            break;
    }
    
    recalcularSaldosCuentas();
    guardarEstado();
    render();
}

        function obtenerDatosGraficoPeriodo() {
            const { inicioPeriodo, finPeriodo } = obtenerPeriodoPagoActual();
            
            const gastosDelPeriodo = state.gastos.filter(gasto => {
                const fechaGasto = new Date(gasto.fecha);
                return fechaGasto >= inicioPeriodo && fechaGasto <= finPeriodo;
            });
            
            const gastosPorCategoria = {};
            gastosDelPeriodo.forEach(gasto => {
                const categoria = gasto.categoria || 'Outros';
                gastosPorCategoria[categoria] = (gastosPorCategoria[categoria] || 0) + parseFloat(gasto.monto);
            });
            
            return Object.entries(gastosPorCategoria).map(([nombre, valor]) => ({
                nombre,
                valor
            }));
        }

      // FUNCI√ìN RENDER PRINCIPAL
        function render() {
            procesarGastosRecurrentes();
            recalcularSaldosCuentas();
            
            const app = document.getElementById('app');
            const stats = calcularEstadisticas();
            const proyecciones = calcularProyecciones();

            verificarAlertas();

            let html = `
                <div class="max-w-7xl mx-auto">
           <!-- Alertas -->
            ${state.alertasMostradas.length > 0 ? `
                <div class="mb-6 space-y-3">
                    ${state.alertasMostradas.map(alerta => `
                        <div class="card-neon rounded-xl p-4 ${
                            alerta.tipo === 'danger' ? 'border-red-500' : 
                            alerta.tipo === 'warning' ? 'border-yellow-500' : 
                            'border-blue-500'
                        } flex justify-between items-start gap-4">
                            <p class="text-white flex-1">${alerta.mensaje}</p>
                            <button 
                                onclick="
                                    if (!window.alertasCerradas) window.alertasCerradas = [];
                                    window.alertasCerradas.push('${alerta.id}');
                                    render();
                                "
                                class="text-gray-400 hover:text-white transition-colors flex-shrink-0"
                                title="Pechar alerta"
                            >
                                ‚úï
                            </button>
                        </div>
                    `).join('')}
                </div>
            ` : ''}
            `;

            // VISTA PRINCIPAL
          if (state.vista === 'principal') {
                html += `
                    <!-- Saldo Disponible -->
                    <div class="flex justify-center mb-8">
                        <div class="stat-card rounded-3xl p-12 border-4 border-pink-500/50 max-w-2xl w-full text-center pulse-animation">
                            <div class="flex items-center justify-center mb-4">
                                <span class="text-6xl">üìÖ</span>
                            </div>
                            <h2 class="text-2xl font-bold text-gray-300 mb-4">Podes Gastar Hoxe</h2>
                            <p class="text-7xl md:text-8xl font-black text-yellow-400 mb-2">${stats.gastoPorDiaRestante.toFixed(2)}‚Ç¨</p>
                            <p class="text-gray-400 text-lg mb-4">Quedan ${stats.diasRestantes} d√≠as ata cobrar</p>
                            
                            ${stats.ahorroDiarioNecesario > 0 ? `
                                <div class="mt-4 pt-4 border-t border-gray-600/50">
                                    <p class="text-gray-400 text-sm mb-1">üí∞ Sen aforrar obxectivos:</p>
                                    <p class="text-3xl font-bold text-green-400">${stats.gastoPorDiaSinObjetivos.toFixed(2)}‚Ç¨/d√≠a</p>
                                </div>
                                
                                <div class="mt-6 pt-6 border-t border-purple-500/30">
                                    <p class="text-cyan-400 text-xl">
                                        üí° Intenta aforrar ${stats.ahorroDiarioNecesario.toFixed(2)}‚Ç¨ hoxe para os teus obxectivos
                                    </p>
                                </div>
                            ` : ''}
                        </div>
                    </div>

                    <!-- Proyecciones 3 y 6 meses -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                        <div class="card-neon rounded-2xl p-6">
                            <h3 class="text-xl font-bold text-white mb-4">üîÆ Proxecci√≥n a 3 Meses</h3>
                            <p class="text-gray-400 mb-2">Se mant√©s este ritmo:</p>
                            <p class="text-3xl font-black text-green-400">+${proyecciones.proyeccion3Meses.toFixed(2)}‚Ç¨</p>
                            <p class="text-gray-400 text-sm mt-2">Aforro mensual: ${proyecciones.ahorroMensualActual.toFixed(2)}‚Ç¨</p>
                        </div>

                        <div class="card-neon rounded-2xl p-6">
                            <h3 class="text-xl font-bold text-white mb-4">üîÆ Proxecci√≥n a 6 Meses</h3>
                            <p class="text-gray-400 mb-2">Se mant√©s este ritmo:</p>
                            <p class="text-3xl font-black text-green-400">+${(proyecciones.proyeccion3Meses * 2).toFixed(2)}‚Ç¨</p>
                            <p class="text-gray-400 text-sm mt-2">Aforro total: ${(proyecciones.ahorroMensualActual * 6).toFixed(2)}‚Ç¨</p>
                        </div>
                    </div>

                    ${proyecciones.recomendacion ? `
                        <div class="card-neon rounded-2xl p-6 mb-8">
                            <h3 class="text-xl font-bold text-white mb-4">üí° Recomendaci√≥n</h3>
                            <p class="text-gray-400 mb-2">Se reduces un 10% en <span class="text-yellow-400 font-semibold">${proyecciones.recomendacion.categoria}</span>:</p>
                            <p class="text-2xl font-bold text-green-400">+${proyecciones.recomendacion.ahorroPotencial.toFixed(2)}‚Ç¨/mes</p>
                            ${proyecciones.recomendacion.objetivo ? `
                                <p class="text-sm text-gray-400 mt-2">
                                    Lograr√≠as "${proyecciones.recomendacion.objetivo.nombre}" ${proyecciones.recomendacion.objetivo.diasMejor} d√≠as antes
                                </p>
                            ` : ''}
                        </div>
                    ` : ''}

                    <!-- Engadir Gasto -->
                    <div class="card-neon rounded-2xl p-6 mb-8">
                        <h2 class="text-2xl font-bold mb-4 text-white">üí∏ Engadir Gasto</h2>
                        <p class="text-gray-400 text-sm mb-4">üí° Escribe directo: "supermercado 30" ou "gasolina 45.50"</p>
                        
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                           <input 
